{
    "name": "mvc-framework/base",
    "description": "Simple and lightweight PHP MVC Framework with Twig templating, optional database support, and email service",
    "type": "project",
    "keywords": [
        "mvc",
        "framework",
        "php",
        "twig",
        "phpmailer",
        "lightweight"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "MVC Framework",
            "email": "info@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "dompdf/dompdf": "^3.1",
        "phpmailer/phpmailer": "^6.11",
        "twig/twig": "^3.20"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration"
    }
}
