# ============================================
# MVC Framework - Environment Configuration
# ============================================
# Copy this file to .env and configure it according to your environment
#
# On Windows (PowerShell):
#   Copy-Item env.example .env
#
# On Linux/Mac:
#   cp env.example .env

# ============================================
# Database Configuration
# ============================================
# For XAMPP default configuration (leave dbpass empty):
host=localhost
dbname=mvc_framework
dbuser=root
dbpass=

# For custom MySQL configuration, update these values:
# host=localhost
# dbname=your_database_name
# dbuser=your_database_user
# dbpass=your_database_password
#
# Note: Database is optional - framework works without it!
# If you don't configure database, leave dbname empty

# ============================================
# Application Configuration
# ============================================
# Environment: development, staging, production
APP_ENV=development

# Base path if your application is in a subdirectory
# Example: If your app is at http://localhost/MVC/, set BASE_PATH=/MVC
# Leave empty if your app is at the root: http://localhost/
BASE_PATH=

# Maintenance mode: true or false
# When true, shows maintenance page instead of the application
MAINTENANCE_MODE=false

# Disable registration: true or false
# When true, new user registrations are blocked (login always works, registration with token/pioneers ignores this flag)
DISABLE_REGISTRATION=false

# Show launch warning message: true or false
# When true, displays a warning message about being in launch/testing phase
# SHOW_LAUNCH_WARNING=true

# ============================================
# Email Configuration (Optional)
# ============================================
# These are optional - framework works without email configuration
# Leave empty if you don't need email functionality
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@example.com
FROM_NAME=MVC Framework

# Development Email Redirect (Optional)
# In development environment (APP_ENV=development), all emails will be redirected to this address
# Leave empty to disable email redirection in development
# DEV_EMAIL=dev@example.com


# ============================================
# Optional: reCAPTCHA Configuration
# ============================================
# Uncomment and configure if you need reCAPTCHA
# RECAPTCHA_SITE_KEY=your_site_key
# RECAPTCHA_SECRET=your_secret_key

# ============================================
# Google OAuth Configuration (Optional)
# ============================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID credentials
# GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_REDIRECT_URI=auth/google/callback
# Note: GOOGLE_REDIRECT_URI can be:
#   - Relative path (e.g., auth/google/callback) - BASE_PATH will be prepended automatically
#   - Full URL (e.g., http://localhost/predio/auth/google/callback) - used as is
# If not set, defaults to BASE_URL + 'auth/google/callback'

# ============================================
# Payment Service Provider Configuration
# ============================================
# Escolha o PSP: easypay, ifthenpay, unipay, stripe
# PSP_PROVIDER=ifthenpay

# Ambiente: sandbox (testes) ou production (produção)
# PSP_ENVIRONMENT=sandbox

# ============================================
# IfthenPay Configuration
# ============================================
# Credenciais principais IfthenPay
# IFTHENPAY_API_KEY=your_ifthenpay_api_key
# IFTHENPAY_ANTI_PHISHING_KEY=your_anti_phishing_key

# URLs da API IfthenPay
# IFTHENPAY_SANDBOX_URL=https://ifthenpay.com/api/sandbox
# IFTHENPAY_PRODUCTION_URL=https://ifthenpay.com/api

# Multibanco specific (IfthenPay)
# MULTIBANCO_ENTITY=your_entity_code
# MULTIBANCO_SUB_ENTITY=your_sub_entity_code

# MBWay specific (IfthenPay)
# MBWAY_KEY=your_mbway_key

# Direct Debit (Débitos Diretos) specific (IfthenPay)
# IFTHENPAY_DD_KEY=your_direct_debit_key

# ============================================
# Easypay Configuration (Alternativa)
# ============================================
# EASYPAY_API_KEY=your_easypay_api_key
# EASYPAY_USERNAME=your_easypay_username
# EASYPAY_PASSWORD=your_easypay_password
# EASYPAY_SANDBOX_URL=https://api.test.easypay.pt
# EASYPAY_PRODUCTION_URL=https://api.easypay.pt

# ============================================
# Webhook Configuration
# ============================================
# WEBHOOK_BASE_URL=https://seu-dominio.com
# PSP_WEBHOOK_SECRET=your_webhook_secret_key

# ============================================
# Payment Settings
# ============================================
# MULTIBANCO_EXPIRY_DAYS=3
# MBWAY_EXPIRY_MINUTES=30

# ============================================
# Debug Logging Configuration (Optional)
# ============================================
# Control which types of debug logs are enabled
# Set to 'true', '1', 'yes', or 'on' to enable
# Leave empty or set to 'false' to disable (default: disabled)
#
# LOG_DEBUG_ROUTER - Router dispatch logs (URI, routes, matches)
# LOG_DEBUG_EMAIL - Email service debug logs (template rendering, etc.)
# LOG_DEBUG_EMAIL_SEND - Email send success/failure logs
# LOG_DEBUG_PHPMailer - PHPMailer debug output
# LOG_DEBUG_CONTROLLER - Controller debug logs (SuperAdminController, etc.)
# LOG_DEBUG_EMAIL_TEMPLATE - Email template specific debug logs
#
# Examples:
# LOG_DEBUG_ROUTER=true
# LOG_DEBUG_EMAIL=true
# LOG_DEBUG_EMAIL_SEND=true
# LOG_DEBUG_PHPMailer=false
# LOG_DEBUG_CONTROLLER=false
# LOG_DEBUG_EMAIL_TEMPLATE=false

# ============================================
# Addons (admin)
# ============================================
# Set to true or 1 to enable; otherwise addon is disabled (no routes, no menu links)
ADDON_HELP_CHATBOT_ENABLED=false
ADDON_SUPPORT_TICKETS_ENABLED=false