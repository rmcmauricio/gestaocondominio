{# Mapa de Quotas - Bloco Reutilizável #}
{# Variáveis necessárias:
   - condominium: objeto do condomínio (deve ter 'id')
   - fractions: array de frações
   - fees_map: array associativo [month][fraction_id] = fee
   - month_names: array com nomes dos meses (índice 1-12)
   - selected_fees_year: ano selecionado
   - available_years: array de anos disponíveis
   - BASE_URL: URL base (geralmente já disponível globalmente)
#}

<div class="col-12">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h5 class="mb-0 text-light">Quotas</h5>
                <div class="d-flex align-items-center gap-2">
                    <form method="GET" action="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="d-inline" id="feesYearForm">
                        <select name="fees_year" id="fees_year" class="form-select form-select-sm" onchange="this.form.submit()" style="width: auto; display: inline-block;">
                            {% for year in available_years %}
                            <option value="{{ year }}" {% if selected_fees_year == year %}selected{% endif %}>{{ year }}</option>
                            {% endfor %}
                        </select>
                    </form>
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/fees?year={{ selected_fees_year }}" class="btn btn-sm btn-outline-light" title="Ver todas as quotas deste ano">
                        <i class="bi bi-list-ul"></i> Ver
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            {% if fractions %}
            <div class="table-responsive fees-map-table">
                <table class="table table-sm table-bordered table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center fw-bold" style="min-width: 100px;">Fração</th>
                            {% for month in 1..12 %}
                            <th class="text-center" style="min-width: 60px;">{{ month_names[month][:3] }}</th>
                            {% endfor %}
                            <th class="text-center fw-bold" style="min-width: 100px;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for fraction in fractions %}
                        <tr>
                            <td class="fw-bold text-center">
                                <span class="badge bg-secondary">{{ fraction.identifier }}</span>
                            </td>
                            {% set fraction_total = 0 %}
                            {% for month in 1..12 %}
                                {% set month_data = fees_map[month]|default({}) %}
                                {% set fee = month_data[fraction.id]|default(null) %}
                                {% set is_overdue = fee and fee.is_overdue|default(false) %}
                                {% if fee %}
                                    {% set fraction_total = fraction_total + fee.amount %}
                                {% endif %}
                            <td class="text-center align-middle {% if fee %}fee-cell{% if is_overdue %} table-danger{% elseif fee.status == 'paid' %} table-success{% elseif fee.status == 'pending' %} table-warning{% endif %}{% endif %}"
                                {% if fee %}style="cursor: pointer;" onclick="showFeeDetails({{ fee.id }})"{% endif %}
                                {% if fee %}title="{% if is_overdue %}⚠️ Em Atraso - {% endif %}Fração: {{ fee.fraction_identifier }} | {{ month_names[month] }}/{{ selected_fees_year }}{% if fee.due_date %} | Vencimento: {{ fee.due_date|date('d/m/Y') }}{% endif %}{% if fee.paid_amount > 0 %} | Pago: €{{ fee.paid_amount|number_format(2, ',', '.') }}{% endif %} | Valor: €{{ fee.amount|number_format(2, ',', '.') }}"{% endif %}>
                                {% if fee %}
                                    {% if fee.status == 'paid' %}
                                        <i class="bi bi-check-circle-fill text-success" style="font-size: 1.2rem;" title="Pago"></i>
                                    {% elseif is_overdue %}
                                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 1.2rem;" title="Em Atraso"></i>
                                    {% elseif fee.status == 'pending' %}
                                        <i class="bi bi-clock-history text-warning" style="font-size: 1.2rem;" title="Pendente"></i>
                                    {% else %}
                                        <i class="bi bi-circle text-muted" style="font-size: 1.2rem;" title="Sem status"></i>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            {% endfor %}
                            <td class="text-center fw-bold align-middle">
                                {% if fraction_total > 0 %}
                                €{{ fraction_total|number_format(2, ',', '.') }}
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="p-3">
                <p class="text-muted mb-0">Nenhuma fração cadastrada.</p>
            </div>
            {% endif %}
            <div class="p-3 pt-0">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    <strong>Legenda:</strong>
                    <span class="badge bg-success">Pago</span>
                    <span class="badge bg-warning">Pendente</span>
                    <span class="badge bg-danger">Em Atraso</span>
                    | Clique numa célula para ver detalhes da quota
                </small>
            </div>
        </div>
    </div>
</div>
