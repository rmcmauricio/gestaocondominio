<div class="container py-3">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-2">
            <h2 class="h5 mb-0">
                <i class="bi bi-bell"></i> {{ translations.title }}
            </h2>
            {% if unread_count > 0 %}
                <span class="badge bg-danger">{{ unread_count }}</span>
            {% endif %}
        </div>
        {% if notifications|length > 0 %}
            <form method="POST" action="{{ BASE_URL }}notifications/mark-all-read" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-check-all"></i> {{ translations.mark_all_read }}
                </button>
            </form>
        {% endif %}
    </div>

    <!-- Flash Messages -->
    {% if flash_messages.success %}
        <div class="alert alert-success alert-dismissible fade show py-2 mb-3" role="alert">
            <small><i class="bi bi-check-circle me-1"></i>{{ flash_messages.success }}</small>
            <button type="button" class="btn-close btn-close-sm" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    {% if flash_messages.error %}
        <div class="alert alert-danger alert-dismissible fade show py-2 mb-3" role="alert">
            <small><i class="bi bi-exclamation-circle me-1"></i>{{ flash_messages.error }}</small>
            <button type="button" class="btn-close btn-close-sm" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    <!-- Empty State -->
    {% if notifications|length == 0 %}
        <div class="card">
            <div class="card-body text-center py-4">
                <i class="bi bi-bell-slash text-muted" style="font-size: 2.5rem;"></i>
                <p class="text-muted mt-2 mb-0 small">{{ translations.no_notifications }}</p>
            </div>
        </div>
    {% else %}
        <!-- Notifications List - Compact -->
        <div>
            {% for notification in notifications %}
                {% set notification_icon = 'bi-bell' %}
                {% set notification_color = 'primary' %}
                {% if notification.type == 'occurrence' %}
                    {% set notification_icon = 'bi-exclamation-triangle' %}
                    {% set notification_color = 'warning' %}
                {% elseif notification.type == 'assembly' %}
                    {% set notification_icon = 'bi-people' %}
                    {% set notification_color = 'info' %}
                {% elseif notification.type == 'fee_overdue' %}
                    {% set notification_icon = 'bi-currency-euro' %}
                    {% set notification_color = 'danger' %}
                {% elseif notification.type == 'message' or notification.source_type == 'message' %}
                    {% set notification_icon = 'bi-envelope' %}
                    {% set notification_color = 'primary' %}
                {% elseif notification.type == 'occurrence_comment' %}
                    {% set notification_icon = 'bi-chat' %}
                    {% set notification_color = 'success' %}
                {% endif %}

                {% if notification.link %}
                    {% set notification_link = notification.link %}
                    {% if notification.link|slice(0, 4) != 'http' and notification.link|slice(0, BASE_URL|length) != BASE_URL %}
                        {% set notification_link = BASE_URL ~ notification.link|trim('/') %}
                    {% endif %}
                <a href="{{ notification_link }}" class="text-decoration-none" style="color: inherit;">
                {% endif %}
                <div class="card mb-2 shadow-sm {% if not notification.is_read %}border-start border-2 border-{{ notification_color }}{% endif %}" style="border-radius: 0.375rem; {% if notification.link %}cursor: pointer; transition: all 0.2s;{% endif %}" {% if notification.link %}onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 8px rgba(0,0,0,0.15)';" onmouseout="this.style.transform=''; this.style.boxShadow='';"{% endif %}>
                    <div class="card-body" style="padding: 0.5rem 0.75rem;">
                        <div class="d-flex align-items-start gap-2">
                            <!-- Icon -->
                            <div class="flex-shrink-0">
                                <i class="bi {{ notification_icon }} text-{{ notification_color }}" style="font-size: 1rem;"></i>
                            </div>

                            <!-- Content -->
                            <div class="flex-grow-1" style="min-width: 0;">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <div class="d-flex align-items-center gap-2">
                                        <h6 class="mb-0 {% if not notification.is_read %}fw-bold{% endif %}" style="font-size: 0.875rem; line-height: 1.2;">
                                            {{ notification.title }}
                                        </h6>
                                        {% if notification.type == 'occurrence' and notification.priority %}
                                            {% set priority_colors = {
                                                'urgent': 'danger',
                                                'high': 'warning',
                                                'medium': 'info',
                                                'low': 'secondary'
                                            } %}
                                            {% set priority_labels = {
                                                'urgent': 'Urgente',
                                                'high': 'Alta',
                                                'medium': 'Média',
                                                'low': 'Baixa'
                                            } %}
                                            <span class="badge bg-{{ priority_colors[notification.priority]|default('info') }}" style="font-size: 0.65rem; padding: 0.15rem 0.35rem;">
                                                {{ priority_labels[notification.priority]|default('Média') }}
                                            </span>
                                        {% endif %}
                                        {% if not notification.is_read %}
                                            <i class="bi bi-envelope-open text-{{ notification_color }}" style="font-size: 0.875rem;" title="{{ translations.unread }}"></i>
                                        {% endif %}
                                        <div class="d-flex gap-1" onclick="event.stopPropagation();">
                                            {% if not notification.is_read %}
                                                <form method="POST" action="{{ BASE_URL }}notifications/{{ notification.id }}/mark-read" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-success" style="padding: 0.15rem 0.35rem;" title="{{ translations.mark_read }}">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                            {% if notification.source_type == 'notification' %}
                                            <form method="POST" action="{{ BASE_URL }}notifications/{{ notification.id }}/delete" class="d-inline" onsubmit="return confirm('Eliminar esta notificação?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" style="padding: 0.15rem 0.35rem;" title="{{ translations.delete }}">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <p class="mb-1 text-muted small" style="font-size: 0.8rem; line-height: 1.2;">{{ notification.message }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted" style="font-size: 0.7rem;">
                                        <i class="bi bi-clock"></i>
                                        {% set created_at = notification.created_at|date('U') %}
                                        {% set now = 'now'|date('U') %}
                                        {% set diff = now - created_at %}
                                        {% if diff < 60 %}
                                            {{ translations.just_now }}
                                        {% elseif diff < 3600 %}
                                            há {{ (diff / 60)|round }} minutos
                                        {% elseif diff < 86400 %}
                                            há {{ (diff / 3600)|round }} horas
                                        {% elseif diff < 604800 %}
                                            há {{ (diff / 86400)|round }} dias
                                        {% elseif diff < 2592000 %}
                                            há {{ (diff / 604800)|round }} semanas
                                        {% else %}
                                            há {{ (diff / 2592000)|round }} meses
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% if notification.link %}
                </a>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</div>
