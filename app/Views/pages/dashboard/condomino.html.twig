<div class="container mt-4">
    <input type="hidden" id="csrf_token" name="csrf_token" value="{{ csrf_token }}">
    <input type="hidden" id="base_url" value="{{ BASE_URL }}">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info border-0 shadow-sm mb-4 welcome-banner">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-circle welcome-banner-icon"></i>
                    </div>
                    <div>
                        <h4 class="mb-1">Bem-vindo, {{ user.name }}!</h4>
                        <p class="mb-0 welcome-banner-text">Está a visualizar o seu painel de condómino.</p>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Painel Condómino</h1>
                {% include 'blocks/help-button.html.twig' with {'section': 'dashboard', 'title': 'Ajuda com Dashboard', 'show_text': false} %}
            </div>
            
            {% if unread_notifications %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-bell-fill"></i> Notificações Não Lidas</h5>
                        </div>
                        <div class="card-body">
                            <div>
                                {% for notification in unread_notifications %}
                                    {% set notification_icon = 'bi-bell' %}
                                    {% set notification_color = 'primary' %}
                                    {% if notification.type == 'occurrence' %}
                                        {% set notification_icon = 'bi-exclamation-triangle' %}
                                        {% set notification_color = 'warning' %}
                                    {% elseif notification.type == 'assembly' %}
                                        {% set notification_icon = 'bi-people' %}
                                        {% set notification_color = 'info' %}
                                    {% elseif notification.type == 'fee_overdue' %}
                                        {% set notification_icon = 'bi-currency-euro' %}
                                        {% set notification_color = 'danger' %}
                                    {% elseif notification.type == 'message' or notification.source_type == 'message' %}
                                        {% set notification_icon = 'bi-envelope' %}
                                        {% set notification_color = 'primary' %}
                                    {% elseif notification.type == 'occurrence_comment' %}
                                        {% set notification_icon = 'bi-chat' %}
                                        {% set notification_color = 'success' %}
                                    {% elseif notification.type == 'vote' %}
                                        {% set notification_icon = 'bi-check-square' %}
                                        {% set notification_color = 'primary' %}
                                    {% endif %}

                                    {% if notification.link %}
                                        {% set notification_link = notification.link %}
                                        {% if notification.link|slice(0, 4) != 'http' and notification.link|slice(0, BASE_URL|length) != BASE_URL %}
                                            {% set notification_link = BASE_URL ~ notification.link|trim('/') %}
                                        {% endif %}
                                    <a href="{{ notification_link }}" 
                                       class="text-decoration-none notification-link-dashboard" 
                                       style="color: inherit;"
                                       data-notification-id="{{ notification.id }}"
                                       data-is-read="{{ notification.is_read ? '1' : '0' }}">
                                    {% endif %}
                                    <div class="card mb-2 shadow-sm {% if not notification.is_read %}border-start border-2 border-{{ notification_color }}{% endif %}" style="border-radius: 0.375rem; {% if notification.link %}cursor: pointer; transition: all 0.2s;{% endif %}" {% if notification.link %}onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 4px 8px rgba(0,0,0,0.15)';" onmouseout="this.style.transform=''; this.style.boxShadow='';"{% endif %}>
                                        <div class="card-body" style="padding: 0.5rem 0.75rem;">
                                            <div class="d-flex align-items-start gap-2">
                                                <!-- Icon -->
                                                <div class="flex-shrink-0">
                                                    <i class="bi {{ notification_icon }} text-{{ notification_color }}" style="font-size: 1rem;"></i>
                                                </div>

                                                <!-- Content -->
                                                <div class="flex-grow-1" style="min-width: 0;">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <div class="d-flex align-items-center gap-2">
                                                            <h6 class="mb-0 {% if not notification.is_read %}fw-bold{% endif %}" style="font-size: 0.875rem; line-height: 1.2;">
                                                                {{ notification.title }}
                                                            </h6>
                                                            {% if notification.type == 'occurrence' and notification.priority %}
                                                                {% set priority_colors = {
                                                                    'urgent': 'danger',
                                                                    'high': 'warning',
                                                                    'medium': 'info',
                                                                    'low': 'secondary'
                                                                } %}
                                                                {% set priority_labels = {
                                                                    'urgent': 'Urgente',
                                                                    'high': 'Alta',
                                                                    'medium': 'Média',
                                                                    'low': 'Baixa'
                                                                } %}
                                                                <span class="badge bg-{{ priority_colors[notification.priority]|default('info') }}" style="font-size: 0.65rem; padding: 0.15rem 0.35rem;">
                                                                    {{ priority_labels[notification.priority]|default('Média') }}
                                                                </span>
                                                            {% endif %}
                                                            {% if not notification.is_read %}
                                                                <i class="bi bi-envelope-open text-{{ notification_color }}" style="font-size: 0.875rem;" title="Não lida"></i>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <p class="mb-1 text-muted small" style="font-size: 0.8rem; line-height: 1.2;">{{ notification.message }}</p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small class="text-muted" style="font-size: 0.7rem;">
                                                            <i class="bi bi-clock"></i>
                                                            {% set created_at = notification.created_at|date('U') %}
                                                            {% set now = 'now'|date('U') %}
                                                            {% set diff = now - created_at %}
                                                            {% if diff < 60 %}
                                                                agora
                                                            {% elseif diff < 3600 %}
                                                                há {{ (diff / 60)|round }} minutos
                                                            {% elseif diff < 86400 %}
                                                                há {{ (diff / 3600)|round }} horas
                                                            {% elseif diff < 604800 %}
                                                                há {{ (diff / 86400)|round }} dias
                                                            {% elseif diff < 2592000 %}
                                                                há {{ (diff / 604800)|round }} semanas
                                                            {% else %}
                                                                há {{ (diff / 2592000)|round }} meses
                                                            {% endif %}
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% if notification.link %}
                                    </a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            {% if unread_notifications|length >= 10 %}
                            <div class="mt-3 text-center">
                                <a href="{{ BASE_URL }}notifications" class="btn btn-sm btn-outline-primary">
                                    Ver Todas as Notificações <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            {% if open_votes %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-check-square-fill"></i> Votações em Aberto</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                {% for vote in open_votes %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border h-100">
                                        <div class="card-body">
                                            <div class="mb-2">
                                                <small class="text-muted d-block mb-1">
                                                    <i class="bi bi-building text-primary"></i> {{ vote.condominium_name }}
                                                </small>
                                                <h6 class="card-title mb-0">
                                                    <i class="bi bi-clipboard-check text-primary me-2"></i>{{ vote.title }}
                                                </h6>
                                            </div>
                                            {% if vote.description %}
                                            <p class="card-text small text-muted mb-3">{{ vote.description|slice(0, 80) }}{% if vote.description|length > 80 %}...{% endif %}</p>
                                            {% endif %}
                                            
                                            {% set user_vote = user_votes[vote.id]|default(null) %}
                                            {% set options = vote_options_by_vote[vote.id]|default([]) %}
                                            
                                            {% if user_vote %}
                                            <div class="alert alert-success alert-sm py-2 mb-3">
                                                <i class="bi bi-check-circle-fill"></i> 
                                                <small><strong>Votou em: {{ user_vote.option_label }}</strong></small>
                                            </div>
                                            {% else %}
                                            <div class="mb-3">
                                                <small class="text-muted d-block mb-2 fw-bold">Selecione a sua opção:</small>
                                                <div class="d-grid gap-2">
                                                    {% for option in options %}
                                                    <button type="button" 
                                                            class="btn btn-sm btn-outline-primary vote-btn-dashboard" 
                                                            data-vote-id="{{ vote.id }}"
                                                            data-condominium-id="{{ vote.condominium_id }}"
                                                            data-option-id="{{ option.id }}"
                                                            data-option-label="{{ option.option_label }}">
                                                        <i class="bi bi-check-circle me-1"></i>{{ option.option_label }}
                                                    </button>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                            {% endif %}
                                            
                                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                                <small class="text-muted">
                                                    <i class="bi bi-people"></i> 
                                                    <strong>{{ vote.vote_count|default(0) }}</strong> voto{{ vote.vote_count|default(0) != 1 ? 's' : '' }}
                                                </small>
                                                <a href="{{ BASE_URL }}condominiums/{{ vote.condominium_id }}/votes/{{ vote.id }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Ver Detalhes
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            
            {% if user_condominiums %}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-building"></i> Meus Condomínios</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        {% for uc in user_condominiums %}
                        <div class="col-md-6 col-lg-4">
                            <a href="{{ BASE_URL }}condominiums/{{ uc.condominium_id }}" class="text-decoration-none">
                                <div class="card h-100 shadow-sm card-hover border-primary">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0">{{ uc.condominium_name }}</h5>
                                            <span class="badge bg-primary">{{ uc.role|title }}</span>
                                        </div>
                                        {% if uc.fraction_identifier %}
                                        <p class="text-muted mb-2">
                                            <i class="bi bi-house-door"></i> Fração: {{ uc.fraction_identifier }}
                                        </p>
                                        {% endif %}
                                        <div class="mt-auto">
                                            <span class="text-primary">
                                                Aceder <i class="bi bi-arrow-right"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}
            
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Saldo Total</h5>
                            <h3 class="text-primary">€{{ total_pending|number_format(2, ',', '.') }}</h3>
                            <p class="text-muted mb-0">Quotas pendentes</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Quotas Pendentes</h5>
                            <h3 class="text-warning">{{ pending_fees|length }}</h3>
                            <p class="text-muted mb-0">Quotas por pagar</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Meus Condomínios</h5>
                            <h3 class="text-info">{{ user_condominiums|length }}</h3>
                            <p class="text-muted mb-0">Condomínios associados</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Quotas Pendentes</h5>
                        </div>
                        <div class="card-body">
                            {% if pending_fees %}
                                <div class="list-group">
                                    {% for fee in pending_fees %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">Quota {{ fee.period_year }}/{{ fee.period_month|default('N/A') }}</h6>
                                            <strong>€{{ fee.amount|number_format(2, ',', '.') }}</strong>
                                        </div>
                                        <p class="mb-1 text-muted">Vencimento: {{ fee.due_date|date('d/m/Y') }}</p>
                                        {% if fee.reference %}
                                        <small class="text-muted">Ref: {{ fee.reference }}</small>
                                        {% endif %}
                                    </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma quota pendente.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Últimas Despesas</h5>
                        </div>
                        <div class="card-body">
                            {% if recent_expenses %}
                                <div class="list-group">
                                    {% for expense in recent_expenses %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ expense.description }}</h6>
                                            <strong>€{{ expense.amount|number_format(2, ',', '.') }}</strong>
                                        </div>
                                        <p class="mb-1 text-muted">{{ expense.category }} - {{ expense.expense_date|date('d/m/Y') }}</p>
                                    </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma despesa recente.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> As Minhas Reservas</h5>
                            {% if user_condominiums|length > 0 %}
                            {% set first_condominium_id = user_condominiums[0].condominium_id %}
                            <a href="{{ BASE_URL }}condominiums/{{ first_condominium_id }}/reservations" class="btn btn-sm btn-outline-primary">
                                Ver Todas <i class="bi bi-arrow-right"></i>
                            </a>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            {% if user_reservations %}
                                <div class="list-group">
                                    {% for reservation in user_reservations %}
                                    <a href="{{ BASE_URL }}condominiums/{{ reservation.condominium_id }}/reservations" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ reservation.space_name }}</h6>
                                            <span class="badge {% if reservation.status == 'approved' %}bg-success{% elseif reservation.status == 'pending' %}bg-warning{% elseif reservation.status == 'rejected' %}bg-danger{% else %}bg-secondary{% endif %}">
                                                {{ reservation.status|title }}
                                            </span>
                                        </div>
                                        <p class="mb-1 text-muted">
                                            <i class="bi bi-calendar"></i> {{ reservation.start_date|date('d/m/Y H:i') }} - {{ reservation.end_date|date('H:i') }}
                                        </p>
                                        <small class="text-muted">
                                            <i class="bi bi-building"></i> {{ reservation.condominium_name }}
                                            {% if reservation.fraction_identifier %}
                                            | <i class="bi bi-house-door"></i> {{ reservation.fraction_identifier }}
                                            {% endif %}
                                        </small>
                                    </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma reserva encontrada.</p>
                                {% if user_condominiums|length > 0 %}
                                <a href="{{ BASE_URL }}condominiums/{{ user_condominiums[0].condominium_id }}/reservations/create" class="btn btn-sm btn-primary mt-2">
                                    <i class="bi bi-plus-circle"></i> Criar Reserva
                                </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> As Minhas Ocorrências</h5>
                            {% if user_condominiums|length > 0 %}
                            {% set first_condominium_id = user_condominiums[0].condominium_id %}
                            <a href="{{ BASE_URL }}condominiums/{{ first_condominium_id }}/occurrences" class="btn btn-sm btn-outline-primary">
                                Ver Todas <i class="bi bi-arrow-right"></i>
                            </a>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            {% if user_occurrences %}
                                <div class="list-group">
                                    {% for occurrence in user_occurrences %}
                                    <a href="{{ BASE_URL }}condominiums/{{ occurrence.condominium_id }}/occurrences/{{ occurrence.id }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ occurrence.title }}</h6>
                                            <span class="badge {% if occurrence.status == 'resolved' %}bg-success{% elseif occurrence.status == 'in_progress' %}bg-info{% elseif occurrence.priority == 'high' %}bg-danger{% elseif occurrence.priority == 'medium' %}bg-warning{% else %}bg-secondary{% endif %}">
                                                {{ occurrence.status|title }}
                                            </span>
                                        </div>
                                        <p class="mb-1 text-muted">
                                            {{ occurrence.description|slice(0, 80) }}{% if occurrence.description|length > 80 %}...{% endif %}
                                        </p>
                                        <small class="text-muted">
                                            <i class="bi bi-building"></i> {{ occurrence.condominium_name }}
                                            {% if occurrence.fraction_identifier %}
                                            | <i class="bi bi-house-door"></i> {{ occurrence.fraction_identifier }}
                                            {% endif %}
                                            | <i class="bi bi-clock"></i> {{ occurrence.created_at|date('d/m/Y') }}
                                        </small>
                                    </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma ocorrência encontrada.</p>
                                {% if user_condominiums|length > 0 %}
                                <a href="{{ BASE_URL }}condominiums/{{ user_condominiums[0].condominium_id }}/occurrences/create" class="btn btn-sm btn-primary mt-2">
                                    <i class="bi bi-plus-circle"></i> Criar Ocorrência
                                </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            {% if recent_documents %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Documentos Recentes</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Título</th>
                                            <th>Pasta</th>
                                            <th>Tipo</th>
                                            <th>Data</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for document in recent_documents %}
                                        <tr>
                                            <td>
                                                <strong>{{ document.title }}</strong>
                                                {% if document.description %}
                                                    <br><small class="text-muted">{{ document.description|slice(0, 50) }}{% if document.description|length > 50 %}...{% endif %}</small>
                                                {% endif %}
                                            </td>
                                            <td>{{ document.folder|default('-') }}</td>
                                            <td><span class="badge bg-secondary">{{ document.document_type|default('Documento') }}</span></td>
                                            <td>{{ document.created_at|date('d/m/Y') }}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ BASE_URL }}condominiums/{{ document.condominium_id }}/documents/{{ document.id }}/view" class="btn btn-outline-info" title="Visualizar">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ BASE_URL }}condominiums/{{ document.condominium_id }}/documents/{{ document.id }}/download" class="btn btn-outline-primary" title="Download">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}


            {% if recent_vote_results %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Resultados das Últimas Votações</h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                {% for vote in recent_vote_results %}
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <small class="text-muted d-block mb-1">
                                                <i class="bi bi-building text-primary"></i> {{ vote.condominium_name }}
                                            </small>
                                            <h6 class="card-title mb-2">{{ vote.title }}</h6>
                                            <small class="text-muted d-block mb-2">
                                                <i class="bi bi-calendar-check"></i> Encerrada em {{ vote.voting_ended_at|date('d/m/Y') }}
                                            </small>
                                            
                                            {% if vote.results %}
                                                {% set total_votes = 0 %}
                                                {% for result in vote.results %}
                                                    {% set total_votes = total_votes + result.vote_count %}
                                                {% endfor %}
                                                
                                                {% for result in vote.results %}
                                                <div class="mb-2">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <small><strong>{{ result.option_label }}</strong></small>
                                                        <small>
                                                            {% if total_votes > 0 %}
                                                                {{ ((result.vote_count / total_votes) * 100)|number_format(1) }}%
                                                            {% else %}
                                                                0%
                                                            {% endif %}
                                                        </small>
                                                    </div>
                                                    <div class="progress" style="height: 15px;">
                                                        <div class="progress-bar" role="progressbar" 
                                                             style="width: {% if total_votes > 0 %}{{ ((result.vote_count / total_votes) * 100)|number_format(1) }}{% else %}0{% endif %}%"
                                                             aria-valuenow="{{ result.vote_count }}" 
                                                             aria-valuemin="0" 
                                                             aria-valuemax="{{ total_votes }}">
                                                        </div>
                                                    </div>
                                                    <small class="text-muted">{{ result.vote_count }} voto{{ result.vote_count != 1 ? 's' : '' }}</small>
                                                </div>
                                                {% endfor %}
                                                
                                                <hr class="my-2">
                                                <div class="text-center">
                                                    <small><strong>Total: {{ total_votes }} voto{{ total_votes != 1 ? 's' : '' }}</strong></small>
                                                </div>
                                            {% else %}
                                                <p class="text-muted small mb-0">Nenhum voto registado.</p>
                                            {% endif %}
                                            
                                            <div class="mt-2">
                                                <a href="{{ BASE_URL }}condominiums/{{ vote.condominium_id }}/votes/{{ vote.id }}" class="btn btn-sm btn-outline-primary w-100">
