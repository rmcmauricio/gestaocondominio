<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-info border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-circle" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h4 class="mb-1" style="color: white;">Bem-vindo, {{ user.name }}!</h4>
                        <p class="mb-0" style="color: rgba(255, 255, 255, 0.9);">Está a visualizar o seu painel de condómino.</p>
                    </div>
                </div>
            </div>
            
            <h1 class="mb-4">Painel Condómino</h1>
            
            {% if user_condominiums %}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-building"></i> Meus Condomínios</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        {% for uc in user_condominiums %}
                        <div class="col-md-6 col-lg-4">
                            <a href="{{ BASE_URL }}condominiums/{{ uc.condominium_id }}" class="text-decoration-none">
                                <div class="card h-100 shadow-sm card-hover border-primary">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0">{{ uc.condominium_name }}</h5>
                                            <span class="badge bg-primary">{{ uc.role|title }}</span>
                                        </div>
                                        {% if uc.fraction_identifier %}
                                        <p class="text-muted mb-2">
                                            <i class="bi bi-house-door"></i> Fração: {{ uc.fraction_identifier }}
                                        </p>
                                        {% endif %}
                                        <div class="mt-auto">
                                            <span class="text-primary">
                                                Aceder <i class="bi bi-arrow-right"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}
            
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Saldo Total</h5>
                            <h3 class="text-primary">€{{ total_pending|number_format(2, ',', '.') }}</h3>
                            <p class="text-muted mb-0">Quotas pendentes</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Quotas Pendentes</h5>
                            <h3 class="text-warning">{{ pending_fees|length }}</h3>
                            <p class="text-muted mb-0">Quotas por pagar</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Meus Condomínios</h5>
                            <h3 class="text-info">{{ user_condominiums|length }}</h3>
                            <p class="text-muted mb-0">Condomínios associados</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Quotas Pendentes</h5>
                        </div>
                        <div class="card-body">
                            {% if pending_fees %}
                                <div class="list-group">
                                    {% for fee in pending_fees %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">Quota {{ fee.period_year }}/{{ fee.period_month|default('N/A') }}</h6>
                                            <strong>€{{ fee.amount|number_format(2, ',', '.') }}</strong>
                                        </div>
                                        <p class="mb-1 text-muted">Vencimento: {{ fee.due_date|date('d/m/Y') }}</p>
                                        {% if fee.reference %}
                                        <small class="text-muted">Ref: {{ fee.reference }}</small>
                                        {% endif %}
                                    </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma quota pendente.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5>Últimas Despesas</h5>
                        </div>
                        <div class="card-body">
                            {% if recent_expenses %}
                                <div class="list-group">
                                    {% for expense in recent_expenses %}
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ expense.description }}</h6>
                                            <strong>€{{ expense.amount|number_format(2, ',', '.') }}</strong>
                                        </div>
                                        <p class="mb-1 text-muted">{{ expense.category }} - {{ expense.expense_date|date('d/m/Y') }}</p>
                                    </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma despesa recente.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> As Minhas Reservas</h5>
                            {% if user_condominiums|length > 0 %}
                            {% set first_condominium_id = user_condominiums[0].condominium_id %}
                            <a href="{{ BASE_URL }}condominiums/{{ first_condominium_id }}/reservations" class="btn btn-sm btn-outline-primary">
                                Ver Todas <i class="bi bi-arrow-right"></i>
                            </a>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            {% if user_reservations %}
                                <div class="list-group">
                                    {% for reservation in user_reservations %}
                                    <a href="{{ BASE_URL }}condominiums/{{ reservation.condominium_id }}/reservations" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ reservation.space_name }}</h6>
                                            <span class="badge {% if reservation.status == 'approved' %}bg-success{% elseif reservation.status == 'pending' %}bg-warning{% elseif reservation.status == 'rejected' %}bg-danger{% else %}bg-secondary{% endif %}">
                                                {{ reservation.status|title }}
                                            </span>
                                        </div>
                                        <p class="mb-1 text-muted">
                                            <i class="bi bi-calendar"></i> {{ reservation.start_date|date('d/m/Y H:i') }} - {{ reservation.end_date|date('H:i') }}
                                        </p>
                                        <small class="text-muted">
                                            <i class="bi bi-building"></i> {{ reservation.condominium_name }}
                                            {% if reservation.fraction_identifier %}
                                            | <i class="bi bi-house-door"></i> {{ reservation.fraction_identifier }}
                                            {% endif %}
                                        </small>
                                    </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma reserva encontrada.</p>
                                {% if user_condominiums|length > 0 %}
                                <a href="{{ BASE_URL }}condominiums/{{ user_condominiums[0].condominium_id }}/reservations/create" class="btn btn-sm btn-primary mt-2">
                                    <i class="bi bi-plus-circle"></i> Criar Reserva
                                </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> As Minhas Ocorrências</h5>
                            {% if user_condominiums|length > 0 %}
                            {% set first_condominium_id = user_condominiums[0].condominium_id %}
                            <a href="{{ BASE_URL }}condominiums/{{ first_condominium_id }}/occurrences" class="btn btn-sm btn-outline-primary">
                                Ver Todas <i class="bi bi-arrow-right"></i>
                            </a>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            {% if user_occurrences %}
                                <div class="list-group">
                                    {% for occurrence in user_occurrences %}
                                    <a href="{{ BASE_URL }}condominiums/{{ occurrence.condominium_id }}/occurrences/{{ occurrence.id }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">{{ occurrence.title }}</h6>
                                            <span class="badge {% if occurrence.status == 'resolved' %}bg-success{% elseif occurrence.status == 'in_progress' %}bg-info{% elseif occurrence.priority == 'high' %}bg-danger{% elseif occurrence.priority == 'medium' %}bg-warning{% else %}bg-secondary{% endif %}">
                                                {{ occurrence.status|title }}
                                            </span>
                                        </div>
                                        <p class="mb-1 text-muted">
                                            {{ occurrence.description|slice(0, 80) }}{% if occurrence.description|length > 80 %}...{% endif %}
                                        </p>
                                        <small class="text-muted">
                                            <i class="bi bi-building"></i> {{ occurrence.condominium_name }}
                                            {% if occurrence.fraction_identifier %}
                                            | <i class="bi bi-house-door"></i> {{ occurrence.fraction_identifier }}
                                            {% endif %}
                                            | <i class="bi bi-clock"></i> {{ occurrence.created_at|date('d/m/Y') }}
                                        </small>
                                    </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted mb-0">Nenhuma ocorrência encontrada.</p>
                                {% if user_condominiums|length > 0 %}
                                <a href="{{ BASE_URL }}condominiums/{{ user_condominiums[0].condominium_id }}/occurrences/create" class="btn btn-sm btn-primary mt-2">
                                    <i class="bi bi-plus-circle"></i> Criar Ocorrência
                                </a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            {% if recent_documents %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Documentos Recentes</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Título</th>
                                            <th>Pasta</th>
                                            <th>Tipo</th>
                                            <th>Data</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for document in recent_documents %}
                                        <tr>
                                            <td>
                                                <strong>{{ document.title }}</strong>
                                                {% if document.description %}
                                                    <br><small class="text-muted">{{ document.description|slice(0, 50) }}{% if document.description|length > 50 %}...{% endif %}</small>
                                                {% endif %}
                                            </td>
                                            <td>{{ document.folder|default('-') }}</td>
                                            <td><span class="badge bg-secondary">{{ document.document_type|default('Documento') }}</span></td>
                                            <td>{{ document.created_at|date('d/m/Y') }}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ BASE_URL }}condominiums/{{ document.condominium_id }}/documents/{{ document.id }}/view" class="btn btn-outline-info" title="Visualizar">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ BASE_URL }}condominiums/{{ document.condominium_id }}/documents/{{ document.id }}/download" class="btn btn-outline-primary" title="Download">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

