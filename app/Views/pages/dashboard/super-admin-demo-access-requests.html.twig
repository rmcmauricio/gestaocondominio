<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0"><i class="bi bi-rocket-takeoff"></i> Solicitações de Acesso à Demo</h1>
                <a href="{{ BASE_URL }}dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar ao Dashboard
                </a>
            </div>

            {% if messages.success %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>{{ messages.success }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {% endif %}

            {% if messages.error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>{{ messages.error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {% endif %}

            {% if stats %}
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-2">Total</h6>
                            <h3 class="mb-0">{{ stats.total }}</h3>
                            <small class="text-muted">Solicitações</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-success">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-2">Pendentes</h6>
                            <h3 class="mb-0 text-success">{{ stats.pending }}</h3>
                            <small class="text-muted">Aguardando uso</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-primary">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-2">Utilizadas</h6>
                            <h3 class="mb-0 text-primary">{{ stats.used }}</h3>
                            <small class="text-muted">Já acedidas</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card border-warning">
                        <div class="card-body">
                            <h6 class="card-title text-muted mb-2">Expiradas</h6>
                            <h3 class="mb-0 text-warning">{{ stats.expired }}</h3>
                            <small class="text-muted">Válidas por 24h</small>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Lista de Solicitações</h5>
                        <div class="d-flex align-items-center gap-3">
                            {% if pagination %}
                            <div class="d-flex align-items-center">
                                <label for="per_page_select" class="text-white me-2 mb-0" style="font-size: 0.875rem;">Por página:</label>
                                <select id="per_page_select" class="form-select form-select-sm" style="width: auto;" onchange="changePerPage(this.value)">
                                    <option value="25" {% if pagination.per_page == 25 %}selected{% endif %}>25</option>
                                    <option value="50" {% if pagination.per_page == 50 %}selected{% endif %}>50</option>
                                    <option value="100" {% if pagination.per_page == 100 %}selected{% endif %}>100</option>
                                    <option value="200" {% if pagination.per_page == 200 %}selected{% endif %}>200</option>
                                </select>
                            </div>
                            {% endif %}
                            <span class="badge bg-light text-dark">{{ pagination.total_count|default(requests|length) }} total</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% if requests and requests|length > 0 %}
                    <form id="bulkDeleteForm" method="POST" action="{{ BASE_URL }}admin/demo-access-requests/delete">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="bulk_delete" value="1">
                        
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div>
                                <button type="button" class="btn btn-sm btn-outline-danger" id="bulkDeleteBtn" disabled onclick="confirmBulkDelete()">
                                    <i class="bi bi-trash"></i> Eliminar Selecionados (Expirados)
                                </button>
                                <span class="ms-2 text-muted small" id="selectedCount">0 selecionados</span>
                            </div>
                        </div>
                    </form>
                    
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">
                                        <input type="checkbox" id="selectAll" title="Selecionar todos">
                                    </th>
                                    <th>Email</th>
                                    <th>Data de Solicitação</th>
                                    <th>Expira em</th>
                                    <th>Status</th>
                                    <th>Newsletter</th>
                                    <th>IP</th>
                                    <th>Token</th>
                                    <th style="width: 100px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for request in requests %}
                                {% set expires = request.expires_at ? request.expires_at|date('U') : null %}
                                {% set now = 'now'|date('U') %}
                                {% set isExpired = expires and expires < now %}
                                {% set canDelete = isExpired and not request.wants_newsletter %}
                                <tr data-request-id="{{ request.id }}" data-can-delete="{{ canDelete ? '1' : '0' }}" data-is-expired="{{ isExpired ? '1' : '0' }}" data-has-newsletter="{{ request.wants_newsletter ? '1' : '0' }}">
                                    <td>
                                        {% if canDelete %}
                                        <input type="checkbox" class="request-checkbox" name="selected_ids[]" value="{{ request.id }}" onchange="updateBulkDeleteButton()">
                                        {% else %}
                                        <span class="text-muted" title="{% if request.wants_newsletter %}Subscrito à newsletter{% elseif not isExpired %}Ainda não expirado{% endif %}">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <strong>{{ request.email }}</strong>
                                    </td>
                                    <td>
                                        {{ request.created_at|date('d/m/Y H:i') }}
                                    </td>
                                    <td>
                                        {% if request.expires_at %}
                                            {% set expires = request.expires_at|date('U') %}
                                            {% set now = 'now'|date('U') %}
                                            {% if expires < now %}
                                                <span class="text-danger">
                                                    <i class="bi bi-x-circle"></i> Expirado
                                                </span>
                                                <br><small class="text-muted">{{ request.expires_at|date('d/m/Y H:i') }}</small>
                                            {% else %}
                                                {{ request.expires_at|date('d/m/Y H:i') }}
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if request.used_at %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Utilizado
                                            </span>
                                            <br><small class="text-muted">{{ request.used_at|date('d/m/Y H:i') }}</small>
                                        {% elseif request.expires_at %}
                                            {% set expires = request.expires_at|date('U') %}
                                            {% set now = 'now'|date('U') %}
                                            {% if expires < now %}
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-clock-history"></i> Expirado
                                                </span>
                                            {% else %}
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-hourglass-split"></i> Pendente
                                                </span>
                                            {% endif %}
                                        {% else %}
                                            <span class="badge bg-warning">
                                                <i class="bi bi-hourglass-split"></i> Pendente
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if request.wants_newsletter %}
                                            <span class="badge bg-info">
                                                <i class="bi bi-envelope-check"></i> Sim
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-envelope-x"></i> Não
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if request.ip_address %}
                                            <code class="small">{{ request.ip_address }}</code>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <code class="small" style="font-size: 0.75rem;">{{ request.token|slice(0, 16) }}...</code>
                                        <button 
                                            class="btn btn-sm btn-outline-secondary ms-1" 
                                            onclick="copyToClipboard('{{ request.token }}')"
                                            title="Copiar token completo"
                                        >
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </td>
                                    <td>
                                        {% if canDelete %}
                                        <form method="POST" action="{{ BASE_URL }}admin/demo-access-requests/delete" style="display: inline;" onsubmit="return confirm('Tem a certeza que deseja eliminar este token expirado?');">
                                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                            <input type="hidden" name="delete_id" value="{{ request.id }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar token expirado">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                        {% else %}
                                        <span class="text-muted small" title="{% if request.wants_newsletter %}Protegido (subscrito à newsletter){% elseif not isExpired %}Ainda não expirado{% endif %}">
                                            <i class="bi bi-shield-lock"></i>
                                        </span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% if pagination and pagination.total_pages > 1 %}
                    <!-- Pagination -->
                    <nav aria-label="Paginação" class="mt-4">
                        <ul class="pagination justify-content-center">
                            {% set baseParams = [] %}
                            {% if pagination.per_page %}{% set baseParams = baseParams|merge(['per_page=' ~ pagination.per_page]) %}{% endif %}
                            {% set baseQuery = baseParams|join('&') %}
                            
                            <!-- Previous Button -->
                            {% if pagination.current_page > 1 %}
                                {% set prevPage = pagination.current_page - 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{ prevPage }}{% if baseQuery %}&{{ baseQuery }}{% endif %}" aria-label="Anterior">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link" aria-label="Anterior">
                                        <span aria-hidden="true">&laquo;</span>
                                    </span>
                                </li>
                            {% endif %}
                            
                            <!-- Page Numbers -->
                            {% set startPage = max(1, pagination.current_page - 2) %}
                            {% set endPage = min(pagination.total_pages, pagination.current_page + 2) %}
                            
                            {% if startPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="?page=1{% if baseQuery %}&{{ baseQuery }}{% endif %}">1</a>
                                </li>
                                {% if startPage > 2 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                            {% endif %}
                            
                            {% for i in startPage..endPage %}
                                <li class="page-item {% if i == pagination.current_page %}active{% endif %}">
                                    <a class="page-link" href="?page={{ i }}{% if baseQuery %}&{{ baseQuery }}{% endif %}">
                                        {{ i }}
                                    </a>
                                </li>
                            {% endfor %}
                            
                            {% if endPage < pagination.total_pages %}
                                {% if endPage < pagination.total_pages - 1 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{ pagination.total_pages }}{% if baseQuery %}&{{ baseQuery }}{% endif %}">
                                        {{ pagination.total_pages }}
                                    </a>
                                </li>
                            {% endif %}
                            
                            <!-- Next Button -->
                            {% if pagination.current_page < pagination.total_pages %}
                                {% set nextPage = pagination.current_page + 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{ nextPage }}{% if baseQuery %}&{{ baseQuery }}{% endif %}" aria-label="Próximo">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link" aria-label="Próximo">
                                        <span aria-hidden="true">&raquo;</span>
                                    </span>
                                </li>
                            {% endif %}
                        </ul>
                        
                        <!-- Pagination Info -->
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                {% set startRecord = (pagination.current_page - 1) * pagination.per_page + 1 %}
                                {% set endRecord = min(pagination.current_page * pagination.per_page, pagination.total_count) %}
                                Mostrando {{ startRecord }} a {{ endRecord }} de {{ pagination.total_count }} registos
                                (Página {{ pagination.current_page }} de {{ pagination.total_pages }})
                            </small>
                        </div>
                    </nav>
                    {% endif %}
                    {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                        <p class="text-muted mt-3">Nenhuma solicitação encontrada.</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informações</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li><strong>Pendente:</strong> Token válido que ainda não foi utilizado.</li>
                        <li><strong>Utilizado:</strong> Token que já foi usado para aceder à demo.</li>
                        <li><strong>Expirado:</strong> Token que passou do prazo de validade (24 horas).</li>
                        <li>Os tokens são válidos por 24 horas após a criação.</li>
                        <li>Cada token só pode ser usado uma vez.</li>
                        <li>Os utilizadores que marcaram "Newsletter" também foram adicionados à lista de newsletter.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        // Show temporary success feedback
        const btn = event.target.closest('button');
        const originalHTML = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check"></i>';
        btn.classList.remove('btn-outline-secondary');
        btn.classList.add('btn-success');
        
        setTimeout(function() {
            btn.innerHTML = originalHTML;
            btn.classList.remove('btn-success');
            btn.classList.add('btn-outline-secondary');
        }, 2000);
    }).catch(function(err) {
        console.error('Erro ao copiar:', err);
        alert('Erro ao copiar token');
    });
}

function changePerPage(value) {
    const url = new URL(window.location.href);
    url.searchParams.set('per_page', value);
    url.searchParams.set('page', '1'); // Reset to first page when changing per_page
    window.location.href = url.toString();
}

// Bulk delete functionality
function updateBulkDeleteButton() {
    const checkboxes = document.querySelectorAll('.request-checkbox:checked');
    const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');
    const selectedCount = document.getElementById('selectedCount');
    
    const count = checkboxes.length;
    bulkDeleteBtn.disabled = count === 0;
    selectedCount.textContent = count > 0 ? `${count} selecionado${count > 1 ? 's' : ''}` : '0 selecionados';
}

function confirmBulkDelete() {
    const checkboxes = document.querySelectorAll('.request-checkbox:checked');
    if (checkboxes.length === 0) {
        alert('Por favor, selecione pelo menos um token para eliminar.');
        return;
    }
    
    const count = checkboxes.length;
    if (confirm(`Tem a certeza que deseja eliminar ${count} token${count > 1 ? 's' : ''} expirado${count > 1 ? 's' : ''}?\n\nNota: Tokens de utilizadores subscritos à newsletter serão mantidos automaticamente.`)) {
        document.getElementById('bulkDeleteForm').submit();
    }
}

// Select all functionality
document.addEventListener('DOMContentLoaded', function() {
    const selectAllCheckbox = document.getElementById('selectAll');
    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.request-checkbox');
            checkboxes.forEach(checkbox => {
                if (this.checked) {
                    // Only check deletable items
                    const row = checkbox.closest('tr');
                    if (row && row.dataset.canDelete === '1') {
                        checkbox.checked = true;
                    }
                } else {
                    checkbox.checked = false;
                }
            });
            updateBulkDeleteButton();
        });
    }
    
    // Update button state on page load
    updateBulkDeleteButton();
});
</script>
