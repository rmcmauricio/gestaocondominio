                                {% if document.folder %}
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents?folder={{ document.folder|url_encode }}" class="text-decoration-none">
                                        <i class="bi bi-folder"></i> {{ document.folder }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td><span class="badge bg-secondary">{{ document.document_type|default('Documento') }}</span></td>
                            <td>
                                {% if document.file_size %}
                                    {{ (document.file_size / 1024)|round(2) }} KB
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ document.uploaded_by_name|default('N/A') }}</td>
                            <td>{{ document.created_at|date('d/m/Y') }}</td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/view" class="btn btn-outline-info btn-sm" title="Visualizar">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/download" class="btn btn-outline-primary btn-sm" title="Download">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    {% if current_condominium_role == 'admin' or not current_condominium_role %}
                                    <button type="button" class="btn btn-outline-warning btn-sm" title="Mover" data-bs-toggle="modal" data-bs-target="#moveModal{{ document.id }}">
                                        <i class="bi bi-folder-symlink"></i>
                                    </button>
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/edit" class="btn btn-outline-secondary btn-sm" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/delete" class="d-inline" onsubmit="return confirm('Tem certeza que deseja remover este documento?');">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-search display-1 text-muted"></i>
            <h4 class="mt-3">Nenhum resultado encontrado</h4>
            <p class="text-muted">Não foram encontrados documentos correspondentes à busca "{{ current_search }}".</p>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Voltar aos Documentos
            </a>
        </div>
    </div>
    {% endif %}
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>

<!-- Create Folder Modal -->
{% if current_condominium_role == 'admin' or not current_condominium_role %}
<div class="modal fade" id="createFolderModal" tabindex="-1" aria-labelledby="createFolderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/folders/create">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="from_index" value="1">
                <div class="modal-header">
                    <h5 class="modal-title" id="createFolderModalLabel">
                        <i class="bi bi-folder-plus"></i> Criar Nova Pasta
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="create_parent_folder" class="form-label">Criar em:</label>
                        <select class="form-select" id="create_parent_folder" name="parent_folder">
                            {% if current_folder %}
                            <option value="{{ current_folder }}" selected>Pasta atual: {{ current_folder }}</option>
                            <option value="">Raiz (Documentos)</option>
                            {% else %}
                            <option value="" selected>Raiz (Documentos)</option>
                            {% endif %}
                            {% if all_folders %}
                                {% for folder in all_folders %}
                                    {% if not current_folder or folder.folder != current_folder %}
                                    <option value="{{ folder.folder }}">{{ folder.folder }}</option>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </select>
                        <small class="form-text text-muted">Selecione onde criar a nova pasta.</small>
                    </div>
                    <div class="mb-3">
                        <label for="create_folder_name" class="form-label">Nome da Pasta</label>
                        <input type="text" class="form-control" id="create_folder_name" name="folder_name" required placeholder="Ex: Assembleias, Contratos, Finanças">
                        <small class="form-text text-muted">Não use os caracteres: &lt; &gt; : " | ? * \</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-folder-plus"></i> Criar Pasta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endif %}

<!-- Move Document Modals -->
{% if current_condominium_role == 'admin' or not current_condominium_role %}
{% for document in documents %}
<div class="modal fade" id="moveModal{{ document.id }}" tabindex="-1" aria-labelledby="moveModalLabel{{ document.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="moveModalLabel{{ document.id }}">Mover Documento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="moveForm{{ document.id }}" onsubmit="moveDocument(event, {{ document.id }}, {{ condominium.id }}); return false;">
                <div class="modal-body">
                    <p><strong>{{ document.title }}</strong></p>
                    <div class="mb-3">
                        <label for="target_folder{{ document.id }}" class="form-label">Mover para pasta:</label>
                        <select class="form-select" id="target_folder{{ document.id }}" name="target_folder" required>
                            <option value="">Raiz (sem pasta)</option>
                            {% if all_folders %}
                                {% for folder in all_folders %}
                                <option value="{{ folder.path }}" {% if document.folder == folder.path %}selected{% endif %}>
                                    {{ folder.path }}
                                </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-folder-symlink"></i> Mover
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endfor %}
{% endif %}

<script>
function moveDocument(event, documentId, condominiumId) {
    event.preventDefault();
    const form = event.target;
    const formData = new FormData(form);
    formData.append('csrf_token', '{{ csrf_token }}');
    
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> A mover...';
    
    fetch('{{ BASE_URL }}condominiums/' + condominiumId + '/documents/' + documentId + '/move', {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('moveModal' + documentId));
            modal.hide();
            
            // Reload page after short delay
            setTimeout(() => {
                window.location.reload();
            }, 500);
        } else {
            alert('Erro: ' + (data.error || 'Erro ao mover documento'));
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Erro ao mover documento. Por favor, tente novamente.');
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    });
}
</script>





