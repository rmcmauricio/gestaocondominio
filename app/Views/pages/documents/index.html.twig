<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Documentos</h2>
            <p class="text-muted mb-0">{{ condominium.name }}</p>
        </div>
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/create" class="btn btn-primary">
            <i class="bi bi-upload"></i> Upload Documento
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if folders %}
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h6 class="mb-0">Pastas</h6>
        </div>
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents" class="btn btn-outline-secondary btn-sm">
                    Todas
                </a>
                {% for folder in folders %}
                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents?folder={{ folder.folder }}" class="btn btn-outline-primary btn-sm">
                    {{ folder.folder }} ({{ folder.document_count }})
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    {% if documents %}
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Pasta</th>
                            <th>Tipo</th>
                            <th>Tamanho</th>
                            <th>Upload por</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for document in documents %}
                        <tr>
                            <td>
                                <strong>{{ document.title }}</strong>
                                {% if document.description %}
                                    <br><small class="text-muted">{{ document.description }}</small>
                                {% endif %}
                            </td>
                            <td>{{ document.folder|default('-') }}</td>
                            <td><span class="badge bg-secondary">{{ document.document_type|default('Documento') }}</span></td>
                            <td>
                                {% if document.file_size %}
                                    {{ (document.file_size / 1024)|round(2) }} KB
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ document.uploaded_by_name|default('N/A') }}</td>
                            <td>{{ document.created_at|date('d/m/Y') }}</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/download" class="btn btn-outline-primary">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/delete" class="d-inline" onsubmit="return confirm('Tem certeza que deseja remover este documento?');">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-folder display-1 text-muted"></i>
            <h4 class="mt-3">Nenhum documento encontrado</h4>
            <p class="text-muted">Comece fazendo upload do primeiro documento</p>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/create" class="btn btn-primary">
                <i class="bi bi-upload"></i> Upload Documento
            </a>
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>





