<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Upload de Documento</h4>
                    <small>{{ condominium.name }}</small>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endif %}

                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                        <div class="mb-3">
                            <label for="file" class="form-label">Ficheiro <span class="text-danger">*</span></label>
                            <input type="file" class="form-control" id="file" name="file" required accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.txt">
                            <div class="form-text">Formatos aceites: PDF, DOC, DOCX, XLS, XLSX, JPG, PNG, TXT (máx. 10MB)</div>
                        </div>

                        <div class="mb-3">
                            <label for="title" class="form-label">Título <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="title" name="title" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descrição</label>
                            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="folder" class="form-label">Pasta</label>
                                <input type="text" class="form-control" id="folder" name="folder" placeholder="Ex: Assembleias, Contratos, Finanças">
                                <div class="form-text">Deixe vazio para a pasta raiz</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="document_type" class="form-label">Tipo</label>
                                <select class="form-select" id="document_type" name="document_type">
                                    <option value="">Selecione...</option>
                                    <option value="Assembleia">Assembleia</option>
                                    <option value="Contrato">Contrato</option>
                                    <option value="Fatura">Fatura</option>
                                    <option value="Orçamento">Orçamento</option>
                                    <option value="Regulamento">Regulamento</option>
                                    <option value="Outro">Outro</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="visibility" class="form-label">Visibilidade</label>
                            <select class="form-select" id="visibility" name="visibility">
                                <option value="condominos" selected>Condóminos</option>
                                <option value="admin">Apenas Administradores</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="fraction_id" class="form-label">Fração Específica</label>
                            <select class="form-select" id="fraction_id" name="fraction_id">
                                <option value="">Todas as frações</option>
                                {% if fractions %}
                                    {% for fraction in fractions %}
                                    <option value="{{ fraction.id }}">{{ fraction.identifier }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                            <div class="form-text">Deixe vazio se o documento é para todas as frações</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Upload Documento</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





