<div class="container py-4">
    {% set page_actions %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/download" class="btn btn-primary btn-sm">
                <i class="bi bi-download"></i> Download
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/edit" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': document.title,
        'actions': page_actions
    } %}

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Informações do Documento</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th>Título:</th>
                            <td>{{ document.title }}</td>
                        </tr>
                        {% if document.description %}
                        <tr>
                            <th>Descrição:</th>
                            <td>{{ document.description }}</td>
                        </tr>
                        {% endif %}
                        <tr>
                            <th>Pasta:</th>
                            <td>{{ document.folder|default('-') }}</td>
                        </tr>
                        <tr>
                            <th>Tipo:</th>
                            <td><span class="badge bg-secondary">{{ document.document_type|default('Documento') }}</span></td>
                        </tr>
                        <tr>
                            <th>Tamanho:</th>
                            <td>
                                {% if document.file_size %}
                                    {{ (document.file_size / 1024)|round(2) }} KB
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Visibilidade:</th>
                            <td>
                                {% if document.visibility == 'admin' %}
                                    <span class="badge bg-warning">Apenas Administradores</span>
                                {% else %}
                                    <span class="badge bg-success">Condóminos</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Upload por:</th>
                            <td>{{ document.uploaded_by_name|default('N/A') }}</td>
                        </tr>
                        <tr>
                            <th>Data:</th>
                            <td>{{ document.created_at|date('d/m/Y H:i') }}</td>
                        </tr>
                    </table>
                </div>
            </div>

            {% if versions|length > 1 %}
            <div class="card shadow-sm mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Versões</h6>
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/versions" class="btn btn-sm btn-outline-primary">
                        Ver Todas
                    </a>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for version in versions|slice(0, 3) %}
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Versão {{ version.version }}</strong>
                                {% if version.id == document.id %}
                                    <span class="badge bg-primary ms-2">Atual</span>
                                {% endif %}
                                <br>
                                <small class="text-muted">{{ version.created_at|date('d/m/Y H:i') }}</small>
                            </div>
                            <div class="d-flex gap-1">
                                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ version.id }}/view" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ version.id }}/download" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-download"></i>
                                </a>
                            </div>
                        </div>
                        {% endfor %}
                        {% if versions|length > 3 %}
                        <div class="list-group-item text-center">
                            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/versions" class="btn btn-sm btn-outline-primary">
                                Ver mais {{ versions|length - 3 }} versões
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="card shadow-sm mt-3">
                <div class="card-body text-center">
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ document.id }}/upload-version" class="btn btn-outline-primary">
                        <i class="bi bi-upload"></i> Upload Nova Versão
                    </a>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Visualização</h5>
                </div>
                <div class="card-body p-0">
                    {% if document.mime_type starts with 'image/' %}
                        <div class="text-center p-4">
                            <img src="{{ file_url }}" alt="{{ document.title }}" class="img-fluid" style="max-height: 70vh;">
                        </div>
                    {% elseif document.mime_type == 'application/pdf' %}
                        <div style="height: 70vh;">
                            <iframe src="{{ file_url }}" class="w-100 h-100" style="border: none;"></iframe>
                        </div>
                    {% else %}
                        <div class="text-center p-5">
                            <i class="bi bi-file-earmark display-1 text-muted"></i>
                            <p class="mt-3">Este tipo de ficheiro não pode ser visualizado no navegador.</p>
                            <a href="{{ file_url }}" class="btn btn-primary">
                                <i class="bi bi-download"></i> Download do Ficheiro
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
