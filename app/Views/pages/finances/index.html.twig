<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <div class="mb-2 mb-md-0 d-flex align-items-center gap-2">
            <div>
                <h2>Finanças</h2>
                <p class="text-muted mb-0">{{ condominium.name }}</p>
            </div>
            {% include 'blocks/help-button.html.twig' with {'section': 'finances', 'title': 'Ajuda com Finanças', 'show_text': false} %}
        </div>
        {% if is_admin %}
        <div class="w-100 w-md-auto">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/expenses/create" class="btn btn-primary w-100 w-md-auto">
                <i class="bi bi-plus-circle"></i> Nova Despesa
            </a>
        </div>
        {% endif %}
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Orçamento {{ current_year }}</h6>
                    <h3 class="mb-0">€{{ budget.total_amount|default(0)|number_format(2, ',', '.') }}</h3>
                    {% if not budget %}
                        <small class="text-muted">Nenhum orçamento definido</small>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Despesas {{ current_year }}</h6>
                    <h3 class="mb-0">€{{ total_expenses|default(0)|number_format(2, ',', '.') }}</h3>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Saldo Orçamental</h6>
                    <h3 class="mb-0 {% if (budget.total_amount|default(0) - total_expenses|default(0)) < 0 %}text-danger{% else %}text-success{% endif %}">
                        €{{ (budget.total_amount|default(0) - total_expenses|default(0))|number_format(2, ',', '.') }}
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card shadow-sm border-primary h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Saldo Total Contas</h6>
                    <h3 class="mb-0 {% if total_balance < 0 %}text-danger{% else %}text-success{% endif %}">
                        €{{ total_balance|number_format(2, ',', '.') }}
                    </h3>
                    <small class="text-muted">
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/bank-accounts" class="text-decoration-none">
                            Ver contas <i class="bi bi-arrow-right"></i>
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>

    {% if bank_accounts %}
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
            <h5 class="mb-2 mb-md-0">
                <i class="bi bi-bank"></i> Saldos das Contas
            </h5>
            <div class="d-flex flex-column flex-sm-row gap-2 w-100 w-md-auto">
                {% if is_admin %}
                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/bank-accounts" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-gear"></i> Gerir Contas
                </a>
                {% endif %}
                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/financial-transactions" class="btn btn-sm btn-primary">
                    <i class="bi bi-list-ul"></i> Ver Movimentos
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                {% for account in bank_accounts %}
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card account-card {% if account.account_type == 'cash' %}border-info border-2{% else %}border-primary border-2{% endif %} h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <h6 class="mb-2 fw-bold text-break">
                                    {{ account.name }}
                                </h6>
                                <div class="mb-2">
                                    {% if account.account_type == 'cash' %}
                                    <span class="badge bg-info">Caixa</span>
                                    {% else %}
                                    <span class="badge bg-primary">Bancária</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {% if account.account_type == 'bank' %}
                            <div class="mb-3">
                                {% if account.bank_name %}
                                <div class="mb-2">
                                    <small class="text-muted d-block"><strong>Banco:</strong> {{ account.bank_name }}</small>
                                </div>
                                {% endif %}
                                {% if account.iban %}
                                <div class="mb-2">
                                    <small class="text-muted d-block"><strong>IBAN:</strong></small>
                                    <code class="text-muted text-break d-block" style="font-size: 0.7rem; word-break: break-all;">{{ account.iban }}</code>
                                </div>
                                {% endif %}
                            </div>
                            {% endif %}
                            
                            <div class="mt-auto pt-3 border-top">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted flex-shrink-0">Saldo:</small>
                                    <h4 class="mb-0 fw-bold {% if account.current_balance >= 0 %}text-success{% else %}text-danger{% endif %} text-end flex-shrink-0" style="white-space: nowrap;">
                                        €{{ account.current_balance|number_format(2, ',', '.') }}
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row g-3">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
                    <h5 class="mb-2 mb-md-0">Últimas Despesas</h5>
                    {% if is_admin %}
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/expenses/create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> Adicionar
                    </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    {% if expenses %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Descrição</th>
                                    <th>Categoria</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for expense in expenses %}
                                <tr>
                                    <td>{{ expense.expense_date|date('d/m/Y') }}</td>
                                    <td>{{ expense.description }}</td>
                                    <td><span class="badge bg-secondary">{{ expense.category }}</span></td>
                                    <td><strong>€{{ expense.amount|number_format(2, ',', '.') }}</strong></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <p class="text-muted text-center py-3">Nenhuma despesa registada este ano.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">Ações</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <h6 class="mb-2">Orçamentos</h6>
                        {% if not budget %}
                            {% if is_admin %}
                            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/budgets/create" class="btn btn-outline-primary">
                                <i class="bi bi-calendar-check"></i> Criar Orçamento {{ current_year }}
                            </a>
                            {% else %}
                            <span class="text-muted">Nenhum orçamento definido</span>
                            {% endif %}
                        {% else %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/budgets/{{ budget.id }}" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> Ver Orçamento {{ current_year }}
                        </a>
                        {% if budget.status == 'draft' and is_admin %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/budgets/{{ budget.id }}/edit" class="btn btn-outline-warning">
                            <i class="bi bi-pencil"></i> Editar {{ current_year }}
                        </a>
                        {% endif %}
                        {% endif %}
                        
                        {% if not next_year_budget %}
                            {% if is_admin %}
                            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/budgets/create?year={{ current_year + 1 }}" class="btn btn-outline-info">
                                <i class="bi bi-calendar-plus"></i> Criar Orçamento {{ current_year + 1 }}
                            </a>
                            {% endif %}
                        {% else %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/budgets/{{ next_year_budget.id }}" class="btn btn-outline-info">
                            <i class="bi bi-eye"></i> Ver Orçamento {{ current_year + 1 }}
                        </a>
                        {% endif %}
                        
                        {% if all_budgets|length > 0 %}
                        <div class="dropdown mt-2">
                            <button class="btn btn-outline-secondary btn-sm w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-calendar3"></i> Todos os Orçamentos
                            </button>
                            <ul class="dropdown-menu">
                                {% for budget_item in all_budgets %}
                                <li><a class="dropdown-item" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/budgets/{{ budget_item.id }}">Orçamento {{ budget_item.year }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                        
                        <hr class="my-2">
                        
                        <h6 class="mb-2">Outras Ações</h6>
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/fees" class="btn btn-outline-primary">
                            <i class="bi bi-receipt"></i> {% if is_admin %}Gerir{% else %}Ver{% endif %} Quotas
                        </a>
                        {% if is_admin %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/revenues" class="btn btn-outline-success">
                            <i class="bi bi-cash-stack"></i> Receitas
                        </a>
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/historical-debts" class="btn btn-outline-warning">
                            <i class="bi bi-clock-history"></i> Dívidas Históricas
                        </a>
                        {% endif %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports" class="btn btn-outline-secondary">
                            <i class="bi bi-graph-up"></i> Relatórios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>

