<div class="container py-4">
    {% set page_actions %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Voltar às Finanças
            </a>
        </div>
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Relatórios Financeiros',
        'help_section': 'finances',
        'help_title': 'Ajuda com Relatórios',
        'actions': page_actions
    } %}

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text display-4 text-primary mb-3"></i>
                    <h5>Balancete</h5>
                    <p class="text-muted">Relatório de receitas e despesas</p>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/balance-sheet" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="year" value="{{ current_year }}">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-download"></i> Gerar PDF
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-receipt display-4 text-success mb-3"></i>
                    <h5>Quotas</h5>
                    <p class="text-muted">Relatório de quotas por período</p>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/fees" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="year" value="{{ current_year }}">
                        <button type="submit" class="btn btn-outline-success">
                            <i class="bi bi-eye"></i> Ver Relatório
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up display-4 text-info mb-3"></i>
                    <h5>Despesas</h5>
                    <p class="text-muted">Análise de despesas por categoria</p>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/expenses" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="year" value="{{ current_year }}">
                        <div class="btn-group" role="group">
                            <button type="submit" name="format" value="html" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye"></i> Ver
                            </button>
                            <button type="submit" name="format" value="excel" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-file-excel"></i> Excel
                            </button>
                            <button type="submit" name="format" value="pdf" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-file-pdf"></i> PDF
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-left-right display-4 text-primary mb-3"></i>
                    <h5>Fluxo de Caixa</h5>
                    <p class="text-muted">Receitas e despesas mensais</p>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/cash-flow" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="year" value="{{ current_year }}">
                        <div class="btn-group" role="group">
                            <button type="submit" name="format" value="html" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Ver
                            </button>
                            <button type="submit" name="format" value="excel" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-file-excel"></i> Excel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart display-4 text-info mb-3"></i>
                    <h5>Orçamento vs Realizado</h5>
                    <p class="text-muted">Comparativo anual</p>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/budget-vs-actual" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="year" value="{{ current_year }}">
                        <div class="btn-group" role="group">
                            <button type="submit" name="format" value="html" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Ver
                            </button>
                            <button type="submit" name="format" value="excel" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-file-excel"></i> Excel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle display-4 text-danger mb-3"></i>
                    <h5>Inadimplência</h5>
                    <p class="text-muted">Relatório de quotas em atraso</p>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/delinquency" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <div class="btn-group" role="group">
                            <button type="submit" name="format" value="html" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> Ver
                            </button>
                            <button type="submit" name="format" value="excel" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-file-excel"></i> Excel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header">
            <h5 class="mb-0">Relatórios Personalizados</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/custom">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="report_type" class="form-label">Tipo de Relatório</label>
                        <select class="form-select" id="report_type" name="report_type" required>
                            <option value="balance">Balancete</option>
                            <option value="fees">Quotas</option>
                            <option value="expenses">Despesas</option>
                            <option value="summary">Resumo Financeiro</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="start_date" class="form-label">Data Início</label>
                        <input type="date" class="form-control" id="start_date" name="start_date" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="end_date" class="form-label">Data Fim</label>
                        <input type="date" class="form-control" id="end_date" name="end_date" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="format" class="form-label">Formato</label>
                    <select class="form-select" id="format" name="format">
                        <option value="pdf">PDF</option>
                        <option value="excel">Excel</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Gerar Relatório</button>
            </form>
        </div>
    </div>

    <!-- Occurrence Reports Section -->
    <div class="card shadow-sm mt-4">
        <div class="card-header">
            <h5 class="mb-0">Relatórios de Ocorrências</h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card border-primary">
                        <div class="card-body">
                            <h6 class="card-title">Relatório de Ocorrências</h6>
                            <p class="text-muted small">Relatório detalhado de ocorrências por período</p>
                            <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/occurrences">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <div class="row g-2 mb-2">
                                    <div class="col-6">
                                        <label for="occ_start_date" class="form-label small">Data Início</label>
                                        <input type="date" class="form-control form-control-sm" id="occ_start_date" name="start_date" value="{{ current_year }}-01-01" required>
                                    </div>
                                    <div class="col-6">
                                        <label for="occ_end_date" class="form-label small">Data Fim</label>
                                        <input type="date" class="form-control form-control-sm" id="occ_end_date" name="end_date" value="{{ current_year }}-12-31" required>
                                    </div>
                                </div>
                                <div class="row g-2 mb-2">
                                    <div class="col-4">
                                        <label for="occ_status" class="form-label small">Estado</label>
                                        <select class="form-select form-select-sm" id="occ_status" name="status">
                                            <option value="">Todos</option>
                                            <option value="open">Abertas</option>
                                            <option value="completed">Resolvidas</option>
                                        </select>
                                    </div>
                                    <div class="col-4">
                                        <label for="occ_priority" class="form-label small">Prioridade</label>
                                        <select class="form-select form-select-sm" id="occ_priority" name="priority">
                                            <option value="">Todas</option>
                                            <option value="urgent">Urgente</option>
                                            <option value="high">Alta</option>
                                        </select>
                                    </div>
                                    <div class="col-4">
                                        <label for="occ_category" class="form-label small">Categoria</label>
                                        <input type="text" class="form-control form-control-sm" id="occ_category" name="category" placeholder="Opcional">
                                    </div>
                                </div>
                                <div class="btn-group w-100" role="group">
                                    <button type="submit" name="export" value="html" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Ver
                                    </button>
                                    <button type="submit" name="export" value="excel" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-file-excel"></i> Excel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-info">
                        <div class="card-body">
                            <h6 class="card-title">Relatório por Fornecedor</h6>
                            <p class="text-muted small">Análise de ocorrências por fornecedor</p>
                            <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/reports/occurrences-by-supplier">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <div class="row g-2 mb-2">
                                    <div class="col-6">
                                        <label for="supp_start_date" class="form-label small">Data Início</label>
                                        <input type="date" class="form-control form-control-sm" id="supp_start_date" name="start_date" value="{{ current_year }}-01-01" required>
                                    </div>
                                    <div class="col-6">
                                        <label for="supp_end_date" class="form-label small">Data Fim</label>
                                        <input type="date" class="form-control form-control-sm" id="supp_end_date" name="end_date" value="{{ current_year }}-12-31" required>
                                    </div>
                                </div>
                                <div class="btn-group w-100" role="group">
                                    <button type="submit" name="export" value="html" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i> Ver
                                    </button>
                                    <button type="submit" name="export" value="excel" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-file-excel"></i> Excel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





