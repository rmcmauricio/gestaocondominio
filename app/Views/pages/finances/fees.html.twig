    <script>
        // Function to filter fees and scroll to filters
        function filterFees() {
            const form = document.getElementById('filtersForm');
            const formData = new FormData(form);
            const params = new URLSearchParams();
            
            // Add all form fields to params
            for (const [key, value] of formData.entries()) {
                if (value) {
                    params.append(key, value);
                }
            }
            
            // Build URL with filters
            const url = form.action + (params.toString() ? '?' + params.toString() : '');
            
            // Submit form normally but scroll to filters after load
            window.location.href = url + '#filtersForm';
        }
        
        // Scroll to filters if hash is present
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.hash === '#filtersForm') {
                setTimeout(function() {
                    const filtersForm = document.getElementById('filtersForm');
                    if (filtersForm) {
                        filtersForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                }, 100);
            }
        });
        
        document.addEventListener('DOMContentLoaded', function() {
            const isExtraCheckbox = document.getElementById('is_extra');
            const extraFields = document.getElementById('extraFields');
            const regularInfo = document.getElementById('regularInfo');
            const extraInfo = document.getElementById('extraInfo');
            const extraAmountInput = document.getElementById('extra_amount');
            const selectAllFractions = document.getElementById('select_all_fractions');
            const fractionCheckboxes = document.querySelectorAll('.fraction-checkbox');
            const form = document.getElementById('generateFeesForm');

            // Toggle extra fields
            isExtraCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    extraFields.style.display = 'block';
                    regularInfo.style.display = 'none';
                    extraInfo.style.display = 'block';
                    extraAmountInput.setAttribute('required', 'required');
                } else {
                    extraFields.style.display = 'none';
                    regularInfo.style.display = 'block';
                    extraInfo.style.display = 'none';
                    extraAmountInput.removeAttribute('required');
                }
            });

            // Select all fractions toggle
            selectAllFractions.addEventListener('change', function() {
                fractionCheckboxes.forEach(function(checkbox) {
                    checkbox.checked = selectAllFractions.checked;
                });
            });

            // Update "select all" when individual checkboxes change
            fractionCheckboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    const allChecked = Array.from(fractionCheckboxes).every(cb => cb.checked);
                    const someChecked = Array.from(fractionCheckboxes).some(cb => cb.checked);
                    selectAllFractions.checked = allChecked;
                    selectAllFractions.indeterminate = someChecked && !allChecked;
                });
            });

            // Form validation
            form.addEventListener('submit', function(e) {
                const monthsChecked = document.querySelectorAll('input[name="months[]"]:checked');
                if (monthsChecked.length === 0) {
                    e.preventDefault();
                    alert('Selecione pelo menos um mês para gerar as quotas.');
                    return false;
                }

                if (isExtraCheckbox.checked) {
                    const extraAmount = parseFloat(extraAmountInput.value);
                    if (!extraAmount || extraAmount <= 0) {
                        e.preventDefault();
                        alert('O valor da quota extra deve ser maior que zero.');
                        extraAmountInput.focus();
                        return false;
                    }

                    const fractionsChecked = document.querySelectorAll('input[name="extra_fractions[]"]:checked');
                    if (fractionsChecked.length === 0) {
                        e.preventDefault();
                        alert('Selecione pelo menos uma fração para aplicar a quota extra.');
                        return false;
                    }
                }
            });
        });
    </script>

