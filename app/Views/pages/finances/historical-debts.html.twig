<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div class="d-flex align-items-center gap-2">
            <div>
                <h2 class="mb-0">Dívidas Históricas</h2>
                <p class="text-muted mb-0">{{ condominium.name }}</p>
            </div>
            {% include 'blocks/help-button.html.twig' with {'section': 'finances-historical-debts', 'title': 'Ajuda com Dívidas Históricas', 'show_text': false} %}
        </div>
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar às Finanças
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Dívidas Registadas</h5>
                </div>
                <div class="card-body">
                    {% if historical_debts %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fração</th>
                                    <th>Período</th>
                                    <th>Valor</th>
                                    <th>Vencimento</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for debt in historical_debts %}
                                <tr>
                                    <td><strong>{{ debt.fraction_identifier }}</strong></td>
                                    <td>
                                        {% if debt.period_month %}
                                            {{ debt.period_month }}/{{ debt.period_year }}
                                        {% else %}
                                            {{ debt.period_year }}
                                        {% endif %}
                                    </td>
                                    <td><strong>€{{ debt.amount|number_format(2, ',', '.') }}</strong></td>
                                    <td>{{ debt.due_date|date('d/m/Y') }}</td>
                                    <td>
                                        <span class="badge {% if debt.status == 'paid' %}bg-success{% elseif debt.status == 'overdue' %}bg-danger{% else %}bg-warning{% endif %}">
                                            {% if debt.status == 'paid' %}Paga
                                            {% elseif debt.status == 'overdue' %}Vencida
                                            {% else %}Pendente
                                            {% endif %}
                                        </span>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <p class="text-muted text-center py-3">Nenhuma dívida histórica registada.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Inserir Dívida Histórica</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/finances/historical-debts">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        
                        <div class="mb-3">
                            <label for="fraction_id" class="form-label">Fração <span class="text-danger">*</span></label>
                            <select class="form-select" id="fraction_id" name="fraction_id" required>
                                <option value="">Selecione...</option>
                                {% for fraction in fractions %}
                                <option value="{{ fraction.id }}">{{ fraction.identifier }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="year" class="form-label">Ano <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="year" name="year" 
                                   min="2000" max="{{ current_year - 1 }}" 
                                   value="{{ current_year - 1 }}" required>
                            <small class="text-muted">Ano da dívida (anteriores ao registo no sistema)</small>
                        </div>

                        <div class="mb-3">
                            <label for="month" class="form-label">Mês (opcional)</label>
                            <select class="form-select" id="month" name="month">
                                <option value="">Não especificar</option>
                                <option value="1">Janeiro</option>
                                <option value="2">Fevereiro</option>
                                <option value="3">Março</option>
                                <option value="4">Abril</option>
                                <option value="5">Maio</option>
                                <option value="6">Junho</option>
                                <option value="7">Julho</option>
                                <option value="8">Agosto</option>
                                <option value="9">Setembro</option>
                                <option value="10">Outubro</option>
                                <option value="11">Novembro</option>
                                <option value="12">Dezembro</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="amount" class="form-label">Valor (€) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">€</span>
                                <input type="number" class="form-control" id="amount" name="amount" 
                                       step="0.01" min="0" required placeholder="0.00">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="due_date" class="form-label">Data de Vencimento <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="due_date" name="due_date" required>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notas</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3" 
                                      placeholder="Informações adicionais sobre esta dívida"></textarea>
                        </div>

                        <div class="alert alert-info">
                            <small><i class="bi bi-info-circle"></i> Use esta funcionalidade para registar dívidas de anos anteriores ao registo do condomínio no sistema.</small>
                        </div>

                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-plus-circle"></i> Registar Dívida
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Set default due date to today
    const dueDateInput = document.getElementById('due_date');
    if (dueDateInput && !dueDateInput.value) {
        const today = new Date().toISOString().split('T')[0];
        dueDateInput.value = today;
    }
});
</script>





