<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h2 fw-bold mb-2">Selecionar Tipo de Conta</h1>
                        <p class="text-muted">Escolha o tipo de conta que deseja criar</p>
                    </div>
                    
                    {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endif %}

                    <form method="POST" action="{{ BASE_URL }}auth/select-account-type/process" id="accountTypeForm">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        
                        <div class="mb-4">
                            <div class="card mb-3 border-2" style="cursor: pointer;" onclick="document.getElementById('account_type_user').checked = true; updateSelection();">
                                <div class="card-body p-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="account_type" id="account_type_user" value="user" required>
                                        <label class="form-check-label w-100" for="account_type_user">
                                            <h5 class="mb-2">Utilizador (Condomino)</h5>
                                            <p class="text-muted mb-0">Acesso completo sem necessidade de subscrição. Ideal para moradores que desejam aceder às informações do seu condomínio.</p>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card border-2" style="cursor: pointer;" onclick="document.getElementById('account_type_admin').checked = true; updateSelection();">
                                <div class="card-body p-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="account_type" id="account_type_admin" value="admin" required>
                                        <label class="form-check-label w-100" for="account_type_admin">
                                            <h5 class="mb-2">Administrador</h5>
                                            <p class="text-muted mb-0">Gerir condomínios e todas as funcionalidades. Requer subscrição com período experimental de 14 dias grátis.</p>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Continuar</button>
                    </form>

                    <div class="text-center">
                        <p class="mb-0">
                            <a href="{{ BASE_URL }}register" class="text-decoration-none">Voltar ao registo</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function updateSelection() {
    const userCard = document.querySelector('#account_type_user').closest('.card');
    const adminCard = document.querySelector('#account_type_admin').closest('.card');
    
    if (document.getElementById('account_type_user').checked) {
        userCard.classList.add('border-primary', 'bg-light');
        adminCard.classList.remove('border-primary', 'bg-light');
    } else if (document.getElementById('account_type_admin').checked) {
        adminCard.classList.add('border-primary', 'bg-light');
        userCard.classList.remove('border-primary', 'bg-light');
    }
}

document.getElementById('account_type_user')?.addEventListener('change', updateSelection);
document.getElementById('account_type_admin')?.addEventListener('change', updateSelection);
</script>
