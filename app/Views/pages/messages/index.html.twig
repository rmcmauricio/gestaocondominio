<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Mensagens</h2>
            <p class="text-muted mb-0">{{ condominium.name }}</p>
        </div>
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nova Mensagem
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab">
                Recebidas <span class="badge bg-primary">{{ messages|length }}</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="sent-tab" data-bs-toggle="tab" data-bs-target="#sent" type="button" role="tab">
                Enviadas <span class="badge bg-secondary">{{ sent_messages|length }}</span>
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="received" role="tabpanel">
            {% if messages %}
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="list-group">
                        {% for message in messages %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/{{ message.id }}" class="list-group-item list-group-item-action {% if not message.is_read %}list-group-item-primary{% endif %}">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">
                                    {{ message.subject }}
                                    {% if not message.is_read %}
                                        <span class="badge bg-primary">Nova</span>
                                    {% endif %}
                                </h6>
                                <small>{{ message.created_at|date('d/m/Y H:i') }}</small>
                            </div>
                            <p class="mb-1">{{ message.message|slice(0, 100) }}{% if message.message|length > 100 %}...{% endif %}</p>
                            <small>De: {{ message.sender_name }}</small>
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3">Nenhuma mensagem recebida</h5>
                </div>
            </div>
            {% endif %}
        </div>

        <div class="tab-pane fade" id="sent" role="tabpanel">
            {% if sent_messages %}
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="list-group">
                        {% for message in sent_messages %}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/{{ message.id }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">{{ message.subject }}</h6>
                                <small>{{ message.created_at|date('d/m/Y H:i') }}</small>
                            </div>
                            <p class="mb-1">{{ message.message|slice(0, 100) }}{% if message.message|length > 100 %}...{% endif %}</p>
                            <small>Para: {{ message.recipient_name|default('Todos') }}</small>
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="bi bi-send display-1 text-muted"></i>
                    <h5 class="mt-3">Nenhuma mensagem enviada</h5>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao CondomÃ­nio
        </a>
    </div>
</div>





