                                                        {% else %}
                                                            <span class="badge bg-primary" style="font-size: 0.65rem;">
                                                                <i class="bi bi-inbox"></i> Recebida
                                                            </span>
                                                            {% if not reply.is_read %}
                                                                <span class="badge bg-warning text-dark" style="font-size: 0.65rem;">Nova</span>
                                                            {% endif %}
                                                        {% endif %}
                                                        <small class="text-muted">a: {{ message.subject }}</small>
                                                    </div>
