<div class="container py-4">
    {% set page_actions %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nova Mensagem
            </a>
        </div>
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Mensagens',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {# Tabs Navigation #}
    <ul class="nav nav-tabs mb-3" id="messagesTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if received_messages|length > 0 or sent_messages|length == 0 %}active{% endif %}" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab" aria-controls="received" aria-selected="true">
                <i class="bi bi-inbox"></i> Recebidas
                {% if received_messages|length > 0 %}
                    <span class="badge bg-primary ms-1">{{ received_messages|length }}</span>
                {% endif %}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link {% if received_messages|length == 0 and sent_messages|length > 0 %}active{% endif %}" id="sent-tab" data-bs-toggle="tab" data-bs-target="#sent" type="button" role="tab" aria-controls="sent" aria-selected="false">
                <i class="bi bi-send"></i> Enviadas
                {% if sent_messages|length > 0 %}
                    <span class="badge bg-success ms-1">{{ sent_messages|length }}</span>
                {% endif %}
            </button>
        </li>
    </ul>

    {# Tabs Content #}
    <div class="tab-content" id="messagesTabsContent">
        {# Tab: Mensagens Recebidas #}
        <div class="tab-pane fade {% if received_messages|length > 0 or sent_messages|length == 0 %}show active{% endif %}" id="received" role="tabpanel" aria-labelledby="received-tab">
            {% if received_messages|length > 0 %}
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% for message in received_messages %}
                        {# Original Message #}
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/{{ message.id }}" class="list-group-item list-group-item-action {% if not message.is_read %}list-group-item-primary{% endif %} message-thread" style="border-left: 4px solid #0d6efd;">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <span class="badge bg-primary" style="font-size: 0.75rem;">
                                            <i class="bi bi-inbox"></i> Recebida
                                        </span>
                                        {% if not message.is_read %}
                                            <span class="badge bg-warning text-dark">Nova</span>
                                        {% endif %}
                                        {% if message.replies|default([])|length > 0 %}
                                            <span class="badge bg-info" style="font-size: 0.7rem;">
                                                <i class="bi bi-chat-dots"></i> {{ message.replies|length }} resposta{{ message.replies|length > 1 ? 's' : '' }}
                                            </span>
                                        {% endif %}
                                    </div>
                                    <h6 class="mb-1">{{ message.subject }}</h6>
                                    <p class="mb-1">{{ message.message|striptags|slice(0, 100) }}{% if message.message|length > 100 %}...{% endif %}</p>
                                    <small class="text-muted">
                                        <i class="bi bi-arrow-left"></i> De: {{ message.sender_name|default('Sistema') }}
                                    </small>
                                </div>
                                <small class="text-muted ms-2">{{ message.created_at|date('d/m/Y H:i') }}</small>
                            </div>
                        </a>
                        {# Replies grouped under parent - Collapsed by default #}
                        {% if message.replies|default([])|length > 0 %}
                            {% set replies_id = 'replies-' ~ message.id %}
                            <div class="list-group-item" style="background-color: #f8f9fa; margin-left: 1.5rem; padding: 0.5rem;">
                                <div class="d-flex align-items-center justify-content-between" data-bs-toggle="collapse" data-bs-target="#{{ replies_id }}" aria-expanded="false" aria-controls="{{ replies_id }}" style="cursor: pointer;">
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="bi bi-chevron-down reply-toggle-icon" style="font-size: 0.8rem;"></i>
                                        <span class="badge bg-info" style="font-size: 0.7rem;">
                                            <i class="bi bi-chat-dots"></i> {{ message.replies|length }} resposta{{ message.replies|length > 1 ? 's' : '' }}
                                        </span>
                                    </div>
                                    <small class="text-muted">Clique para expandir</small>
                                </div>
                                <div class="collapse" id="{{ replies_id }}">
                                    <div class="mt-2">
                                        {% for reply in message.replies %}
                                        {% set reply_is_sent = reply.from_user_id == current_user_id %}
                                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/{{ reply.id }}" class="list-group-item list-group-item-action" style="background-color: #ffffff; border-left: 4px solid {% if reply_is_sent %}#28a745{% else %}#0d6efd{% endif %}; margin-top: 0.5rem;">
                                            <div class="d-flex w-100 justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <div class="d-flex align-items-center gap-2 mb-1">
                                                        <i class="bi bi-arrow-return-right {% if reply_is_sent %}text-success{% else %}text-primary{% endif %}"></i>
                                                        <span class="badge bg-info" style="font-size: 0.7rem;">
                                                            <i class="bi bi-reply"></i> Resposta
                                                        </span>
                                                        {% if reply_is_sent %}
                                                            <span class="badge bg-success" style="font-size: 0.65rem;">
                                                                <i class="bi bi-send"></i> Enviada
                                                            </span>
                                                        {% else %}
                                                            <span class="badge bg-primary" style="font-size: 0.65rem;">
                                                                <i class="bi bi-inbox"></i> Recebida
                                                            </span>
                                                            {% if not reply.is_read %}
                                                                <span class="badge bg-warning text-dark" style="font-size: 0.65rem;">Nova</span>
                                                            {% endif %}
                                                        {% endif %}
                                                        <small class="text-muted">a: {{ message.subject }}</small>
                                                    </div>
                                                    <h6 class="mb-1" style="font-size: 0.9rem;">{{ reply.subject }}</h6>
                                                    <p class="mb-1" style="font-size: 0.85rem;">{{ reply.message|striptags|slice(0, 80) }}{% if reply.message|length > 80 %}...{% endif %}</p>
                                                    {% if reply_is_sent %}
                                                        <small style="font-size: 0.8rem;" class="text-muted">
                                                            <i class="bi bi-arrow-right"></i> Para: {{ reply.recipient_name|default('Todos') }}
                                                        </small>
                                                    {% else %}
                                                        <small style="font-size: 0.8rem;" class="text-muted">
                                                            <i class="bi bi-arrow-left"></i> De: {{ reply.sender_name }}
                                                        </small>
                                                    {% endif %}
                                                </div>
                                                <small class="text-muted ms-2" style="font-size: 0.8rem;">{{ reply.created_at|date('d/m/Y H:i') }}</small>
                                            </div>
                                        </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {# Add spacing after thread (message + replies) #}
                        {% if not loop.last %}
                            <div class="thread-separator"></div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3">Nenhuma mensagem recebida</h5>
                    <p class="text-muted">Ainda não há mensagens recebidas.</p>
                </div>
            </div>
            {% endif %}
        </div>

        {# Tab: Mensagens Enviadas #}
