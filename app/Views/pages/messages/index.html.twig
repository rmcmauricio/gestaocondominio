<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Mensagens</h2>
            <p class="text-muted mb-0">{{ condominium.name }}</p>
        </div>
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nova Mensagem
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if messages %}
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="list-group">
                {% for message in messages %}
                {# Original Message #}
                <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/{{ message.id }}" class="list-group-item list-group-item-action {% if not message.is_sent and not message.is_read %}list-group-item-primary{% endif %} message-thread" style="border-left: 4px solid {% if message.is_sent %}#28a745{% else %}#0d6efd{% endif %};">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                {% if message.is_sent %}
                                    <span class="badge bg-success" style="font-size: 0.75rem;">
                                        <i class="bi bi-send"></i> Enviada
                                    </span>
                                {% else %}
                                    <span class="badge bg-primary" style="font-size: 0.75rem;">
                                        <i class="bi bi-inbox"></i> Recebida
                                    </span>
                                    {% if not message.is_read %}
                                        <span class="badge bg-warning text-dark">Nova</span>
                                    {% endif %}
                                {% endif %}
                                {% if message.replies|default([])|length > 0 %}
                                    <span class="badge bg-info" style="font-size: 0.7rem;">
                                        <i class="bi bi-chat-dots"></i> {{ message.replies|length }} resposta{{ message.replies|length > 1 ? 's' : '' }}
                                    </span>
                                {% endif %}
                            </div>
                            <h6 class="mb-1">{{ message.subject }}</h6>
                            <p class="mb-1">{{ message.message|striptags|slice(0, 100) }}{% if message.message|length > 100 %}...{% endif %}</p>
                            {% if message.is_sent %}
                                <small class="text-muted">
                                    <i class="bi bi-arrow-right"></i> Para: {{ message.recipient_name|default('Todos') }}
                                </small>
                            {% else %}
                                <small class="text-muted">
                                    <i class="bi bi-arrow-left"></i> De: {{ message.sender_name }}
                                </small>
                            {% endif %}
                        </div>
                        <small class="text-muted ms-2">{{ message.created_at|date('d/m/Y H:i') }}</small>
                    </div>
                </a>
                {# Replies grouped under parent #}
                {% if message.replies|default([])|length > 0 %}
                    {% for reply in message.replies %}
                    {% set reply_is_sent = reply.from_user_id == current_user_id %}
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/messages/{{ reply.id }}" class="list-group-item list-group-item-action" style="background-color: #f8f9fa; border-left: 4px solid {% if reply_is_sent %}#28a745{% else %}#0d6efd{% endif %}; margin-left: 1.5rem;">
                        <div class="d-flex w-100 justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    <i class="bi bi-arrow-return-right {% if reply_is_sent %}text-success{% else %}text-primary{% endif %}"></i>
                                    <span class="badge bg-info" style="font-size: 0.7rem;">
                                        <i class="bi bi-reply"></i> Resposta
                                    </span>
                                    {% if reply_is_sent %}
                                        <span class="badge bg-success" style="font-size: 0.65rem;">
                                            <i class="bi bi-send"></i> Enviada
                                        </span>
                                    {% else %}
                                        <span class="badge bg-primary" style="font-size: 0.65rem;">
                                            <i class="bi bi-inbox"></i> Recebida
                                        </span>
                                    {% endif %}
                                    <small class="text-muted">a: {{ message.subject }}</small>
                                </div>
                                <h6 class="mb-1" style="font-size: 0.9rem;">{{ reply.subject }}</h6>
                                <p class="mb-1" style="font-size: 0.85rem;">{{ reply.message|striptags|slice(0, 80) }}{% if reply.message|length > 80 %}...{% endif %}</p>
                                {% if reply_is_sent %}
                                    <small style="font-size: 0.8rem;" class="text-muted">
                                        <i class="bi bi-arrow-right"></i> Para: {{ reply.recipient_name|default('Todos') }}
                                    </small>
                                {% else %}
                                    <small style="font-size: 0.8rem;" class="text-muted">
                                        <i class="bi bi-arrow-left"></i> De: {{ reply.sender_name }}
                                    </small>
                                {% endif %}
                            </div>
                            <small class="text-muted ms-2" style="font-size: 0.8rem;">{{ reply.created_at|date('d/m/Y H:i') }}</small>
                        </div>
                    </a>
                    {% endfor %}
                {% endif %}
                {# Add spacing after thread (message + replies) #}
                {% if not loop.last %}
                    <div class="thread-separator"></div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-envelope display-1 text-muted"></i>
            <h5 class="mt-3">Nenhuma mensagem</h5>
            <p class="text-muted">Ainda não há mensagens enviadas ou recebidas.</p>
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>





