            if (pricePerLicense === 0 && sortedTiers.length > 0) {
                const lowestTier = sortedTiers[sortedTiers.length - 1];
                pricePerLicense = parseFloat(lowestTier.price_per_license);
            }
            
            return pricePerLicense * totalLicenses;
        } else {
            // Progressive pricing: calculate tier by tier
            const sortedTiers = [...pricingTiers].sort((a, b) => a.min_licenses - b.min_licenses);
            return calculateProgressivePrice(totalLicenses, sortedTiers);
        }
    }
    
    function calculateProgressivePrice(totalLicenses, tiers) {
        let total = 0;
        let remainingLicenses = totalLicenses;
        const sorted = [...tiers].sort((a, b) => a.min_licenses - b.min_licenses);
        
        for (const tier of sorted) {
            if (remainingLicenses <= 0) break;
            
