<div class="container py-4">
    <div class="row">
        <div class="col-12 col-xl-10 mx-auto">
            {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error }}
            </div>
            {% endif %}

            {% if success %}
            <div class="alert alert-success" role="alert">
                {{ success }}
            </div>
            {% endif %}

            {% if info %}
            <div class="alert alert-info" role="alert">
                {{ info }}
            </div>
            {% endif %}

            {% if subscription %}
            <!-- Current Subscription Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-credit-card"></i> Minha Subscrição</h4>
                </div>
                <div class="card-body">
                    {% if subscription.status == 'trial' %}
                    <div class="alert alert-info mb-3">
                        <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Período Experimental</h6>
                        <p class="mb-0 small">
                            Durante o período experimental, pode utilizar todas as funcionalidades do plano escolhido. 
                            Para continuar a utilizar o serviço após o término do trial, efetue o pagamento através do botão abaixo. 
                            A subscrição será ativada automaticamente após a confirmação do pagamento.
                        </p>
                    </div>
                    {% endif %}
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-3">
                                <h3 class="mb-0 me-3">{{ subscription.plan_name }}</h3>
                                {% if subscription.status == 'trial' %}
                                    {% set trialEnds = subscription.trial_ends_at|date('U') %}
                                    {% set now = 'now'|date('U') %}
                                    {% set daysLeft = ((trialEnds - now) / 86400)|round %}
                                    {% if daysLeft <= 0 %}
                                        <span class="badge bg-danger fs-6">Trial Expirado</span>
                                    {% elseif daysLeft <= 3 %}
                                        <span class="badge bg-warning fs-6">Trial Expira em {{ daysLeft }} dia(s)</span>
                                    {% else %}
                                        <span class="badge bg-info fs-6">Período Experimental</span>
                                    {% endif %}
                                {% elseif subscription.status == 'active' %}
                                    <span class="badge bg-success fs-6">Ativa</span>
                                {% elseif subscription.status == 'canceled' %}
                                    <span class="badge bg-warning fs-6">Cancelada</span>
                                {% endif %}
                            </div>
                            
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-event text-muted me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Expira em</small>
                                            <strong>
                                                {% if subscription.status == 'trial' %}
                                                    {{ subscription.trial_ends_at|date('d/m/Y') }}
                                                    {% set trialEnds = subscription.trial_ends_at|date('U') %}
                                                    {% set now = 'now'|date('U') %}
                                                    {% if trialEnds < now %}
                                                        <span class="text-danger d-block small">(Expirado)</span>
                                                    {% endif %}
                                                {% elseif subscription.status == 'active' and subscription.current_period_end %}
                                                    {{ subscription.current_period_end|date('d/m/Y') }}
                                                {% elseif subscription.status == 'canceled' and subscription.current_period_end %}
                                                    {{ subscription.current_period_end|date('d/m/Y') }}
                                                {% endif %}
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-currency-euro text-muted me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Preço</small>
                                            {% if total_price %}
                                                <strong>€{{ total_price|number_format(2, ',', '.') }}/mês</strong>
                                                {% if extra_condominiums_price > 0 %}
                                                    <br><small class="text-muted">
                                                        Base: €{{ subscription.price_monthly|number_format(2, ',', '.') }} + 
                                                        Extras: €{{ extra_condominiums_price|number_format(2, ',', '.') }}
                                                    </small>
                                                {% endif %}
                                            {% else %}
                                                <strong>€{{ subscription.price_monthly|number_format(2, ',', '.') }}/mês</strong>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-muted small mb-3">
                                <i class="bi bi-clock-history"></i> Criada em: {{ subscription.created_at|date('d/m/Y') }}
                            </div>

                            {% if subscription.plan_type %}
                            <!-- License Information -->
                            <div class="border-top pt-3 mb-3">
                                <h6 class="mb-3"><i class="bi bi-key"></i> Informações de Licenças</h6>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-check-circle text-success me-2"></i>
                                            <div>
                                                <small class="text-muted d-block">Licenças Usadas</small>
                                                <strong class="fs-5">{{ used_licenses|default(0) }}</strong>
                                                {% if license_limit %}
                                                    <span class="text-muted">/ {{ license_limit }}</span>
                                                    <br><small class="text-muted">
                                                        {% if subscription_plan and subscription_plan.license_min %}
                                                            {% set extra_licenses_count = (subscription.extra_licenses|default(0)) + 0 %}
                                                            {{ subscription_plan.license_min }} incluídas
                                                            {% if extra_licenses_count > 0 and license_limit > subscription_plan.license_min %}
                                                                + {{ extra_licenses_count }} extras
                                                            {% endif %}
                                                        {% else %}
                                                            {{ license_limit }} disponíveis
                                                        {% endif %}
                                                    </small>
                                                {% else %}
                                                    <br><small class="text-muted">
                                                        {% if subscription_plan and subscription_plan.license_min %}
                                                            {% set extra_licenses_count = (subscription.extra_licenses|default(0)) + 0 %}
                                                            {{ subscription_plan.license_min }} incluídas
                                                            {% if extra_licenses_count > 0 %}
                                                                + {{ extra_licenses_count }} extras
                                                            {% endif %}
                                                        {% endif %}
                                                    </small>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-building text-primary me-2"></i>
                                            <div>
                                                <small class="text-muted d-block">Condomínios Associados</small>
                                                <strong class="fs-5">{{ associated_condominiums|length }}</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                {% if license_limit %}
                                <div class="progress mb-2" style="height: 20px;">
                                    {% set usage_percent = (used_licenses / license_limit * 100)|round %}
                                    <div class="progress-bar {% if usage_percent >= 90 %}bg-danger{% elseif usage_percent >= 75 %}bg-warning{% else %}bg-success{% endif %}" 
                                         role="progressbar" 
                                         style="width: {{ usage_percent }}%"
                                         aria-valuenow="{{ used_licenses }}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="{{ license_limit }}">
                                        {{ usage_percent }}%
                                    </div>
                                </div>
                                {% endif %}

                                {% if pricing_preview %}
                                <div class="alert alert-light mb-2">
                                    <small>
                                        <strong>Preço Mensal:</strong> €{{ pricing_preview.monthly_price|number_format(2, ',', '.') }}
                                        {% if pricing_preview.annual_price %}
                                            | <strong>Preço Anual:</strong> €{{ pricing_preview.annual_price|number_format(2, ',', '.') }}
                                            {% if pricing_preview.annual_discount > 0 %}
                                                <span class="text-success">({{ pricing_preview.annual_discount }}% desconto)</span>
                                            {% endif %}
                                        {% endif %}
                                    </small>
                                </div>
                                {% endif %}
                                
                                {% if subscription.plan_type %}
                                <!-- Pending License Addition Alert -->
                                {% if has_pending_license_addition and pending_license_addition %}
                                <div class="alert alert-warning mb-3">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap">
                                        <div class="flex-grow-1">
                                            <i class="bi bi-exclamation-triangle"></i> <strong>Atenção:</strong> Tem um pagamento pendente para ativar {{ pending_license_addition.additional_licenses }} fração(ões) extra(s). Complete o pagamento para ativar.
                                        </div>
                                        <div class="d-flex gap-2 mt-2 mt-md-0">
                                            <a href="{{ BASE_URL }}payments/{{ subscription.id }}/create" class="btn btn-sm btn-primary" title="Completar pagamento">
                                                <i class="bi bi-credit-card"></i> Completar Pagamento
                                            </a>
                                            <form method="POST" action="{{ BASE_URL }}subscription/cancel-pending-license-addition" class="d-inline-block" onsubmit="return confirm('Tem a certeza que deseja cancelar este pagamento pendente?');">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancelar pagamento pendente">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                
                                <!-- Add extra licenses for active subscription -->
                                <div class="border-top pt-3 mt-3 mb-3">
                                    <h6 class="mb-3"><i class="bi bi-plus-circle"></i> Adicionar Frações Extras</h6>
                                    <form method="POST" action="{{ BASE_URL }}subscription/add-active-licenses" id="addActiveLicensesForm">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <div class="mb-3">
                                            <label for="active_extra_licenses" class="form-label small">Número de frações extras a adicionar:</label>
                                            <input type="number" 
                                                   class="form-control form-control-sm" 
                                                   id="active_extra_licenses" 
                                                   name="extra_licenses"
                                                   value="0" 
                                                   min="0"
                                                   data-plan-id="{{ subscription.plan_id }}"
                                                   data-current-licenses="{{ license_limit|default(used_licenses) }}"
                                                   data-current-extra-licenses="{{ subscription.extra_licenses|default(0) }}"
                                                   data-license-min="{{ subscription_plan.license_min|default(0) }}">
                                            <small class="text-muted d-block mt-1">
                                                Frações atuais: <strong>{{ used_licenses }}</strong>
                                                {% if subscription_plan and subscription_plan.license_min and license_limit %}
                                                    {% set extra_licenses_count = used_licenses - subscription_plan.license_min %}
                                                    {% if extra_licenses_count > 0 %}
                                                        ({{ subscription_plan.license_min }} incluídas + {{ extra_licenses_count }} extras)
                                                    {% else %}
                                                        ({{ subscription_plan.license_min }} incluídas no plano)
                                                    {% endif %}
                                                {% endif %}
                                            </small>
                                        </div>
                                        <div class="alert alert-info small mb-2" id="active_licenses_price_info" style="display: none;">
                                            <strong>Preço adicional mensal:</strong> <span id="active_licenses_price_amount">€0,00</span>/mês
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-check-circle"></i> Adicionar Frações e Gerar Pagamento
                                        </button>
                                    </form>
                                </div>
                                {% endif %}
                            </div>

                            <!-- Associated Condominiums -->
                            {% if subscription.plan_type != 'condominio' or (subscription.plan_type == 'condominio' and subscription.allow_multiple_condos) %}
                            <div class="border-top pt-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="mb-0"><i class="bi bi-building"></i> Condomínios Associados</h6>
                                    {% if not user.is_demo %}
                                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#attachCondominiumModal">
                                        <i class="bi bi-plus-circle"></i> Associar Condomínio
                                    </button>
                                    {% endif %}
                                </div>
                                
                                {% if associated_condominiums %}
                                <div class="list-group">
                                    {% for condo in associated_condominiums %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ condo.condominium_name }}</strong>
                                            <br><small class="text-muted">{{ condo.condominium_address }}</small>
                                        </div>
                                        {% if not user.is_demo and subscription.plan_type != 'condominio' %}
                                        <form method="POST" action="{{ BASE_URL }}subscription/detach-condominium" class="d-inline" onsubmit="return confirm('Tem certeza que deseja desassociar este condomínio?');">
                                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                            <input type="hidden" name="condominium_id" value="{{ condo.condominium_id }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-x-circle"></i> Desassociar
                                            </button>
                                        </form>
                                        {% endif %}
                                    </div>
                                    {% endfor %}
                                </div>
                                {% else %}
                                <p class="text-muted small mb-0">Nenhum condomínio associado.</p>
                                {% endif %}
                            </div>
                            {% endif %}
                            {% endif %}

                            {% if subscription.plan_slug == 'business' and extra_condominiums_pricing %}
                            <div class="border-top pt-3">
                                <h6 class="mb-3">Condomínios Extras</h6>
                                {% if has_pending_extra_update %}
                                <div class="alert alert-warning mb-3">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap">
                                        <div class="flex-grow-1">
                                            <i class="bi bi-exclamation-triangle"></i> <strong>Atenção:</strong> Tem um pagamento pendente para ativar novos condomínios extras. Complete o pagamento para ativar.
                                        </div>
                                        <div class="d-flex gap-2 mt-2 mt-md-0">
                                            <a href="{{ BASE_URL }}payments/{{ subscription.id }}/create" class="btn btn-sm btn-primary" title="Completar pagamento">
                                                <i class="bi bi-credit-card"></i> Completar Pagamento
                                            </a>
                                            <form method="POST" action="{{ BASE_URL }}subscription/cancel-pending-extras" class="d-inline-block" onsubmit="return confirm('Tem a certeza que deseja cancelar este pagamento pendente?');">
                                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancelar pagamento pendente">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                <form method="POST" action="{{ BASE_URL }}subscription/update-extras" id="updateExtrasForm">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <div class="mb-3">
                                        <label for="extra_condominiums" class="form-label small">Número de condomínios extras:</label>
                                        <input type="number" 
                                               class="form-control form-control-sm" 
                                               id="extra_condominiums" 
                                               name="extra_condominiums"
                                               value="{{ display_extra_condominiums|default(subscription.extra_condominiums|default(0)) }}" 
                                               min="0"
                                               data-base-price="{{ subscription.price_monthly }}">
                                        <small class="text-muted d-block mt-1">
                                            <span id="extra_price_info">Preço por condomínio extra: €0,00</span>
                                        </small>
                                    </div>
                                    <div class="alert alert-info small mb-2" id="extra_total" style="display: none;">
                                        <strong>Total extras:</strong> <span id="extra_total_amount">€0,00</span>/mês
                                    </div>
                                    <div class="mb-2">
                                        <strong class="d-block mb-1">Total Mensal:</strong>
                                        <span class="h5 text-primary" id="total_price_display">€{{ (total_price ?: subscription.price_monthly)|number_format(2, ',', '.') }}</span>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-check-circle"></i> Atualizar Extras e Gerar Pagamento
                                    </button>
                                </form>
                            </div>
                            {% endif %}
                        </div>
                        <div class="col-md-4 text-end">
                            {% if subscription.status == 'active' %}
                                {% if user.is_demo %}
                                <div class="mb-2">
                                    <span class="badge bg-secondary w-100 py-2">
                                        <i class="bi bi-lock"></i> Conta Demo
                                    </span>
                                </div>
                                {% else %}
                                <form method="POST" action="{{ BASE_URL }}subscription/cancel" class="mb-2">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Tem certeza que deseja cancelar a subscrição?')">
                                        <i class="bi bi-x-circle"></i> Cancelar Subscrição
                                    </button>
                                </form>
                                {% endif %}
                            {% endif %}
                            
                            {% if subscription.status == 'trial' %}
                                {% set trialEnds = subscription.trial_ends_at|date('U') %}
                                {% set now = 'now'|date('U') %}
                                {% set daysLeft = ((trialEnds - now) / 86400)|round %}
                                
                                {% if user.is_demo %}
                                    <div class="mb-2">
                                        <span class="badge bg-secondary w-100 py-2">
                                            <i class="bi bi-lock"></i> Conta Demo
                                        </span>
                                    </div>
                                {% else %}
                                    {% if daysLeft <= 0 %}
                                        <div class="alert alert-warning mb-2 p-2">
                                            <small><i class="bi bi-exclamation-triangle"></i> Trial expirado</small>
                                        </div>
                                        <a href="{{ BASE_URL }}payments/{{ subscription.id }}/create" class="btn btn-primary w-100 mb-2">
                                            <i class="bi bi-credit-card"></i> Efetuar Pagamento
                                        </a>
                                    {% elseif daysLeft <= 3 %}
                                        <div class="alert alert-warning mb-2 p-2">
                                            <small><i class="bi bi-clock"></i> Trial expira em {{ daysLeft }} dia(s)</small>
                                        </div>
                                        <a href="{{ BASE_URL }}payments/{{ subscription.id }}/create" class="btn btn-primary w-100 mb-2">
                                            <i class="bi bi-credit-card"></i> Efetuar Pagamento Agora
                                        </a>
                                    {% else %}
                                        <a href="{{ BASE_URL }}payments/{{ subscription.id }}/create" class="btn btn-outline-primary w-100 mb-2">
                                            <i class="bi bi-credit-card"></i> Efetuar Pagamento
                                        </a>
                                        <small class="text-muted d-block text-center">
                                            Trial expira em {{ daysLeft }} dias
                                        </small>
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                            
                            {% if subscription.status == 'canceled' %}
                                {% if user.is_demo %}
                                <div class="mb-2">
                                    <span class="badge bg-secondary w-100 py-2">
                                        <i class="bi bi-lock"></i> Conta Demo
                                    </span>
                                </div>
                                {% else %}
                                <a href="{{ BASE_URL }}payments/{{ subscription.id }}/create" class="btn btn-primary w-100 mb-2">
                                    <i class="bi bi-credit-card"></i> Efetuar Pagamento
                                </a>
                                {% endif %}
                            {% endif %}
                            
                            {% if subscription.status == 'canceled' %}
                                {% if user.is_demo %}
                                <div class="mb-2">
                                    <span class="badge bg-secondary w-100 py-2">
                                        <i class="bi bi-lock"></i> Conta Demo
                                    </span>
                                </div>
                                {% else %}
                                <form method="POST" action="{{ BASE_URL }}subscription/reactivate">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="bi bi-arrow-clockwise"></i> Reativar Subscrição
                                    </button>
                                </form>
                                {% endif %}
                            {% endif %}
                            
                            <a href="{{ BASE_URL }}payments" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="bi bi-list"></i> Ver Pagamentos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if pending_subscription %}
            <!-- Pending Subscription Card -->
            <div class="card shadow-sm mb-4 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-clock-history"></i> {% if subscription %}Alteração de Plano Pendente{% else %}Subscrição Pendente{% endif %}</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <h6 class="alert-heading"><i class="bi bi-info-circle"></i> {% if subscription %}Alteração de Plano Aguardando Pagamento{% else %}Subscrição Aguardando Pagamento{% endif %}</h6>
                        <p class="mb-0 small">
                            {% if subscription %}
                            Você solicitou uma alteração de plano. A sua subscrição atual permanece ativa até expirar ou até o pagamento do novo plano ser confirmado. 
                            Efetue o pagamento abaixo para ativar o novo plano.
                            {% else %}
                            Você solicitou uma nova subscrição. Efetue o pagamento abaixo para ativar o plano.
                            {% endif %}
                        </p>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-3">
                                <h3 class="mb-0 me-3">{{ pending_subscription.plan_name }}</h3>
                                <span class="badge bg-warning fs-6">Pendente</span>
                            </div>
                            
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-event text-muted me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Período após ativação</small>
                                            <strong>{{ pending_subscription.current_period_end|date('d/m/Y') }}</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-currency-euro text-muted me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Preço</small>
                                            {% if pending_total_price %}
                                                <strong>€{{ pending_total_price|number_format(2, ',', '.') }}/mês</strong>
                                                {% if pending_subscription.promotion_id %}
                                                    {% set original_price = pending_subscription.original_price_monthly|default(pending_subscription.price_monthly) %}
                                                    {% if original_price != pending_subscription.price_monthly %}
                                                        <br><small class="text-muted">
                                                            <span class="text-decoration-line-through">€{{ original_price|number_format(2, ',', '.') }}</span>
                                                            {% if pending_extra_condominiums_price > 0 %}
                                                                + Extras: €{{ pending_extra_condominiums_price|number_format(2, ',', '.') }}
                                                            {% endif %}
                                                        </small>
                                                    {% endif %}
                                                {% endif %}
                                            {% else %}
                                                <strong>€{{ pending_subscription.price_monthly|number_format(2, ',', '.') }}/mês</strong>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% if pending_subscription.promotion_id %}
                            <div class="alert alert-success mb-3">
                                <small>
                                    <i class="bi bi-gift"></i> <strong>Promoção Aplicada:</strong>
                                    {% set promo = plan_promotions[pending_subscription.plan_id] ?? null %}
                                    {% if promo %}
                                        {{ promo.name }}
                                        {% if promo.discount_type == 'percentage' %}
                                            - {{ promo.discount_value }}% OFF
                                        {% else %}
                                            - €{{ promo.discount_value }} OFF
                                        {% endif %}
                                        {% if promo.duration_months %}
                                            (válida por {{ promo.duration_months }} {% if promo.duration_months == 1 %}mês{% else %}meses{% endif %})
                                        {% endif %}
                                        <br><small class="text-muted">Desconto aplicado apenas ao pacote base, não aos condomínios extras.</small>
                                    {% endif %}
                                </small>
                            </div>
                            {% endif %}

                            {% if pending_subscription.plan_slug == 'business' and extra_condominiums_pricing %}
                            <div class="border-top pt-3 mt-3 mb-3">
                                <h6 class="mb-3">Condomínios Extras</h6>
