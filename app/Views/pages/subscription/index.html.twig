<script>
document.addEventListener('DOMContentLoaded', function() {
    const pricingTiers = {{ extra_condominiums_pricing|json_encode|raw }};
    const basePrice = {{ subscription.price_monthly }};
    
    // Sort tiers by min_condominios descending to find the correct tier
    const sortedTiers = [...pricingTiers].sort((a, b) => b.min_condominios - a.min_condominios);
    
    function getPriceForCondominiums(numCondominios) {
        if (numCondominios <= 0) return 0;
        
        // Find the tier that applies to this number of condominiums
        for (const tier of sortedTiers) {
            if (tier.is_active && numCondominios >= tier.min_condominios) {
                // Check if it's within max range (if max exists)
                if (tier.max_condominios === null || numCondominios <= tier.max_condominios) {
                    return parseFloat(tier.price_per_condominium);
                }
            }
        }
        
        // Fallback: use first tier price if no match found
        if (sortedTiers.length > 0 && sortedTiers[0].is_active) {
            return parseFloat(sortedTiers[0].price_per_condominium);
        }
        
        return 0;
    }
    
    function updatePrice() {
        const input = document.getElementById('extra_condominiums');
        const extraPriceInfo = document.getElementById('extra_price_info');
        const extraTotal = document.getElementById('extra_total');
        const extraTotalAmount = document.getElementById('extra_total_amount');
        const totalPriceDisplay = document.getElementById('total_price_display');
        
        if (!input) {
            console.warn('Input element not found');
            return;
        }
        
        // Get the current value from the input - always read directly from DOM
        // Use both .value and getAttribute to ensure we get the latest value
        let inputValue = input.value;
        if (!inputValue && input.getAttribute('value')) {
            inputValue = input.getAttribute('value');
        }
        
        inputValue = (inputValue || '').trim();
        let extraCondominiums = inputValue === '' ? 0 : parseInt(inputValue, 10);
        
        // Handle NaN or invalid values
        if (isNaN(extraCondominiums) || extraCondominiums < 0) {
            extraCondominiums = 0;
            if (input.value !== '0') {
                input.value = '0';
            }
        }
        
        // Format numbers with Portuguese locale (comma as decimal separator)
        const formatPrice = (price) => {
            return price.toFixed(2).replace('.', ',');
        };
        
        if (extraCondominiums > 0) {
            const pricePerCondominium = getPriceForCondominiums(extraCondominiums);
            const extraTotalPrice = pricePerCondominium * extraCondominiums;
            const totalPrice = basePrice + extraTotalPrice;
            
            if (extraPriceInfo) {
                extraPriceInfo.textContent = `Preço por condomínio extra: €${formatPrice(pricePerCondominium)}`;
            }
            if (extraTotalAmount) {
                extraTotalAmount.textContent = `€${formatPrice(extraTotalPrice)}`;
            }
            if (extraTotal) {
                extraTotal.style.display = 'block';
            }
            if (totalPriceDisplay) {
                totalPriceDisplay.textContent = `€${formatPrice(totalPrice)}`;
            }
        } else {
            if (extraTotal) {
                extraTotal.style.display = 'none';
            }
            if (totalPriceDisplay) {
                totalPriceDisplay.textContent = `€${formatPrice(basePrice)}`;
            }
            
            if (sortedTiers.length > 0 && sortedTiers[sortedTiers.length - 1].is_active && extraPriceInfo) {
                const firstTier = sortedTiers[sortedTiers.length - 1]; // First tier (lowest min)
                const maxText = firstTier.max_condominios ? `-${firstTier.max_condominios}` : '+';
                extraPriceInfo.textContent = `Preço por condomínio extra: €${formatPrice(parseFloat(firstTier.price_per_condominium))} (${firstTier.min_condominios}${maxText} condomínios)`;
            }
        }
    }
    
    const input = document.getElementById('extra_condominiums');
    if (input) {
        let updateTimeout = null;
        let lastKnownValue = input.value;
        
        // Function to trigger price update
        function triggerUpdate() {
            // Clear any pending timeout
            if (updateTimeout) {
                clearTimeout(updateTimeout);
            }
            
            // Use a small delay to ensure the input value is fully updated
            updateTimeout = setTimeout(function() {
                // Force read the value directly from the input element
                const currentValue = input.value;
                
                // Only update if value actually changed
                if (currentValue !== lastKnownValue) {
                    lastKnownValue = currentValue;
                }
                
                // Always recalculate to ensure accuracy
                updatePrice();
            }, 10);
        }
        
        // Listen to input events (typing, deleting) - most important for real-time updates
        input.addEventListener('input', function() {
            triggerUpdate();
        });
        
        // Listen to change events (when value changes and field loses focus)
        input.addEventListener('change', function() {
            triggerUpdate();
        });
        
        // Listen to keyup events
        input.addEventListener('keyup', function(e) {
            // Update immediately on Enter or Tab
            if (e.key === 'Enter' || e.key === 'Tab') {
                if (updateTimeout) {
                    clearTimeout(updateTimeout);
                }
                setTimeout(updatePrice, 5);
            } else {
                triggerUpdate();
            }
        });
        
        // Listen to blur events (when field loses focus)
        input.addEventListener('blur', function() {
            // Ensure update happens when leaving the field
            if (updateTimeout) {
                clearTimeout(updateTimeout);
            }
            setTimeout(updatePrice, 5);
        });
        
        // Listen to focus events (when field gains focus - recalculate current value)
        input.addEventListener('focus', function() {
            // Recalculate when field is focused to show current value
            if (updateTimeout) {
                clearTimeout(updateTimeout);
            }
            setTimeout(updatePrice, 5);
        });
        
        // Listen to paste events
        input.addEventListener('paste', function() {
