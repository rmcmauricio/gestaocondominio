<div class="container py-4">
    {% set page_actions %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nova Ocorrência
            </a>
        </div>
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Ocorrências',
        'help_section': 'occurrences',
        'help_title': 'Ajuda com Ocorrências',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <!-- Filters and Search -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h6 class="mb-0">Filtros e Busca</h6>
        </div>
        <div class="card-body">
            <form method="GET" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Buscar</label>
                        <input type="text" class="form-control" id="search" name="search" value="{{ current_search }}" placeholder="Buscar por título ou descrição...">
                    </div>
                    <div class="col-md-2">
                        <label for="status" class="form-label">Estado</label>
                        <select class="form-select" id="status" name="status">
                            <option value="">Todos</option>
                            <option value="open" {% if current_status == 'open' %}selected{% endif %}>Abertas</option>
                            <option value="in_analysis" {% if current_status == 'in_analysis' %}selected{% endif %}>Em Análise</option>
                            <option value="assigned" {% if current_status == 'assigned' %}selected{% endif %}>Atribuídas</option>
                            <option value="in_progress" {% if current_status == 'in_progress' %}selected{% endif %}>Em Progresso</option>
                            <option value="completed" {% if current_status == 'completed' %}selected{% endif %}>Resolvidas</option>
                            <option value="canceled" {% if current_status == 'canceled' %}selected{% endif %}>Canceladas</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="priority" class="form-label">Prioridade</label>
                        <select class="form-select" id="priority" name="priority">
                            <option value="">Todas</option>
                            <option value="low" {% if current_priority == 'low' %}selected{% endif %}>Baixa</option>
                            <option value="medium" {% if current_priority == 'medium' %}selected{% endif %}>Média</option>
                            <option value="high" {% if current_priority == 'high' %}selected{% endif %}>Alta</option>
                            <option value="urgent" {% if current_priority == 'urgent' %}selected{% endif %}>Urgente</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="category" class="form-label">Categoria</label>
                        <select class="form-select" id="category" name="category">
                            <option value="">Todas</option>
                            {% if categories %}
                                {% for cat in categories %}
                                <option value="{{ cat.category }}" {% if current_category == cat.category %}selected{% endif %}>
                                    {{ cat.category }} ({{ cat.count }})
                                </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="sort_by" class="form-label">Ordenar por</label>
                        <select class="form-select" id="sort_by" name="sort_by">
                            <option value="created_at" {% if current_sort_by == 'created_at' %}selected{% endif %}>Data</option>
                            <option value="title" {% if current_sort_by == 'title' %}selected{% endif %}>Título</option>
                            <option value="priority" {% if current_sort_by == 'priority' %}selected{% endif %}>Prioridade</option>
                            <option value="status" {% if current_sort_by == 'status' %}selected{% endif %}>Estado</option>
                        </select>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <label for="fraction_id" class="form-label">Fração</label>
                        <select class="form-select" id="fraction_id" name="fraction_id">
                            <option value="">Todas</option>
                            {% if fractions %}
                                {% for fraction in fractions %}
                                <option value="{{ fraction.id }}" {% if current_fraction_id == fraction.id %}selected{% endif %}>{{ fraction.identifier }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="assigned_to" class="form-label">Atribuído a</label>
                        <select class="form-select" id="assigned_to" name="assigned_to">
                            <option value="">Todos</option>
                            {% if users %}
                                {% for user in users %}
                                <option value="{{ user.id }}" {% if current_assigned_to == user.id %}selected{% endif %}>{{ user.name }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="date_from" class="form-label">Data de (desde)</label>
                        <input type="date" class="form-control" id="date_from" name="date_from" value="{{ current_date_from }}">
                    </div>
                    <div class="col-md-2">
                        <label for="date_to" class="form-label">Data de (até)</label>
                        <input type="date" class="form-control" id="date_to" name="date_to" value="{{ current_date_to }}">
                    </div>
                    <div class="col-md-2">
                        <label for="sort_order" class="form-label">Ordem</label>
                        <select class="form-select" id="sort_order" name="sort_order">
                            <option value="DESC" {% if current_sort_order == 'DESC' %}selected{% endif %}>Descendente</option>
                            <option value="ASC" {% if current_sort_order == 'ASC' %}selected{% endif %}>Ascendente</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Filtrar
                        </button>
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Limpar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Quick Status Filters -->
    <div class="mb-3">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="occurrenceStatusFilter" data-bs-toggle="dropdown" aria-expanded="false">
                {% if not current_status %}
                    Todas
                {% elseif current_status == 'open' %}
                    Abertas
                {% elseif current_status == 'in_analysis' %}
                    Em Análise
                {% elseif current_status == 'assigned' %}
                    Atribuídas
                {% elseif current_status == 'completed' %}
                    Resolvidas
                {% else %}
                    Todas
                {% endif %}
            </button>
            <ul class="dropdown-menu" aria-labelledby="occurrenceStatusFilter">
                <li>
                    <a class="dropdown-item {% if not current_status %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences">
                        Todas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'open' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=open">
                        Abertas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'in_analysis' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=in_analysis">
                        Em Análise
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'assigned' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=assigned">
                        Atribuídas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'completed' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=completed">
                        Resolvidas
                    </a>
                </li>
            </ul>
        </div>
    </div>

    {% if occurrences %}
    <div class="row g-4">
        {% for occurrence in occurrences %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ occurrence.title }}</h5>
                        <span class="badge 
                            {% if occurrence.status == 'open' %}bg-danger
                            {% elseif occurrence.status == 'in_analysis' %}bg-warning
                            {% elseif occurrence.status == 'assigned' %}bg-info
                            {% elseif occurrence.status == 'completed' %}bg-success
                            {% else %}bg-secondary{% endif %}">
                            {{ occurrence.status|replace({'_': ' '})|title }}
                        </span>
                    </div>
                    <p class="card-text text-muted small mb-2">
                        <i class="bi bi-tag"></i> {{ occurrence.category|default('Sem categoria') }}
                    </p>
                    <p class="card-text">{{ occurrence.description|striptags|slice(0, 100) }}{% if occurrence.description|length > 100 %}...{% endif %}</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <small class="text-muted">{{ occurrence.created_at|date('d/m/Y') }}</small>
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences/{{ occurrence.id }}" class="btn btn-sm btn-outline-primary">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-exclamation-triangle display-1 text-muted"></i>
            <h4 class="mt-3">Nenhuma ocorrência encontrada</h4>
            <p class="text-muted">
                {% if current_search or current_status or current_priority or current_category %}
                    Nenhuma ocorrência corresponde aos filtros aplicados. Tente ajustar os filtros ou 
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences">limpar os filtros</a>.
                {% else %}
                    Comece reportando a primeira ocorrência
                {% endif %}
            </p>
            {% if not (current_search or current_status or current_priority or current_category) %}
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Reportar Ocorrência
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>





