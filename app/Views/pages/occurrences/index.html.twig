<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Ocorrências</h2>
            <p class="text-muted mb-0">{{ condominium.name }}</p>
        </div>
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nova Ocorrência
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="mb-3">
        <div class="btn-group" role="group">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences" class="btn btn-outline-secondary {% if not current_status %}active{% endif %}">
                Todas
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=open" class="btn btn-outline-danger {% if current_status == 'open' %}active{% endif %}">
                Abertas
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=in_analysis" class="btn btn-outline-warning {% if current_status == 'in_analysis' %}active{% endif %}">
                Em Análise
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=assigned" class="btn btn-outline-info {% if current_status == 'assigned' %}active{% endif %}">
                Atribuídas
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences?status=completed" class="btn btn-outline-success {% if current_status == 'completed' %}active{% endif %}">
                Resolvidas
            </a>
        </div>
    </div>

    {% if occurrences %}
    <div class="row g-4">
        {% for occurrence in occurrences %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ occurrence.title }}</h5>
                        <span class="badge 
                            {% if occurrence.status == 'open' %}bg-danger
                            {% elseif occurrence.status == 'in_analysis' %}bg-warning
                            {% elseif occurrence.status == 'assigned' %}bg-info
                            {% elseif occurrence.status == 'completed' %}bg-success
                            {% else %}bg-secondary{% endif %}">
                            {{ occurrence.status|replace({'_': ' '})|title }}
                        </span>
                    </div>
                    <p class="card-text text-muted small mb-2">
                        <i class="bi bi-tag"></i> {{ occurrence.category|default('Sem categoria') }}
                    </p>
                    <p class="card-text">{{ occurrence.description|slice(0, 100) }}{% if occurrence.description|length > 100 %}...{% endif %}</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <small class="text-muted">{{ occurrence.created_at|date('d/m/Y') }}</small>
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences/{{ occurrence.id }}" class="btn btn-sm btn-outline-primary">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-exclamation-triangle display-1 text-muted"></i>
            <h4 class="mt-3">Nenhuma ocorrência encontrada</h4>
            <p class="text-muted">Comece reportando a primeira ocorrência</p>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/occurrences/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Reportar Ocorrência
            </a>
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>





