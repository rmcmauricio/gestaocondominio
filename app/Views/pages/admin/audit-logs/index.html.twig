<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-journal-text"></i> Logs de Auditoria</h2>
            <p class="text-muted mb-0">Visualizar e filtrar todos os registos de auditoria do sistema</p>
        </div>
        <a href="{{ BASE_URL }}dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <!-- Filters -->
    <div class="card shadow-sm mb-4" style="position: relative; z-index: 1050;">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
        </div>
        <div class="card-body">
            <form method="GET" action="{{ BASE_URL }}admin/audit-logs" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-2">
                        <label for="audit_type" class="form-label">Tipo de Auditoria</label>
                        <select class="form-select" id="audit_type" name="audit_type">
                            <option value="all" {% if filters.audit_type == 'all' or filters.audit_type == '' %}selected{% endif %}>Todos</option>
                            <option value="general" {% if filters.audit_type == 'general' %}selected{% endif %}>Geral</option>
                            <option value="payments" {% if filters.audit_type == 'payments' %}selected{% endif %}>Pagamentos</option>
                            <option value="financial" {% if filters.audit_type == 'financial' %}selected{% endif %}>Financeiro</option>
                            <option value="subscriptions" {% if filters.audit_type == 'subscriptions' %}selected{% endif %}>Subscrições</option>
                            <option value="documents" {% if filters.audit_type == 'documents' %}selected{% endif %}>Documentos</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="search" class="form-label">Pesquisar</label>
                        <input type="text" class="form-control" id="search" name="search" 
                               value="{{ filters.search }}" placeholder="Descrição, nome ou email...">
                    </div>
                    <div class="col-md-2">
                        <label for="action" class="form-label">Ação</label>
                        <select class="form-select" id="action" name="action">
                            <option value="">Todas</option>
                            {% for action in actions %}
                            <option value="{{ action }}" {% if filters.action == action %}selected{% endif %}>
                                {{ action }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="model" class="form-label">Modelo</label>
                        <select class="form-select" id="model" name="model">
                            <option value="">Todos</option>
                            {% for model in models %}
                            <option value="{{ model }}" {% if filters.model == model %}selected{% endif %}>
                                {{ model }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="user_id" class="form-label">Utilizador</label>
                        <div class="position-relative" style="z-index: 1050;">
                            <input type="text" 
                                   class="form-control" 
                                   id="user_search" 
                                   name="user_search"
                                   autocomplete="off"
                                   placeholder="Pesquisar utilizador..."
                                   value="{% if filters.user_id %}{% for u in users %}{% if u.id == filters.user_id %}{{ u.name }} ({{ u.email }}){% endif %}{% endfor %}{% endif %}">
                            <input type="hidden" id="user_id" name="user_id" value="{{ filters.user_id }}">
                            <div id="user_autocomplete_results" class="list-group position-absolute w-100" style="z-index: 1051; display: none; max-height: 300px; overflow-y: auto; background-color: white;"></div>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <label for="date_from" class="form-label">Data Desde</label>
                        <input type="date" class="form-control" id="date_from" name="date_from" 
                               value="{{ filters.date_from }}">
                    </div>
                    <div class="col-md-1">
                        <label for="date_to" class="form-label">Data Até</label>
                        <input type="date" class="form-control" id="date_to" name="date_to" 
                               value="{{ filters.date_to }}">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Filtrar
                        </button>
                        <a href="{{ BASE_URL }}admin/audit-logs" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Limpar Filtros
                        </a>
                    </div>
                </div>
                <input type="hidden" name="sort_by" id="sort_by" value="{{ filters.sort_by }}">
                <input type="hidden" name="sort_order" id="sort_order" value="{{ filters.sort_order }}">
                <input type="hidden" name="per_page" id="per_page" value="{{ pagination.per_page }}">
            </form>
        </div>
    </div>

    <!-- Results Info -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="text-muted">
                {% set startRecord = (pagination.current_page - 1) * pagination.per_page + 1 %}
                {% set endRecord = min(pagination.current_page * pagination.per_page, pagination.total_count) %}
                Mostrando {{ startRecord }} a {{ endRecord }} de {{ pagination.total_count }} registos
            </span>
        </div>
        <div class="d-flex align-items-center gap-2">
            <label for="per_page_select" class="mb-0">Registos por página:</label>
            <select class="form-select form-select-sm" id="per_page_select" style="width: auto;">
                <option value="25" {% if pagination.per_page == 25 %}selected{% endif %}>25</option>
                <option value="50" {% if pagination.per_page == 50 %}selected{% endif %}>50</option>
                <option value="100" {% if pagination.per_page == 100 %}selected{% endif %}>100</option>
                <option value="200" {% if pagination.per_page == 200 %}selected{% endif %}>200</option>
            </select>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="card shadow-sm" style="position: relative; z-index: 1;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 150px;">
                                <a href="#" class="sort-link text-decoration-none" data-sort="created_at">
                                    Data/Hora
                                    {% if filters.sort_by == 'created_at' %}
                                        <i class="bi bi-arrow-{% if filters.sort_order == 'ASC' %}up{% else %}down{% endif %}"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th style="width: 120px;">
                                <a href="#" class="sort-link text-decoration-none" data-sort="action">
                                    Ação
                                    {% if filters.sort_by == 'action' %}
                                        <i class="bi bi-arrow-{% if filters.sort_order == 'ASC' %}up{% else %}down{% endif %}"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th style="width: 100px;">
                                <a href="#" class="sort-link text-decoration-none" data-sort="model">
                                    Modelo
                                    {% if filters.sort_by == 'model' %}
                                        <i class="bi bi-arrow-{% if filters.sort_order == 'ASC' %}up{% else %}down{% endif %}"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th style="width: 100px;">Tipo</th>
                            <th style="width: 150px;">
                                <a href="#" class="sort-link text-decoration-none" data-sort="user_id">
                                    Utilizador
                                    {% if filters.sort_by == 'user_id' %}
                                        <i class="bi bi-arrow-{% if filters.sort_order == 'ASC' %}up{% else %}down{% endif %}"></i>
                                    {% endif %}
                                </a>
                            </th>
                            <th>Descrição</th>
                            <th style="width: 120px;">IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for log in logs %}
                        <tr class="log-row" style="cursor: pointer;" data-log-id="{{ log.id }}" data-audit-type="{{ log.audit_type|default('general') }}">
                            <td>
                                <small class="text-muted">
                                    {{ log.created_at|date('d/m/Y H:i:s') }}
                                </small>
                            </td>
                            <td>
                                <span class="badge bg-{% if 'error' in log.action or 'failed' in log.action or 'blocked' in log.action %}danger{% elseif 'removed' in log.action or 'rejected' in log.action %}warning{% elseif 'approved' in log.action or 'created' in log.action %}success{% else %}info{% endif %}">
                                    {{ log.action }}
                                </span>
                            </td>
                            <td>
                                {% if log.model %}
                                    <span class="badge bg-secondary">{{ log.model }}</span>
                                    {% if log.model_id %}
                                        <small class="text-muted">#{{ log.model_id }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if log.audit_type == 'payments' %}
                                    <span class="badge bg-primary">Pagamentos</span>
                                {% elseif log.audit_type == 'financial' %}
                                    <span class="badge bg-success">Financeiro</span>
                                {% elseif log.audit_type == 'subscriptions' %}
                                    <span class="badge bg-info">Subscrições</span>
                                {% elseif log.audit_type == 'documents' %}
                                    <span class="badge bg-warning text-dark">Documentos</span>
                                {% else %}
                                    <span class="badge bg-secondary">Geral</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if log.user_name %}
                                    <div>
                                        <strong>{{ log.user_name }}</strong>
                                        {% if log.user_role == 'super_admin' %}
                                            <span class="badge bg-danger ms-1">SA</span>
                                        {% endif %}
                                    </div>
                                    <small class="text-muted">{{ log.user_email }}</small>
                                {% else %}
                                    <span class="text-muted">Sistema</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width: 400px;" title="{{ log.description }}">
                                    {{ log.description }}
                                    {% if log.amount %}
                                        <br><small class="text-success"><strong>Valor: €{{ log.amount|number_format(2, ',', '.') }}</strong></small>
                                    {% endif %}
                                    {% if log.payment_method %}
                                        <br><small class="text-muted">Método: {{ log.payment_method }}</small>
                                    {% endif %}
                                    {% if log.status %}
                                        <br><small class="text-muted">Status: <span class="badge bg-{% if log.status == 'completed' or log.status == 'approved' or log.status == 'active' %}success{% elseif log.status == 'failed' or log.status == 'rejected' or log.status == 'canceled' %}danger{% else %}warning{% endif %}">{{ log.status }}</span></small>
                                    {% endif %}
                                    {% if log.document_type %}
                                        <br><small class="text-muted">Tipo: <span class="badge bg-secondary">{{ log.document_type }}</span></small>
                                    {% endif %}
                                    {% if log.file_name %}
                                        <br><small class="text-muted"><i class="bi bi-file-earmark"></i> {{ log.file_name }}</small>
                                    {% endif %}
                                </div>
                                {% if log.user_agent %}
                                    <small class="text-muted d-block mt-1">
                                        <i class="bi bi-info-circle"></i> {{ log.user_agent|slice(0, 50) }}...
                                    </small>
                                {% endif %}
                            </td>
                            <td>
                                {% if log.ip_address %}
                                    <code class="small">{{ log.ip_address }}</code>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                <p class="mt-2 mb-0">Nenhum registo encontrado</p>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    {% if pagination.total_pages > 1 %}
    <nav aria-label="Paginação" class="mt-4">
        <ul class="pagination justify-content-center">
            {% set baseParams = [] %}
            {% if filters.audit_type and filters.audit_type != 'all' %}{% set baseParams = baseParams|merge(['audit_type=' ~ filters.audit_type|url_encode]) %}{% endif %}
            {% if filters.search %}{% set baseParams = baseParams|merge(['search=' ~ filters.search|url_encode]) %}{% endif %}
            {% if filters.action %}{% set baseParams = baseParams|merge(['action=' ~ filters.action|url_encode]) %}{% endif %}
            {% if filters.model %}{% set baseParams = baseParams|merge(['model=' ~ filters.model|url_encode]) %}{% endif %}
            {% if filters.user_id %}{% set baseParams = baseParams|merge(['user_id=' ~ filters.user_id]) %}{% endif %}
            {% if filters.date_from %}{% set baseParams = baseParams|merge(['date_from=' ~ filters.date_from|url_encode]) %}{% endif %}
            {% if filters.date_to %}{% set baseParams = baseParams|merge(['date_to=' ~ filters.date_to|url_encode]) %}{% endif %}
            {% if filters.sort_by %}{% set baseParams = baseParams|merge(['sort_by=' ~ filters.sort_by|url_encode]) %}{% endif %}
            {% if filters.sort_order %}{% set baseParams = baseParams|merge(['sort_order=' ~ filters.sort_order|url_encode]) %}{% endif %}
            {% if pagination.per_page %}{% set baseParams = baseParams|merge(['per_page=' ~ pagination.per_page]) %}{% endif %}
            {% set baseQuery = baseParams|join('&') %}
            
            <!-- Previous Button -->
            {% if pagination.current_page > 1 %}
                {% set prevPage = pagination.current_page - 1 %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ prevPage }}{% if baseQuery %}&{{ baseQuery }}{% endif %}" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link" aria-label="Anterior">
                        <span aria-hidden="true">&laquo;</span>
                    </span>
                </li>
            {% endif %}
            
            <!-- Page Numbers -->
            {% set startPage = max(1, pagination.current_page - 2) %}
            {% set endPage = min(pagination.total_pages, pagination.current_page + 2) %}
            
            {% if startPage > 1 %}
                <li class="page-item">
                    <a class="page-link" href="?page=1{% if baseQuery %}&{{ baseQuery }}{% endif %}">1</a>
                </li>
                {% if startPage > 2 %}
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                {% endif %}
            {% endif %}
            
            {% for i in startPage..endPage %}
                <li class="page-item {% if i == pagination.current_page %}active{% endif %}">
                    <a class="page-link" href="?page={{ i }}{% if baseQuery %}&{{ baseQuery }}{% endif %}">
                        {{ i }}
                    </a>
                </li>
            {% endfor %}
            
            {% if endPage < pagination.total_pages %}
                {% if endPage < pagination.total_pages - 1 %}
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                {% endif %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ pagination.total_pages }}{% if baseQuery %}&{{ baseQuery }}{% endif %}">
                        {{ pagination.total_pages }}
                    </a>
                </li>
            {% endif %}
            
            <!-- Next Button -->
            {% if pagination.current_page < pagination.total_pages %}
                {% set nextPage = pagination.current_page + 1 %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ nextPage }}{% if baseQuery %}&{{ baseQuery }}{% endif %}" aria-label="Próximo">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link" aria-label="Próximo">
                        <span aria-hidden="true">&raquo;</span>
                    </span>
                </li>
            {% endif %}
        </ul>
        
        <!-- Pagination Info -->
        <div class="text-center mt-2">
            <small class="text-muted">
                Página {{ pagination.current_page }} de {{ pagination.total_pages }} 
                ({{ pagination.total_count }} registos no total)
            </small>
        </div>
    </nav>
    {% endif %}
</div>

<!-- Store logs data in JavaScript -->
<script>
    window.auditLogsData = {
        {% if logs|length > 0 %}
        {% for log in logs %}
        '{{ log.id }}': {{ log|json_encode(constant('JSON_HEX_QUOT') b-or constant('JSON_HEX_APOS') b-or constant('JSON_UNESCAPED_UNICODE'))|raw }}{% if not loop.last %},{% endif %}
        {% endfor %}
        {% endif %}
    };
</script>

<!-- Modal de Detalhes do Log -->
