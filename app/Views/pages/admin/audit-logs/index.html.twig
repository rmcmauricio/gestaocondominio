                        <strong>Condomínio ID:</strong>
                        <p class="mb-0" id="modal-condominium-id">-</p>
                    </div>
                </div>
                
                <!-- Document-specific fields -->
                <div class="row mb-3" id="modal-document-type-row" style="display: none;">
                    <div class="col-md-6">
                        <strong>Tipo de Documento:</strong>
                        <p class="mb-0" id="modal-document-type">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-document-id-row" style="display: none;">
                    <div class="col-md-6">
                        <strong>ID do Documento:</strong>
                        <p class="mb-0" id="modal-document-id">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-assembly-id-row" style="display: none;">
                    <div class="col-md-6">
                        <strong>ID da Assembleia:</strong>
                        <p class="mb-0" id="modal-assembly-id">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-receipt-id-row" style="display: none;">
                    <div class="col-md-6">
                        <strong>ID do Recibo:</strong>
                        <p class="mb-0" id="modal-receipt-id">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-fee-id-row" style="display: none;">
                    <div class="col-md-6">
                        <strong>ID da Quota:</strong>
                        <p class="mb-0" id="modal-fee-id">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-file-name-row" style="display: none;">
                    <div class="col-md-6">
                        <strong>Nome do Ficheiro:</strong>
                        <p class="mb-0" id="modal-file-name">-</p>
                    </div>
                    <div class="col-md-6" id="modal-file-size-col" style="display: none;">
                        <strong>Tamanho:</strong>
                        <p class="mb-0" id="modal-file-size">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-file-path-row" style="display: none;">
                    <div class="col-md-12">
                        <strong>Caminho do Ficheiro:</strong>
                        <p class="mb-0" style="word-break: break-all;" id="modal-file-path">-</p>
                    </div>
                </div>
                
                <div class="row mb-3" id="modal-metadata-row" style="display: none;">
                    <div class="col-md-12">
                        <strong>Metadados:</strong>
                        <pre class="bg-light p-2 rounded" style="max-height: 200px; overflow-y: auto; font-size: 0.875rem;" id="modal-metadata">-</pre>
                    </div>
                </div>
                
                <hr>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Endereço IP:</strong>
                        <p class="mb-0" id="modal-ip-address">-</p>
                    </div>
                    <div class="col-md-6">
                        <strong>User Agent:</strong>
                        <p class="mb-0" id="modal-user-agent" style="word-break: break-all;">-</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sort links
    document.querySelectorAll('.sort-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const sortBy = this.dataset.sort;
            const currentSort = document.getElementById('sort_by').value;
            const currentOrder = document.getElementById('sort_order').value;
            
            document.getElementById('sort_by').value = sortBy;
            document.getElementById('sort_order').value = 
                (currentSort === sortBy && currentOrder === 'DESC') ? 'ASC' : 'DESC';
            
            document.getElementById('filterForm').submit();
        });
    });
    
    // Per page change
    document.getElementById('per_page_select').addEventListener('change', function() {
        document.getElementById('per_page').value = this.value;
        document.getElementById('filterForm').submit();
    });
    
    // User autocomplete
    const userSearchInput = document.getElementById('user_search');
    const userIdInput = document.getElementById('user_id');
    const autocompleteResults = document.getElementById('user_autocomplete_results');
    let searchTimeout = null;
    let selectedIndex = -1;
    
    if (userSearchInput && userIdInput) {
        // Search on input
        userSearchInput.addEventListener('input', function() {
            const query = this.value.trim();
            
            // Clear selection if input is cleared
            if (query === '') {
                userIdInput.value = '';
                autocompleteResults.style.display = 'none';
                selectedIndex = -1;
                return;
            }
            
            // Don't search if the value matches the current selected user
            const currentUserId = userIdInput.value;
            if (currentUserId && this.value.includes('(') && this.value.includes(')')) {
                // User might be typing, allow search
            }
            
            // Debounce search
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                if (query.length >= 2) {
                    searchUsers(query);
                } else {
                    autocompleteResults.style.display = 'none';
                }
            }, 300);
        });
        
        // Clear user_id when user manually clears the input
        userSearchInput.addEventListener('blur', function() {
            // Small delay to allow click on autocomplete item
            setTimeout(() => {
                if (this.value.trim() === '' && userIdInput.value) {
                    userIdInput.value = '';
                }
            }, 200);
        });
        
        // Handle keyboard navigation
        userSearchInput.addEventListener('keydown', function(e) {
            const items = autocompleteResults.querySelectorAll('.list-group-item');
            
            if (e.key === 'ArrowDown') {
                e.preventDefault();
                selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                updateSelection(items);
            } else if (e.key === 'ArrowUp') {
                e.preventDefault();
                selectedIndex = Math.max(selectedIndex - 1, -1);
                updateSelection(items);
            } else if (e.key === 'Enter' && selectedIndex >= 0 && items[selectedIndex]) {
                e.preventDefault();
                items[selectedIndex].click();
            } else if (e.key === 'Escape') {
                autocompleteResults.style.display = 'none';
                selectedIndex = -1;
            }
        });
        
        // Hide autocomplete when clicking outside
        document.addEventListener('click', function(e) {
            if (!userSearchInput.contains(e.target) && !autocompleteResults.contains(e.target)) {
                autocompleteResults.style.display = 'none';
            }
        });
    }
    
    function searchUsers(query) {
        fetch(`{{ BASE_URL }}admin/audit-logs/users/search?q=${encodeURIComponent(query)}`)
            .then(response => response.json())
            .then(data => {
                displayResults(data);
            })
            .catch(error => {
                console.error('Error searching users:', error);
                autocompleteResults.style.display = 'none';
            });
    }
    
    function displayResults(users) {
        if (users.length === 0) {
            autocompleteResults.innerHTML = '<div class="list-group-item text-muted">Nenhum utilizador encontrado</div>';
            autocompleteResults.style.display = 'block';
            return;
        }
        
        autocompleteResults.innerHTML = '';
        users.forEach((user, index) => {
            const item = document.createElement('a');
            item.href = '#';
            item.className = 'list-group-item list-group-item-action';
            item.dataset.userId = user.id;
            item.dataset.userName = user.name;
            item.dataset.userEmail = user.email;
            
            item.innerHTML = `
                <div>
                    <strong>${escapeHtml(user.name)}</strong>
                    ${user.role === 'super_admin' ? '<span class="badge bg-danger ms-1">SA</span>' : ''}
                </div>
                <small class="text-muted">${escapeHtml(user.email)}</small>
            `;
            
            item.addEventListener('click', function(e) {
                e.preventDefault();
                selectUser(user.id, user.name, user.email);
            });
            
            autocompleteResults.appendChild(item);
        });
        
        autocompleteResults.style.display = 'block';
        selectedIndex = -1;
    }
    
    function updateSelection(items) {
        items.forEach((item, index) => {
            if (index === selectedIndex) {
                item.classList.add('active');
                item.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
            } else {
                item.classList.remove('active');
            }
        });
    }
    
    function selectUser(userId, userName, userEmail) {
        userIdInput.value = userId;
        userSearchInput.value = `${userName} (${userEmail})`;
        autocompleteResults.style.display = 'none';
        selectedIndex = -1;
    }
    
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
    // Log row click handler
    document.querySelectorAll('.log-row').forEach(row => {
        row.addEventListener('click', function(e) {
            // Don't trigger if clicking on links or buttons
            if (e.target.tagName === 'A' || e.target.closest('a') || e.target.tagName === 'BUTTON' || e.target.closest('button')) {
                return;
            }
            
            try {
                const logId = this.dataset.logId;
                if (!logId) {
                    throw new Error('Log ID não encontrado');
                }
                
                // Get log data from window.auditLogsData
                const logData = window.auditLogsData && window.auditLogsData[logId];
                if (!logData) {
                    throw new Error('Dados do log não encontrados');
                }
                
                showLogDetails(logData);
            } catch (error) {
                console.error('Error loading log data:', error);
                console.error('Log ID:', this.dataset.logId);
                console.error('Available logs:', Object.keys(window.auditLogsData || {}));
                alert('Erro ao carregar detalhes do log: ' + (error.message || 'Erro desconhecido'));
            }
        });
    });
    
    function showLogDetails(log) {
        const modal = new bootstrap.Modal(document.getElementById('logDetailsModal'));
        
        // Format date
        let dateText = '-';
        if (log.created_at) {
            try {
                const date = new Date(log.created_at);
                if (!isNaN(date.getTime())) {
                    dateText = date.toLocaleDateString('pt-PT', { 
                        day: '2-digit', 
                        month: '2-digit', 
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit'
                    });
                } else {
                    dateText = log.created_at;
                }
            } catch (e) {
                dateText = log.created_at;
            }
        }
        document.getElementById('modal-created-at').textContent = dateText;
        
        // Audit type
        const auditTypeMap = {
            'payments': '<span class="badge bg-primary">Pagamentos</span>',
            'financial': '<span class="badge bg-success">Financeiro</span>',
            'subscriptions': '<span class="badge bg-info">Subscrições</span>',
            'documents': '<span class="badge bg-warning text-dark">Documentos</span>',
            'general': '<span class="badge bg-secondary">Geral</span>'
        };
        document.getElementById('modal-audit-type').innerHTML = auditTypeMap[log.audit_type] || '<span class="badge bg-secondary">Geral</span>';
        
        // Action
        const actionStr = (log.action || '').toLowerCase();
        const actionBadgeClass = 
            (actionStr.includes('error') || actionStr.includes('failed') || actionStr.includes('blocked')) ? 'danger' :
            (actionStr.includes('removed') || actionStr.includes('rejected')) ? 'warning' :
            (actionStr.includes('approved') || actionStr.includes('created')) ? 'success' : 'info';
        document.getElementById('modal-action').innerHTML = 
            `<span class="badge bg-${actionBadgeClass}">${escapeHtml(log.action || '-')}</span>`;
        
        // Model
        document.getElementById('modal-model').textContent = log.model || '-';
        if (log.model_id) {
            document.getElementById('modal-model-id').textContent = '#' + log.model_id;
            document.getElementById('modal-model-id-row').style.display = 'block';
        } else {
            document.getElementById('modal-model-id-row').style.display = 'none';
        }
        
        // User
        document.getElementById('modal-user').textContent = log.user_name || 'Sistema';
        document.getElementById('modal-user-email').textContent = log.user_email || '-';
        if (log.user_role) {
            const roleBadge = log.user_role === 'super_admin' ? 
                '<span class="badge bg-danger">Super Admin</span>' :
                log.user_role === 'admin' ? 
                '<span class="badge bg-warning">Admin</span>' :
                '<span class="badge bg-secondary">' + escapeHtml(log.user_role) + '</span>';
            document.getElementById('modal-user-role').innerHTML = roleBadge;
            document.getElementById('modal-user-role-row').style.display = 'block';
        } else {
            document.getElementById('modal-user-role-row').style.display = 'none';
        }
        
        // Description
        document.getElementById('modal-description').textContent = log.description || '-';
        
        // Amount
        if (log.amount !== null && log.amount !== undefined && log.amount !== '') {
            const amount = parseFloat(log.amount);
            if (!isNaN(amount)) {
                document.getElementById('modal-amount').innerHTML = 
                    '<strong class="text-success">€' + amount.toLocaleString('pt-PT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) + '</strong>';
                document.getElementById('modal-amount-row').style.display = 'block';
            } else {
                document.getElementById('modal-amount-row').style.display = 'none';
            }
        } else {
            document.getElementById('modal-amount-row').style.display = 'none';
        }
        
        // Payment method
        if (log.payment_method) {
            document.getElementById('modal-payment-method').textContent = log.payment_method;
            document.getElementById('modal-payment-method-row').style.display = 'block';
        } else {
            document.getElementById('modal-payment-method-row').style.display = 'none';
        }
        
        // Status
        if (log.status || log.new_status) {
            const status = log.new_status || log.status;
            const statusBadgeClass = 
                (status === 'completed' || status === 'approved' || status === 'active' || status === 'paid') ? 'success' :
                (status === 'failed' || status === 'rejected' || status === 'canceled' || status === 'deleted') ? 'danger' : 'warning';
            document.getElementById('modal-status').innerHTML = 
                `<span class="badge bg-${statusBadgeClass}">${escapeHtml(status)}</span>`;
            document.getElementById('modal-status-row').style.display = 'block';
        } else {
            document.getElementById('modal-status-row').style.display = 'none';
        }
        
        // Old status
        if (log.old_status) {
            const oldStatusBadgeClass = 
                (log.old_status === 'completed' || log.old_status === 'approved' || log.old_status === 'active' || log.old_status === 'paid') ? 'success' :
                (log.old_status === 'failed' || log.old_status === 'rejected' || log.old_status === 'canceled') ? 'danger' : 'warning';
            document.getElementById('modal-old-status').innerHTML = 
                `<span class="badge bg-${oldStatusBadgeClass}">${escapeHtml(log.old_status)}</span>`;
            document.getElementById('modal-old-status-row').style.display = 'block';
        } else {
            document.getElementById('modal-old-status-row').style.display = 'none';
        }
        
        // New status
        if (log.new_status && log.old_status) {
            const newStatusBadgeClass = 
                (log.new_status === 'completed' || log.new_status === 'approved' || log.new_status === 'active' || log.new_status === 'paid') ? 'success' :
                (log.new_status === 'failed' || log.new_status === 'rejected' || log.new_status === 'canceled' || log.new_status === 'deleted') ? 'danger' : 'warning';
            document.getElementById('modal-new-status').innerHTML = 
                `<span class="badge bg-${newStatusBadgeClass}">${escapeHtml(log.new_status)}</span>`;
            document.getElementById('modal-new-status-row').style.display = 'block';
        } else {
            document.getElementById('modal-new-status-row').style.display = 'none';
        }
        
        // Entity type
        if (log.entity_type) {
            document.getElementById('modal-entity-type').textContent = log.entity_type;
            document.getElementById('modal-entity-type-row').style.display = 'block';
        } else {
            document.getElementById('modal-entity-type-row').style.display = 'none';
        }
        
        // Entity ID
        if (log.entity_id) {
            document.getElementById('modal-entity-id').textContent = '#' + log.entity_id;
            document.getElementById('modal-entity-id-row').style.display = 'block';
        } else {
            document.getElementById('modal-entity-id-row').style.display = 'none';
        }
        
        // Condominium ID
        if (log.condominium_id !== null && log.condominium_id !== undefined && log.condominium_id !== '') {
            document.getElementById('modal-condominium-id').textContent = '#' + log.condominium_id;
            document.getElementById('modal-condominium-row').style.display = 'block';
        } else {
            document.getElementById('modal-condominium-row').style.display = 'none';
        }
        
        // Additional fields for financial logs
        if (log.old_amount !== null && log.old_amount !== undefined && log.old_amount !== '') {
            const oldAmount = parseFloat(log.old_amount);
            if (!isNaN(oldAmount)) {
                const amountRow = document.getElementById('modal-amount-row');
                if (amountRow.style.display !== 'none') {
                    document.getElementById('modal-amount').innerHTML += 
                        ' <small class="text-muted">(Anterior: €' + oldAmount.toLocaleString('pt-PT', {minimumFractionDigits: 2, maximumFractionDigits: 2}) + ')</small>';
                }
            }
        }
        
        // IP Address
        document.getElementById('modal-ip-address').textContent = log.ip_address || '-';
        
        // User Agent
        document.getElementById('modal-user-agent').textContent = log.user_agent || '-';
        
        // Document-specific fields
        if (log.document_type) {
            document.getElementById('modal-document-type').textContent = log.document_type;
            document.getElementById('modal-document-type-row').style.display = 'block';
        } else {
            document.getElementById('modal-document-type-row').style.display = 'none';
        }
        
        if (log.document_id) {
            document.getElementById('modal-document-id').textContent = '#' + log.document_id;
            document.getElementById('modal-document-id-row').style.display = 'block';
        } else {
            document.getElementById('modal-document-id-row').style.display = 'none';
        }
        
        if (log.assembly_id) {
            document.getElementById('modal-assembly-id').textContent = '#' + log.assembly_id;
            document.getElementById('modal-assembly-id-row').style.display = 'block';
        } else {
            document.getElementById('modal-assembly-id-row').style.display = 'none';
        }
        
        if (log.receipt_id) {
            document.getElementById('modal-receipt-id').textContent = '#' + log.receipt_id;
            document.getElementById('modal-receipt-id-row').style.display = 'block';
        } else {
            document.getElementById('modal-receipt-id-row').style.display = 'none';
        }
        
        if (log.fee_id) {
            document.getElementById('modal-fee-id').textContent = '#' + log.fee_id;
            document.getElementById('modal-fee-id-row').style.display = 'block';
        } else {
            document.getElementById('modal-fee-id-row').style.display = 'none';
        }
        
        if (log.file_name) {
            document.getElementById('modal-file-name').textContent = log.file_name;
            document.getElementById('modal-file-name-row').style.display = 'block';
        } else {
            document.getElementById('modal-file-name-row').style.display = 'none';
        }
        
        if (log.file_size !== null && log.file_size !== undefined && log.file_size !== '') {
            const fileSize = parseInt(log.file_size);
            if (!isNaN(fileSize)) {
                const sizeInKB = (fileSize / 1024).toFixed(2);
                const sizeInMB = (fileSize / (1024 * 1024)).toFixed(2);
                let sizeText = fileSize + ' bytes';
                if (fileSize >= 1024 * 1024) {
                    sizeText = sizeInMB + ' MB';
                } else if (fileSize >= 1024) {
                    sizeText = sizeInKB + ' KB';
                }
                document.getElementById('modal-file-size').textContent = sizeText;
                document.getElementById('modal-file-size-col').style.display = 'block';
            } else {
                document.getElementById('modal-file-size-col').style.display = 'none';
            }
        } else {
            document.getElementById('modal-file-size-col').style.display = 'none';
        }
        
        if (log.file_path) {
            document.getElementById('modal-file-path').textContent = log.file_path;
            document.getElementById('modal-file-path-row').style.display = 'block';
        } else {
            document.getElementById('modal-file-path-row').style.display = 'none';
        }
        
        if (log.metadata && typeof log.metadata === 'object') {
            document.getElementById('modal-metadata').textContent = JSON.stringify(log.metadata, null, 2);
            document.getElementById('modal-metadata-row').style.display = 'block';
        } else if (log.metadata) {
            document.getElementById('modal-metadata').textContent = log.metadata;
            document.getElementById('modal-metadata-row').style.display = 'block';
        } else {
            document.getElementById('modal-metadata-row').style.display = 'none';
        }
        
        modal.show();
    }
});
</script>

