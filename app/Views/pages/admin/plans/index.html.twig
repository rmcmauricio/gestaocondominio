<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Gestão de Planos</h2>
            <p class="text-muted mb-0">Gerir planos de subscrição disponíveis</p>
        </div>
        <div>
            <a href="{{ BASE_URL }}admin/plans/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Novo Plano
            </a>
            <a href="{{ BASE_URL }}dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Planos</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Slug</th>
                            <th>Preço Mensal</th>
                            <th>Preço Anual</th>
                            <th>Limites</th>
                            <th>Status</th>
                            <th>Ordem</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for plan in plans %}
                        <tr>
                            <td>{{ plan.id }}</td>
                            <td>
                                <strong>{{ plan.name }}</strong>
                                {% if plan.description %}
                                <br><small class="text-muted">{{ plan.description|slice(0, 50) }}{% if plan.description|length > 50 %}...{% endif %}</small>
                                {% endif %}
                            </td>
                            <td><code>{{ plan.slug }}</code></td>
                            <td>€{{ plan.price_monthly|number_format(2, ',', '.') }}</td>
                            <td>
                                {% if plan.price_yearly %}
                                    €{{ plan.price_yearly|number_format(2, ',', '.') }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <small>
                                    {% if plan.limit_condominios %}
                                        Condomínios: {{ plan.limit_condominios }}<br>
                                    {% endif %}
                                    {% if plan.limit_fracoes %}
                                        Frações: {{ plan.limit_fracoes }}
                                    {% endif %}
                                    {% if not plan.limit_condominios and not plan.limit_fracoes %}
                                        <span class="text-muted">Sem limites</span>
                                    {% endif %}
                                </small>
                            </td>
                            <td>
                                {% if plan.is_active %}
                                    <span class="badge bg-success">Ativo</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inativo</span>
                                {% endif %}
                            </td>
                            <td>{{ plan.sort_order }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ BASE_URL }}admin/plans/{{ plan.id }}/edit" class="btn btn-sm btn-info" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    {% if plan.slug == 'business' %}
                                    <a href="{{ BASE_URL }}admin/plans/{{ plan.id }}/extra-condominiums-pricing" class="btn btn-sm btn-success" title="Gerir Preços de Condomínios Extras">
                                        <i class="bi bi-tag"></i>
                                    </a>
                                    {% endif %}
                                    <form method="POST" action="{{ BASE_URL }}admin/plans/{{ plan.id }}/toggle-active" class="d-inline">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-sm {% if plan.is_active %}btn-warning{% else %}btn-success{% endif %}" title="{% if plan.is_active %}Desativar{% else %}Ativar{% endif %}">
                                            <i class="bi {% if plan.is_active %}bi-toggle-on{% else %}bi-toggle-off{% endif %}"></i>
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ plan.id }}" title="Deletar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal{{ plan.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ plan.id }}" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title" id="deleteModalLabel{{ plan.id }}">Deletar Plano</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form method="POST" action="{{ BASE_URL }}admin/plans/{{ plan.id }}/delete">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <div class="modal-body">
                                            <p>Tem certeza que deseja deletar o plano <strong>{{ plan.name }}</strong>?</p>
                                            <div class="alert alert-warning">
                                                <small><i class="bi bi-exclamation-triangle"></i> Esta ação não pode ser desfeita. O plano só pode ser deletado se não houver subscrições ativas associadas.</small>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-danger">Deletar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted">
                                Nenhum plano encontrado. <a href="{{ BASE_URL }}admin/plans/create">Criar primeiro plano</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
