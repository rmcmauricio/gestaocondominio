<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>{% if pricing_tier %}Editar{% else %}Criar{% endif %} Escalão de Preço</h2>
            <p class="text-muted mb-0">Plano: <strong>{{ plan.name }}</strong></p>
        </div>
        <a href="{{ BASE_URL }}admin/plans/{{ plan.id }}/extra-condominiums-pricing" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-{% if pricing_tier %}pencil{% else %}plus-circle{% endif %}"></i> {% if pricing_tier %}Editar{% else %}Criar{% endif %} Escalão de Preço</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ BASE_URL }}admin/plans/{{ plan.id }}/extra-condominiums-pricing{% if pricing_tier %}/{{ pricing_tier.id }}{% endif %}" id="pricingForm">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="min_condominios" class="form-label">Número Mínimo de Condomínios <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="min_condominios" name="min_condominios" value="{{ pricing_tier.min_condominios|default('1') }}" min="1" required>
                        <small class="form-text text-muted">Número mínimo de condomínios para este escalão</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="max_condominios" class="form-label">Número Máximo de Condomínios</label>
                        <input type="number" class="form-control" id="max_condominios" name="max_condominios" value="{{ pricing_tier.max_condominios|default('') }}" min="1">
                        <small class="form-text text-muted">Deixe em branco para ilimitado</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="price_per_condominium" class="form-label">Preço por Condomínio Extra (€) <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input type="number" class="form-control" id="price_per_condominium" name="price_per_condominium" value="{{ pricing_tier.price_per_condominium|default('0') }}" step="0.01" min="0.01" required>
                        </div>
                        <small class="form-text text-muted">Preço mensal por cada condomínio extra neste escalão</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="sort_order" class="form-label">Ordem de Exibição</label>
                        <input type="number" class="form-control" id="sort_order" name="sort_order" value="{{ pricing_tier.sort_order|default('0') }}" min="0">
                        <small class="form-text text-muted">Escalões com menor número aparecem primeiro</small>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="is_active" name="is_active" value="1" {% if pricing_tier.is_active|default(true) %}checked{% endif %}>
                        <label class="form-check-label" for="is_active">
                            Escalão Ativo
                        </label>
                    </div>
                </div>

                <div class="alert alert-info" id="preview_alert">
                    <strong>Preview:</strong> <span id="preview_text"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ BASE_URL }}admin/plans/{{ plan.id }}/extra-condominiums-pricing" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-{% if pricing_tier %}check{% else %}plus-circle{% endif %}"></i> {% if pricing_tier %}Atualizar{% else %}Criar{% endif %} Escalão
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const minCondominiosInput = document.getElementById('min_condominios');
    const maxCondominiosInput = document.getElementById('max_condominios');
    const pricePerCondominiumInput = document.getElementById('price_per_condominium');
    const previewText = document.getElementById('preview_alert');

    function updatePreview() {
        const min = parseInt(minCondominiosInput.value) || 0;
        const max = maxCondominiosInput.value ? parseInt(maxCondominiosInput.value) : null;
        const price = parseFloat(pricePerCondominiumInput.value) || 0;

        if (min > 0 && price > 0) {
            const rangeText = max ? `${min} - ${max}` : `${min}+`;
            previewText.innerHTML = `<strong>Preview:</strong> Para ${rangeText} condomínios, cada condomínio extra custa <strong>€${price.toFixed(2)}</strong>/mês`;
            previewText.style.display = 'block';
        } else {
            previewText.style.display = 'none';
        }
    }

    minCondominiosInput.addEventListener('input', function() {
        const min = parseInt(this.value) || 0;
        if (maxCondominiosInput.value && parseInt(maxCondominiosInput.value) <= min) {
            maxCondominiosInput.setCustomValidity('O máximo deve ser maior que o mínimo');
        } else {
            maxCondominiosInput.setCustomValidity('');
        }
        updatePreview();
    });

    maxCondominiosInput.addEventListener('input', function() {
        const min = parseInt(minCondominiosInput.value) || 0;
        const max = this.value ? parseInt(this.value) : null;
        if (max && max <= min) {
            this.setCustomValidity('O máximo deve ser maior que o mínimo');
        } else {
            this.setCustomValidity('');
        }
        updatePreview();
    });

    pricePerCondominiumInput.addEventListener('input', updatePreview);

    // Initial preview
    updatePreview();
});
</script>
