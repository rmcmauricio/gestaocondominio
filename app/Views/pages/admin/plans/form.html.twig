<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>{% if plan %}Editar{% else %}Criar{% endif %} Plano</h2>
            <p class="text-muted mb-0">{% if plan %}Modificar informações do plano{% else %}Adicionar novo plano de subscrição{% endif %}</p>
        </div>
        <a href="{{ BASE_URL }}admin/plans" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-{% if plan %}pencil{% else %}plus-circle{% endif %}"></i> {% if plan %}Editar{% else %}Criar{% endif %} Plano</h5>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ BASE_URL }}admin/plans{% if plan %}/{{ plan.id }}{% endif %}" id="planForm">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Nome do Plano <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" name="name" value="{{ plan.name|default('') }}" required>
                        <small class="form-text text-muted">Ex: START, PRO, ENTERPRISE</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="slug" class="form-label">Slug <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="slug" name="slug" value="{{ plan.slug|default('') }}" required pattern="[a-z0-9-]+">
                        <small class="form-text text-muted">Identificador único (apenas letras minúsculas, números e hífens)</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descrição</label>
                    <textarea class="form-control" id="description" name="description" rows="3">{{ plan.description|default('') }}</textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="price_monthly" class="form-label">Preço Mensal (€) <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" id="price_monthly" name="price_monthly" value="{{ plan.price_monthly|default('0') }}" step="0.01" min="0" required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="price_yearly" class="form-label">Preço Anual (€)</label>
                        <input type="number" class="form-control" id="price_yearly" name="price_yearly" value="{{ plan.price_yearly|default('') }}" step="0.01" min="0">
                        <small class="form-text text-muted">Deixe em branco se não disponível</small>
                    </div>
                </div>

                <!-- Novo Modelo de Licenças -->
                <div class="card mb-4 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="bi bi-key"></i> Modelo de Licenças</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="plan_type" class="form-label">Tipo de Plano</label>
                                <select class="form-select" id="plan_type" name="plan_type">
                                    <option value="">-- Selecione --</option>
                                    <option value="condominio" {% if plan.plan_type|default('') == 'condominio' %}selected{% endif %}>Condomínio (Base)</option>
                                    <option value="professional" {% if plan.plan_type|default('') == 'professional' %}selected{% endif %}>Profissional</option>
                                    <option value="enterprise" {% if plan.plan_type|default('') == 'enterprise' %}selected{% endif %}>Enterprise</option>
                                </select>
                                <small class="form-text text-muted">Tipo do plano no novo modelo baseado em licenças</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="license_min" class="form-label">Mínimo de Licenças</label>
                                <input type="number" class="form-control" id="license_min" name="license_min" value="{{ plan.license_min|default('') }}" min="0">
                                <small class="form-text text-muted">Número mínimo de licenças (frações ativas) sempre cobrado</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="license_limit" class="form-label">Limite de Licenças</label>
                                <input type="number" class="form-control" id="license_limit" name="license_limit" value="{{ plan.license_limit|default('') }}" min="0">
                                <small class="form-text text-muted">Limite máximo (deixe em branco para ilimitado)</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="pricing_mode" class="form-label">Modo de Pricing</label>
                                <select class="form-select" id="pricing_mode" name="pricing_mode">
                                    <option value="flat" {% if plan.pricing_mode|default('flat') == 'flat' %}selected{% endif %}>Flat (Todos ao mesmo preço do escalão)</option>
                                    <option value="progressive" {% if plan.pricing_mode|default('') == 'progressive' %}selected{% endif %}>Progressive (Proporcional por escalão)</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="limit_condominios" class="form-label">Limite de Condomínios</label>
                                <input type="number" class="form-control" id="limit_condominios" name="limit_condominios" value="{{ plan.limit_condominios|default('') }}" min="0">
                                <small class="form-text text-muted">Limite de condomínios permitidos. Deixe em branco (NULL) para ilimitado. Plano base deve ter limite 1.</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="allow_multiple_condos" name="allow_multiple_condos" value="1" {% if plan.allow_multiple_condos|default(false) %}checked{% endif %}>
                                    <label class="form-check-label" for="allow_multiple_condos">
                                        Permitir Múltiplos Condomínios
                                    </label>
                                    <small class="form-text text-muted d-block">Se marcado, permite associar múltiplos condomínios à subscrição</small>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="allow_overage" name="allow_overage" value="1" {% if plan.allow_overage|default(false) %}checked{% endif %}>
                                    <label class="form-check-label" for="allow_overage">
                                        Permitir Overage
                                    </label>
                                    <small class="form-text text-muted d-block">Se marcado, permite exceder o limite de licenças (apenas Enterprise)</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="annual_discount_percentage" class="form-label">Desconto Anual (%)</label>
                                <input type="number" class="form-control" id="annual_discount_percentage" name="annual_discount_percentage" value="{{ plan.annual_discount_percentage|default('0') }}" step="0.01" min="0" max="100">
                                <small class="form-text text-muted">Percentagem de desconto para pagamento anual</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Campos Legados (Compatibilidade) -->
                <div class="card mb-4 border-secondary">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="bi bi-info-circle"></i> Campos Legados (Compatibilidade)</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="limit_fracoes" class="form-label">Limite de Frações (Legado)</label>
                                <input type="number" class="form-control" id="limit_fracoes" name="limit_fracoes" value="{{ plan.limit_fracoes|default('') }}" min="0">
                                <small class="form-text text-muted">Mantido para compatibilidade - não usado no novo modelo</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="features" class="form-label">Features (JSON)</label>
                    <textarea class="form-control font-monospace" id="features" name="features" rows="10" placeholder='{"financas_basicas": true, "documentos": true, "votacoes_online": false}'>{% if plan.features %}{{ plan.features|json_encode(constant('JSON_PRETTY_PRINT')) }}{% endif %}</textarea>
                    <small class="form-text text-muted">Formato JSON com as features disponíveis no plano</small>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="sort_order" class="form-label">Ordem de Exibição</label>
                        <input type="number" class="form-control" id="sort_order" name="sort_order" value="{{ plan.sort_order|default('0') }}" min="0">
                        <small class="form-text text-muted">Planos com menor número aparecem primeiro</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" id="is_active" name="is_active" value="1" {% if plan.is_active|default(true) %}checked{% endif %}>
                            <label class="form-check-label" for="is_active">
                                Plano Ativo
                            </label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ BASE_URL }}admin/plans" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-{% if plan %}check{% else %}plus-circle{% endif %}"></i> {% if plan %}Atualizar{% else %}Criar{% endif %} Plano
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-generate slug from name
    const nameInput = document.getElementById('name');
    const slugInput = document.getElementById('slug');
    
    if (nameInput && slugInput && !slugInput.value) {
        nameInput.addEventListener('input', function() {
            if (!slugInput.value || slugInput.dataset.autoGenerated === 'true') {
                let slug = this.value
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '')
                    .replace(/[^a-z0-9]+/g, '-')
                    .replace(/^-+|-+$/g, '');
                slugInput.value = slug;
                slugInput.dataset.autoGenerated = 'true';
            }
        });
    }

    // Validate JSON on form submit
    const form = document.getElementById('planForm');
    const featuresInput = document.getElementById('features');
    
    form.addEventListener('submit', function(e) {
        if (featuresInput.value.trim()) {
            try {
                JSON.parse(featuresInput.value);
            } catch (err) {
                e.preventDefault();
                alert('O campo Features contém JSON inválido. Por favor, corrija antes de submeter.');
                featuresInput.focus();
                return false;
            }
        }
    });
});
</script>
