<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Consulta de Pagamentos</h2>
            <p class="text-muted mb-0">Visualizar todos os pagamentos das subscrições</p>
        </div>
        <a href="{{ BASE_URL }}dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-credit-card"></i> Pagamentos</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Utilizador</th>
                            <th>Plano</th>
                            <th>Método</th>
                            <th>Valor</th>
                            <th>Status</th>
                            <th>Referência</th>
                            <th>Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for payment in payments %}
                        <tr>
                            <td>{{ payment.id }}</td>
                            <td>
                                <strong>{{ payment.user_name }}</strong><br>
                                <small class="text-muted">{{ payment.user_email }}</small>
                            </td>
                            <td>
                                {% if payment.plan_name %}
                                    <span class="badge bg-primary">{{ payment.plan_name }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if payment.payment_method == 'multibanco' %}
                                    <span class="badge bg-info"><i class="bi bi-bank"></i> Multibanco</span>
                                {% elseif payment.payment_method == 'mbway' %}
                                    <span class="badge bg-success"><i class="bi bi-phone"></i> MBWay</span>
                                {% elseif payment.payment_method == 'sepa' %}
                                    <span class="badge bg-warning"><i class="bi bi-arrow-repeat"></i> SEPA</span>
                                {% elseif payment.payment_method == 'direct_debit' %}
                                    <span class="badge bg-primary"><i class="bi bi-arrow-repeat"></i> Débito Direto</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ payment.payment_method }}</span>
                                {% endif %}
                            </td>
                            <td><strong>€{{ payment.amount|number_format(2, ',', '.') }}</strong></td>
                            <td>
                                {% if payment.status == 'completed' %}
                                    <span class="badge bg-success">Concluído</span>
                                {% elseif payment.status == 'pending' %}
                                    <span class="badge bg-warning">Pendente</span>
                                {% elseif payment.status == 'failed' %}
                                    <span class="badge bg-danger">Falhado</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ payment.status }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if payment.reference %}
                                    <code>{{ payment.reference }}</code>
                                {% elseif payment.external_payment_id %}
                                    <code>{{ payment.external_payment_id }}</code>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ payment.created_at|date('d/m/Y H:i') }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                Nenhum pagamento encontrado.
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
