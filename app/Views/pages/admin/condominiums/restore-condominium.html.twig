<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h2><i class="bi bi-archive"></i> Backup e Restaurar</h2>
            <p class="text-muted mb-0">{{ condominium.name }} — criar backup ou restaurar a partir de um backup</p>
        </div>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBackupModal" title="Criar novo backup">
                <i class="bi bi-download"></i> Criar backup
            </button>
            <a href="{{ url_back_to_list|default(BASE_URL ~ 'admin/condominiums') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {% endif %}

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-upload"></i> Restaurar a partir de ficheiro</h5>
        </div>
        <div class="card-body">
            <p class="text-muted">Faça upload de um ficheiro .backup para restaurar. O backup deve ser deste condomínio (ID {{ condominium_id }}).</p>
            <form method="post" action="{{ url_restore_form }}" enctype="multipart/form-data">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <input type="hidden" name="condominium_id" value="{{ condominium_id }}">
                <div class="row g-2 align-items-end">
                    <div class="col-auto flex-grow-1">
                        <input type="file" name="backup_file" class="form-control" accept=".backup" required>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-arrow-counterclockwise"></i> Restaurar a partir do ficheiro
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% if backups|length == 0 %}
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-archive display-4 text-muted"></i>
            <h5 class="mt-3">Nenhum backup deste condomínio</h5>
            <p class="text-muted mb-0">Clique em <strong>Criar backup</strong> acima para gerar o primeiro backup. Depois poderá descarregar, restaurar ou apagar.</p>
            <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#createBackupModal">
                <i class="bi bi-download"></i> Criar backup agora
            </button>
        </div>
    </div>
    {% else %}
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-archive"></i> Backups do condomínio ({{ backups|length }})</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th class="text-end">Tamanho</th>
                            <th>Data</th>
                            <th class="text-end" style="min-width: 280px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for backup in backups %}
                        <tr>
                            <td><code class="small">{{ backup.name }}</code></td>
                            <td class="text-end">{{ backup.size_kb }} KB</td>
                            <td>{{ backup.modified|date('d/m/Y H:i') }}</td>
                            <td class="text-end">
                                <a href="{{ url_download_base|default(BASE_URL ~ 'admin/condominiums/backup-download?file=') }}{{ backup.name|e('url') }}" class="btn btn-sm btn-outline-primary" title="Descarregar ficheiro">
                                    <i class="bi bi-download"></i> Descarregar
                                </a>
                                <form method="post" action="{{ url_restore_form }}" class="d-inline ms-1">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="condominium_id" value="{{ condominium_id }}">
                                    <input type="hidden" name="existing_backup" value="{{ backup.path }}">
                                    <button type="submit" class="btn btn-sm btn-success" title="Restaurar este backup">
                                        <i class="bi bi-arrow-counterclockwise"></i> Restaurar
                                    </button>
                                </form>
                                <form method="post" action="{{ url_backup_delete|default(BASE_URL ~ 'admin/condominiums/backup-delete') }}" class="d-inline ms-1" onsubmit="return confirm('Apagar este backup? Esta ação não pode ser desfeita.');">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="backup_path" value="{{ backup.path }}">
                                    <input type="hidden" name="redirect_url" value="{{ url_restore_page|default(BASE_URL ~ 'admin/condominiums/' ~ condominium_id ~ '/restore') }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Apagar backup">
                                        <i class="bi bi-trash"></i> Apagar
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <p class="text-muted small mb-0">
                <i class="bi bi-info-circle"></i> Restaurar substitui o condomínio atual pelos dados do backup (mantém o mesmo ID). Apagar remove o ficheiro de backup do servidor.
            </p>
        </div>
    </div>
    {% endif %}
</div>

{# Modal criar backup (igual ao da lista de condomínios) #}
<div class="modal fade" id="createBackupModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title"><i class="bi bi-download"></i> Criar backup</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="createBackupModalBody">
                <p class="mb-0">Criar backup do condomínio <strong>{{ condominium.name|e('html') }}</strong>? O ficheiro será guardado no servidor e poderá descarregá-lo ou restaurá-lo depois.</p>
                {% if backup_to_remove_if_at_limit %}
                <div class="alert alert-warning mt-2 mb-0">
                    <i class="bi bi-exclamation-triangle"></i> O backup <strong><code>{{ backup_to_remove_if_at_limit.name }}</code></strong> será removido. Se pretender guardá-lo, descarregue-o antes de criar o novo.
                </div>
                {% endif %}
            </div>
            <div class="modal-footer" id="createBackupModalFooter">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="createBackupConfirmBtn">
                    <i class="bi bi-download"></i> Criar backup
                </button>
            </div>
        </div>
    </div>
</div>
<script>
(function() {
    const modal = document.getElementById('createBackupModal');
    const bodyEl = document.getElementById('createBackupModalBody');
    const footerEl = document.getElementById('createBackupModalFooter');
    const condominiumId = {{ condominium_id }};
    const baseUrl = '{{ BASE_URL }}';
    const csrfToken = '{{ csrf_token }}';
    const condominiumName = "{{ condominium.name|e('js') }}";

    const backupToRemoveWarning = {% if backup_to_remove_if_at_limit %}"O backup {{ backup_to_remove_if_at_limit.name|e('js') }} será removido. Se pretender guardá-lo, descarregue-o antes de criar o novo."{% else %}null{% endif %};
    function showConfirm() {
        let html = '<p class="mb-0">Criar backup do condomínio <strong>' + condominiumName + '</strong>? O ficheiro será guardado no servidor e poderá descarregá-lo ou restaurá-lo depois.</p>';
        if (backupToRemoveWarning) {
            html += '<div class="alert alert-warning mt-2 mb-0"><i class="bi bi-exclamation-triangle"></i> ' + backupToRemoveWarning + '</div>';
        }
        bodyEl.innerHTML = html;
        footerEl.innerHTML = '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button><button type="button" class="btn btn-primary" id="createBackupConfirmBtn"><i class="bi bi-download"></i> Criar backup</button>';
        document.getElementById('createBackupConfirmBtn').addEventListener('click', doCreate);
    }
    function showLoading() {
        bodyEl.innerHTML = '<p class="mb-0 text-center"><span class="spinner-border spinner-border-sm me-2"></span>A criar backup...</p>';
        footerEl.innerHTML = '';
    }
    const urlRestorePage = "{{ url_restore_page|default(BASE_URL ~ 'admin/condominiums/' ~ condominium_id ~ '/restore')|e('js') }}";
    function showSuccess(name, sizeKb, downloadUrl) {
        bodyEl.innerHTML = '<div class="text-center"><i class="bi bi-check-circle text-success display-4"></i><p class="mt-2 mb-0"><strong>Backup criado com sucesso</strong></p><p class="mb-0 mt-1"><code>' + name + '</code></p><p class="text-muted small mb-0">' + sizeKb + ' KB</p></div>';
        footerEl.innerHTML = '<a href="' + downloadUrl + '" class="btn btn-primary" download><i class="bi bi-download"></i> Descarregar</a><a href="' + urlRestorePage + '" class="btn btn-secondary">Fechar e ver lista</a>';
    }
    function showError(msg) {
        bodyEl.innerHTML = '<div class="alert alert-danger mb-0"><i class="bi bi-exclamation-triangle"></i> ' + (msg || 'Erro ao criar backup.') + '</div>';
        footerEl.innerHTML = '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>';
    }
    function doCreate() {
        showLoading();
        var formData = new FormData();
        formData.append('csrf_token', csrfToken);
        const urlCreateBackup = "{{ url_create_backup|default(BASE_URL ~ 'admin/condominiums/' ~ condominium_id ~ '/create-backup')|e('js') }}";
        fetch(urlCreateBackup, { method: 'POST', body: formData })
            .then(function(r) { return r.json(); })
            .then(function(data) {
                if (data.success) showSuccess(data.name, data.size_kb, data.download_url);
                else showError(data.error);
            })
            .catch(function() { showError('Erro de ligação.'); });
    }
    modal.addEventListener('show.bs.modal', function() { showConfirm(); });
})();
</script>
