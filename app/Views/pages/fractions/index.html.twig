<div class="container py-4">
    {% set page_actions %}
        {% if is_admin %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nova Fração
            </a>
        </div>
        {% endif %}
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Frações',
        'help_section': 'fractions',
        'help_title': 'Ajuda com Frações',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if total_permillage %}
    <div class="alert alert-info mb-3">
        <strong>Total de Permilagem:</strong> {{ total_permillage }}‰
        {% if total_permillage != 1000 %}
            <span class="text-warning">(Atenção: Total deve ser 1000‰)</span>
        {% else %}
            <span class="text-success">✓</span>
        {% endif %}
    </div>
    {% endif %}

    {% if fractions %}
    {# Desktop: Tabela #}
    <div class="card shadow-sm d-none d-md-block">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Identificador</th>
                            <th>Tipologia</th>
                            <th>Área (m²)</th>
                            <th>Permilagem</th>
                            <th>Condómino</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for fraction in fractions %}
                        <tr>
                            <td><strong>{{ fraction.identifier }}</strong></td>
                            <td>{{ fraction.typology|default('-') }}</td>
                            <td>{{ fraction.area|default('-') }}</td>
                            <td>{{ fraction.permillage|default(0) }}‰</td>
                            <td>
                                {% if fraction.owners|length > 0 %}
                                    <div>
                                        {% for owner in fraction.owners %}
                                            <div class="mb-2 {% if not loop.last %}border-bottom pb-2{% endif %}">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <strong>{{ owner.name }}</strong>
                                                        {% if owner.is_primary %}<span class="badge bg-primary ms-1" style="font-size: 0.65rem;">Principal</span>{% endif %}
                                                        <br>
                                                        <small class="text-muted">{{ owner.email }}</small>
                                                        {% if owner.phone %}<br><small class="text-muted"><i class="bi bi-telephone"></i> {{ owner.phone }}</small>{% endif %}
                                                    </div>
                                                    {% if is_admin %}
                                                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/remove-owner" class="d-inline ms-2">
                                                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                                            <input type="hidden" name="user_id" value="{{ owner.user_id }}">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Desassociar condómino" onclick="return confirm('Tem certeza que deseja desassociar {{ owner.name }} desta fração?');">
                                                                <i class="bi bi-person-dash"></i>
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                
                                {% if fraction.pending_invitations|length > 0 %}
                                    <div class="mt-2 {% if fraction.owners|length > 0 %}border-top pt-2{% endif %}">
                                        {% for invitation in fraction.pending_invitations %}
                                            <div class="mb-2 {% if not loop.last %}border-bottom pb-2{% endif %}">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <strong>{{ invitation.name }}</strong>
                                                        <span class="badge bg-warning ms-1" style="font-size: 0.65rem;">Pendente</span>
                                                        {% if not invitation.email %}
                                                            <span class="badge bg-secondary ms-1" style="font-size: 0.65rem;">Sem email</span>
                                                        {% endif %}
                                                        <br>
                                                        {% if invitation.email %}
                                                            <small class="text-muted">{{ invitation.email }}</small>
                                                            <br>
                                                            <small class="text-muted">
                                                                <i class="bi bi-clock"></i> Convite enviado em {{ invitation.created_at|date('d/m/Y H:i') }}
                                                            </small>
                                                        {% else %}
                                                            <small class="text-muted">
                                                                <i class="bi bi-info-circle"></i> Adicione um email para enviar o convite
                                                            </small>
                                                        {% endif %}
                                                    </div>
                                                    {% if is_admin %}
                                                        <div class="d-flex gap-1 ms-2">
                                                            {% if not invitation.email %}
                                                                <button type="button" class="btn btn-sm btn-outline-primary" title="Adicionar email e enviar convite" data-bs-toggle="modal" data-bs-target="#addEmailModal{{ invitation.id }}">
                                                                    <i class="bi bi-envelope-plus"></i>
                                                                </button>
                                                            {% else %}
                                                                <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/invitations/{{ invitation.id }}/resend" class="d-inline">
                                                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                                                    <input type="hidden" name="fraction_id" value="{{ fraction.id }}">
                                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Reenviar convite" onclick="return confirm('Tem certeza que deseja reenviar o convite para {{ invitation.name }}?');">
                                                                        <i class="bi bi-arrow-repeat"></i>
                                                                    </button>
                                                                </form>
                                                            {% endif %}
                                                            <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/invitations/{{ invitation.id }}/revoke" class="d-inline">
                                                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                                                <input type="hidden" name="fraction_id" value="{{ fraction.id }}">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Revogar convite" onclick="return confirm('Tem certeza que deseja revogar o convite para {{ invitation.name }}?');">
                                                                    <i class="bi bi-x-circle"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                
                                {% if fraction.owners|length == 0 and fraction.pending_invitations|length == 0 %}
                                    <span class="text-muted">Não atribuída</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge {% if fraction.is_active %}bg-success{% else %}bg-secondary{% endif %}">
                                    {% if fraction.is_active %}Ativa{% else %}Inativa{% endif %}
                                </span>
                            </td>
                            <td>
                                {% if is_admin %}
                                <div class="d-flex gap-1">
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/edit" class="btn btn-outline-primary btn-sm" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    {% if not fraction.primary_owner %}
                                    <button type="button" class="btn btn-outline-info btn-sm" title="Atribuir a mim" data-bs-toggle="modal" data-bs-target="#assignSelfModal{{ fraction.id }}">
                                        <i class="bi bi-person-check"></i>
                                    </button>
                                    {% endif %}
                                    <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#inviteModal{{ fraction.id }}" title="Convidar Condómino">
                                        <i class="bi bi-person-plus"></i>
                                    </button>
                                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/delete" class="d-inline" onsubmit="return confirm('Tem certeza que deseja remover esta fração?');">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Remover">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Mobile: Cards #}
    <div class="d-md-none">
        {% for fraction in fractions %}
        <div class="card shadow-sm mb-2">
            <div class="card-body p-3">
                {# Header: Identificador, Tipologia, Área, Permilagem, Status inline #}
                <div class="d-flex align-items-center mb-2" style="flex-wrap: nowrap; gap: 0.5rem;">
                    <strong class="mb-0">{{ fraction.identifier }}</strong>
                    {% if fraction.typology %}
                    <span class="small text-muted">{{ fraction.typology }}</span>
                    {% endif %}
                    {% if fraction.area %}
                    <span class="small text-muted">{{ fraction.area }}m²</span>
                    {% endif %}
                    <span class="small text-muted">{{ fraction.permillage|default(0) }}‰</span>
                    <div style="flex: 1;"></div>
                    <span class="badge {% if fraction.is_active %}bg-success{% else %}bg-secondary{% endif %}">
                        {% if fraction.is_active %}Ativa{% else %}Inativa{% endif %}
                    </span>
                </div>

                {# Condómino(s) #}
                {% if fraction.owners|length > 0 %}
                <div class="mb-2">
                    {% for owner in fraction.owners %}
                    <div class="d-flex justify-content-between align-items-start {% if not loop.last %}mb-2 pb-2 border-bottom{% endif %}">
                        <div class="flex-grow-1" style="min-width: 0;">
                            <div class="d-flex align-items-center gap-1 flex-wrap">
                                <strong class="small">{{ owner.name }}</strong>
                                {% if owner.is_primary %}<span class="badge bg-primary" style="font-size: 0.6rem;">Principal</span>{% endif %}
                            </div>
                            <small class="text-muted d-block">{{ owner.email }}</small>
                            {% if owner.phone %}<small class="text-muted d-block"><i class="bi bi-telephone"></i> {{ owner.phone }}</small>{% endif %}
                        </div>
                        {% if is_admin %}
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/remove-owner" class="d-inline ms-2">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <input type="hidden" name="user_id" value="{{ owner.user_id }}">
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Desassociar" onclick="return confirm('Desassociar {{ owner.name }}?');">
                                <i class="bi bi-person-dash"></i>
                            </button>
                        </form>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                {% endif %}

                {# Convites Pendentes #}
                {% if fraction.pending_invitations|length > 0 %}
                <div class="mb-2 {% if fraction.owners|length > 0 %}border-top pt-2{% endif %}">
                    {% for invitation in fraction.pending_invitations %}
                    <div class="d-flex justify-content-between align-items-start {% if not loop.last %}mb-2 pb-2 border-bottom{% endif %}">
                        <div class="flex-grow-1" style="min-width: 0;">
                            <div class="d-flex align-items-center gap-1 flex-wrap">
                                <strong class="small">{{ invitation.name }}</strong>
                                <span class="badge bg-warning" style="font-size: 0.6rem;">Pendente</span>
                                {% if not invitation.email %}
                                    <span class="badge bg-secondary" style="font-size: 0.6rem;">Sem email</span>
                                {% endif %}
                            </div>
                            {% if invitation.email %}
                                <small class="text-muted d-block">{{ invitation.email }}</small>
                                <small class="text-muted d-block"><i class="bi bi-clock"></i> {{ invitation.created_at|date('d/m/Y H:i') }}</small>
                            {% else %}
                                <small class="text-muted d-block"><i class="bi bi-info-circle"></i> Adicione um email para enviar o convite</small>
                            {% endif %}
                        </div>
                        {% if is_admin %}
                        <div class="d-flex gap-1 ms-2">
                            {% if not invitation.email %}
                                <button type="button" class="btn btn-sm btn-outline-primary" title="Adicionar email" data-bs-toggle="modal" data-bs-target="#addEmailModal{{ invitation.id }}">
                                    <i class="bi bi-envelope-plus"></i>
                                </button>
                            {% else %}
                                <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/invitations/{{ invitation.id }}/resend" class="d-inline">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="fraction_id" value="{{ fraction.id }}">
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Reenviar" onclick="return confirm('Reenviar convite para {{ invitation.name }}?');">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                </form>
                            {% endif %}
                            <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/invitations/{{ invitation.id }}/revoke" class="d-inline">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <input type="hidden" name="fraction_id" value="{{ fraction.id }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Revogar" onclick="return confirm('Revogar convite para {{ invitation.name }}?');">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                {% endif %}

                {# Não atribuída #}
                {% if fraction.owners|length == 0 and fraction.pending_invitations|length == 0 %}
                <div class="mb-2">
                    <span class="text-muted small">Não atribuída</span>
                </div>
                {% endif %}

                {# Ações #}
                {% if is_admin %}
                <div class="d-flex gap-1 flex-wrap">
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/edit" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    {% if not fraction.primary_owner %}
                    <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#assignSelfModal{{ fraction.id }}">
                        <i class="bi bi-person-check"></i> Atribuir
                    </button>
                    {% endif %}
                    <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#inviteModal{{ fraction.id }}">
                        <i class="bi bi-person-plus"></i> Convidar
                    </button>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/delete" class="d-inline" onsubmit="return confirm('Remover esta fração?');">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Remover
                        </button>
                    </form>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    
    <!-- Modals for invitations (outside table to avoid conflicts) -->
    {% for fraction in fractions %}
    <!-- Invite Modal for Fraction {{ fraction.id }} -->
    <div class="modal fade" id="inviteModal{{ fraction.id }}" tabindex="-1" aria-labelledby="inviteModalLabel{{ fraction.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inviteModalLabel{{ fraction.id }}">Convidar Condómino</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/invitations" id="inviteForm{{ fraction.id }}">
                    <div class="modal-body">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="fraction_id" value="{{ fraction.id }}">
                        
                        <div class="mb-3">
                            <label class="form-label">Fração</label>
                            <input type="text" class="form-control" value="{{ fraction.identifier }}" readonly>
                        </div>
                        
                        <div class="mb-3">
                            <label for="name{{ fraction.id }}" class="form-label">Nome <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name{{ fraction.id }}" name="name" required placeholder="Nome completo">
                        </div>
                        
                        <div class="mb-3">
                            <label for="email{{ fraction.id }}" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email{{ fraction.id }}" name="email" placeholder="email@exemplo.com (opcional)">
                            <small class="form-text text-muted">Deixe em branco para adicionar apenas o nome. Pode adicionar o email posteriormente.</small>
                        </div>
                        
                        <div class="mb-3">
                            <label for="role{{ fraction.id }}" class="form-label">Tipo</label>
                            <select class="form-select" id="role{{ fraction.id }}" name="role">
                                <option value="proprietario">Proprietário</option>
                                <option value="condomino">Condómino</option>
                                <option value="arrendatario">Arrendatário</option>
                            </select>
                        </div>
                        
                        <div class="alert alert-info">
                            <small><i class="bi bi-info-circle"></i> Se fornecer um email, um convite será enviado automaticamente. Caso contrário, pode adicionar o email posteriormente.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="submitBtn{{ fraction.id }}">
                            <i class="bi bi-envelope" id="icon{{ fraction.id }}"></i> <span id="btnText{{ fraction.id }}">Atribuir Fração</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {% endfor %}
    
    <!-- Modals for assigning fraction to self -->
    {% for fraction in fractions %}
        {% if not fraction.primary_owner %}
        <!-- Assign Self Modal for Fraction {{ fraction.id }} -->
        <div class="modal fade" id="assignSelfModal{{ fraction.id }}" tabindex="-1" aria-labelledby="assignSelfModalLabel{{ fraction.id }}" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="assignSelfModalLabel{{ fraction.id }}">Atribuir Fração</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/{{ fraction.id }}/assign-self" id="assignSelfForm{{ fraction.id }}">
                        <div class="modal-body">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> <strong>Confirmação</strong>
                            </div>
                            
                            <p>Tem certeza que deseja atribuir a fração <strong>{{ fraction.identifier }}</strong> a si mesmo?</p>
                            
                            <div class="mb-3">
                                <p class="mb-1"><strong>Administrador:</strong> {{ user.name }}</p>
                                <p class="mb-0"><strong>Fração:</strong> {{ fraction.identifier }}</p>
                            </div>
                            
                            <div class="alert alert-warning">
                                <small><i class="bi bi-exclamation-triangle"></i> Esta ação irá associá-lo como <strong>proprietário</strong> desta fração.</small>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-check"></i> Confirmar Atribuição
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}
    
    <!-- Modals for adding email to pending invitations -->
    {% for fraction in fractions %}
        {% for invitation in fraction.pending_invitations %}
            {% if not invitation.email %}
            <!-- Add Email Modal for Invitation {{ invitation.id }} -->
            <div class="modal fade" id="addEmailModal{{ invitation.id }}" tabindex="-1" aria-labelledby="addEmailModalLabel{{ invitation.id }}" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addEmailModalLabel{{ invitation.id }}">Adicionar Email e Enviar Convite</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/invitations/{{ invitation.id }}/update-email-and-send" id="addEmailForm{{ invitation.id }}">
                            <div class="modal-body">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <input type="hidden" name="fraction_id" value="{{ fraction.id }}">
                                
                                <div class="mb-3">
                                    <label class="form-label">Nome</label>
                                    <input type="text" class="form-control" value="{{ invitation.name }}" readonly>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email_invitation{{ invitation.id }}" class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" id="email_invitation{{ invitation.id }}" name="email" required placeholder="email@exemplo.com">
                                </div>
                                
                                <div class="alert alert-info">
                                    <small><i class="bi bi-info-circle"></i> Um email será enviado com um link para criar a conta e aceitar o convite.</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-envelope"></i> Adicionar Email e Enviar Convite
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
    
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-house-door display-1 text-muted"></i>
            <h4 class="mt-3">Nenhuma fração cadastrada</h4>
            <p class="text-muted">Comece criando a primeira fração deste condomínio</p>
            {% if is_admin %}
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/fractions/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Fração
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>

<script>
    // Prevent modal form submission issues
    document.addEventListener('DOMContentLoaded', function() {
        // Handle modal form submissions
        {% for fraction in fractions %}
        const form{{ fraction.id }} = document.getElementById('inviteForm{{ fraction.id }}');
        if (form{{ fraction.id }}) {
            form{{ fraction.id }}.addEventListener('submit', function(e) {
                // Prevent multiple submissions
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Enviando...';
                }
            });
        }
        
        // Function to update button text based on email input
        let emailListenerAdded{{ fraction.id }} = false;
        function updateButtonText{{ fraction.id }}() {
            const emailInput = document.getElementById('email{{ fraction.id }}');
            const btnText = document.getElementById('btnText{{ fraction.id }}');
            const icon = document.getElementById('icon{{ fraction.id }}');
            
            if (emailInput && btnText && icon) {
                // Add event listener only once
                if (!emailListenerAdded{{ fraction.id }}) {
                    emailInput.addEventListener('input', function() {
                        const btnTextEl = document.getElementById('btnText{{ fraction.id }}');
                        const iconEl = document.getElementById('icon{{ fraction.id }}');
                        if (this.value.trim() !== '') {
                            btnTextEl.textContent = 'Enviar Convite';
                            iconEl.className = 'bi bi-envelope';
                        } else {
                            btnTextEl.textContent = 'Atribuir Fração';
                            iconEl.className = 'bi bi-person-plus';
                        }
                    });
                    emailListenerAdded{{ fraction.id }} = true;
                }
                
                // Check initial state
                if (emailInput.value.trim() === '') {
                    btnText.textContent = 'Atribuir Fração';
                    icon.className = 'bi bi-person-plus';
                } else {
                    btnText.textContent = 'Enviar Convite';
                    icon.className = 'bi bi-envelope';
                }
            }
        }
        
        // Prevent modal from closing unexpectedly
        const modal{{ fraction.id }} = document.getElementById('inviteModal{{ fraction.id }}');
        if (modal{{ fraction.id }}) {
            modal{{ fraction.id }}.addEventListener('show.bs.modal', function() {
                // Reset form when modal opens
                const form = document.getElementById('inviteForm{{ fraction.id }}');
                if (form) {
                    form.reset();
                    updateButtonText{{ fraction.id }}();
                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = false;
                    }
                }
            });
            
            // Prevent modal from closing on backdrop click if form has errors
            modal{{ fraction.id }}.addEventListener('hide.bs.modal', function(e) {
                const form = document.getElementById('inviteForm{{ fraction.id }}');
                if (form && form.querySelector('.is-invalid')) {
                    e.preventDefault();
                }
            });
        }
        
        // Initialize button text on page load
        updateButtonText{{ fraction.id }}();
        {% endfor %}
        
        // Handle add email modal form submissions
        {% for fraction in fractions %}
            {% for invitation in fraction.pending_invitations %}
                {% if not invitation.email %}
                const addEmailForm{{ invitation.id }} = document.getElementById('addEmailForm{{ invitation.id }}');
                if (addEmailForm{{ invitation.id }}) {
                    addEmailForm{{ invitation.id }}.addEventListener('submit', function(e) {
                        // Prevent multiple submissions
                        const submitBtn = this.querySelector('button[type="submit"]');
                        if (submitBtn) {
                            submitBtn.disabled = true;
                            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Enviando...';
                        }
                    });
                }
                {% endif %}
            {% endfor %}
        {% endfor %}
        
        // Handle assign self modal form submissions
        {% for fraction in fractions %}
            {% if not fraction.primary_owner %}
            const assignSelfForm{{ fraction.id }} = document.getElementById('assignSelfForm{{ fraction.id }}');
            if (assignSelfForm{{ fraction.id }}) {
                assignSelfForm{{ fraction.id }}.addEventListener('submit', function(e) {
                    // Prevent multiple submissions
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Atribuindo...';
                    }
                });
            }
            {% endif %}
        {% endfor %}
    });
</script>

