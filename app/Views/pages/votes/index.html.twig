<div class="container py-4">
    {% set page_actions %}
        {% if is_admin %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/vote-options" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-gear"></i> Opções de Resposta
            </a>
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nova Votação
            </a>
        </div>
        {% endif %}
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Votações',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="mb-3">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="voteStatusFilter" data-bs-toggle="dropdown" aria-expanded="false">
                {% if not current_status %}
                    Todas
                {% elseif current_status == 'draft' %}
                    Rascunho
                {% elseif current_status == 'open' %}
                    Em Aberto
                {% elseif current_status == 'closed' %}
                    Encerradas
                {% else %}
                    Todas
                {% endif %}
            </button>
            <ul class="dropdown-menu" aria-labelledby="voteStatusFilter">
                <li>
                    <a class="dropdown-item {% if not current_status %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes">
                        Todas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'draft' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes?status=draft">
                        Rascunho
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'open' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes?status=open">
                        Em Aberto
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'closed' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes?status=closed">
                        Encerradas
                    </a>
                </li>
            </ul>
        </div>
    </div>

    {% if votes %}
    <div class="row g-4">
        {% for vote in votes %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ vote.title }}</h5>
                        <span class="badge 
                            {% if vote.status == 'draft' %}bg-secondary
                            {% elseif vote.status == 'open' %}bg-primary
                            {% else %}bg-success{% endif %}">
                            {% if vote.status == 'draft' %}Rascunho
                            {% elseif vote.status == 'open' %}Em Aberto
                            {% else %}Encerrada{% endif %}
                        </span>
                    </div>
                    {% if vote.description %}
                    <p class="card-text text-muted small">{{ vote.description|slice(0, 100) }}{% if vote.description|length > 100 %}...{% endif %}</p>
                    {% endif %}
                    <div class="mt-3">
                        <small class="text-muted d-block">
                            <i class="bi bi-calendar"></i> 
                            {% if vote.voting_started_at %}
                                Iniciada: {{ vote.voting_started_at|date('d/m/Y H:i') }}
                            {% else %}
                                Criada: {{ vote.created_at|date('d/m/Y') }}
                            {% endif %}
                        </small>
                        {% if vote.voting_ended_at %}
                        <small class="text-muted d-block">
                            <i class="bi bi-calendar-check"></i> Encerrada: {{ vote.voting_ended_at|date('d/m/Y H:i') }}
                        </small>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes/{{ vote.id }}" class="btn btn-sm btn-outline-primary w-100">
                        <i class="bi bi-eye"></i> Ver Detalhes
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nenhuma votação encontrada.
        {% if is_admin %}
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/votes/create" class="alert-link">Criar primeira votação</a>
        {% endif %}
    </div>
    {% endif %}
</div>
