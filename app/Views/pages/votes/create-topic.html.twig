<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Criar Tópico de Votação</h2>
        <a href="{{ back_url|default(BASE_URL ~ 'condominiums/' ~ assembly.condominium_id ~ '/assemblies/' ~ assembly.id) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}
    {% if point_title|default('') %}
    <div class="alert alert-info">
        <i class="bi bi-link-45deg"></i> Esta votação será associada ao ponto de ordem <strong>«{{ point_title }}»</strong>.
    </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Informações do Tópico</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/votes/topics">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        {% if return_to_edit|default(false) and not (return_to_show|default(false) or (point_id|default(0)) > 0) %}<input type="hidden" name="return" value="edit">{% endif %}
                        {% if return_to_show|default(false) or (point_id|default(0)) > 0 %}
                        <input type="hidden" name="return" value="show">
                        <input type="hidden" name="point_id" value="{{ point_id|default(0) }}">
                        {% endif %}

                        <div class="mb-3">
                            <label for="title" class="form-label">Título <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descrição</label>
                            <textarea class="form-control" id="description" name="description" rows="4"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Opções de Votação <span class="text-danger">*</span></label>
                            <small class="form-text text-muted d-block mb-2">
                                As opções padrão do condomínio são pré-preenchidas. Pode adicionar ou remover opções.
                            </small>
                            <div id="options-container">
                                {% if default_options %}
                                    {% for option in default_options %}
                                    <div class="input-group mb-2">
                                        <input type="text" class="form-control" name="options[]" value="{{ option }}" required>
                                        <button type="button" class="btn btn-outline-danger" onclick="removeOption(this)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                    {% endfor %}
                                {% else %}
                                    {% if vote_options %}
                                        {% for option in vote_options %}
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control" name="options[]" value="{{ option.option_label }}" required>
                                            <button type="button" class="btn btn-outline-danger" onclick="removeOption(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        {% endfor %}
                                    {% else %}
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control" name="options[]" placeholder="Ex: A favor" required>
                                            <button type="button" class="btn btn-outline-danger" onclick="removeOption(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control" name="options[]" placeholder="Ex: Contra" required>
                                            <button type="button" class="btn btn-outline-danger" onclick="removeOption(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                        <div class="input-group mb-2">
                                            <input type="text" class="form-control" name="options[]" placeholder="Ex: Abstenção" required>
                                            <button type="button" class="btn btn-outline-danger" onclick="removeOption(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="addOption()">
                                <i class="bi bi-plus"></i> Adicionar Opção
                            </button>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Criar Tópico
                            </button>
                            <a href="{{ back_url|default(BASE_URL ~ 'condominiums/' ~ assembly.condominium_id ~ '/assemblies/' ~ assembly.id) }}" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function addOption() {
    const container = document.getElementById('options-container');
    const div = document.createElement('div');
    div.className = 'input-group mb-2';
    div.innerHTML = `
        <input type="text" class="form-control" name="options[]" placeholder="Nova opção" required>
        <button type="button" class="btn btn-outline-danger" onclick="removeOption(this)">
            <i class="bi bi-trash"></i>
        </button>
    `;
    container.appendChild(div);
}

function removeOption(button) {
    const container = document.getElementById('options-container');
    if (container.children.length > 1) {
        button.closest('.input-group').remove();
    } else {
        alert('É necessário pelo menos uma opção de votação.');
    }
}
</script>
