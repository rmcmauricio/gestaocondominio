<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Condomínio</h4>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endif %}

                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="_method" value="PUT">

                        <div class="mb-3">
                            <label for="name" class="form-label">Nome do Condomínio <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ condominium.name }}" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Morada <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="address" name="address" value="{{ condominium.address }}" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="postal_code" class="form-label">Código Postal</label>
                                <input type="text" class="form-control" id="postal_code" name="postal_code" value="{{ condominium.postal_code }}" placeholder="0000-000">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="city" class="form-label">Cidade <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="city" name="city" value="{{ condominium.city }}" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="district" class="form-label">Distrito</label>
                                <input type="text" class="form-control" id="district" name="district" value="{{ condominium.district }}">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="country" class="form-label">País</label>
                                <input type="text" class="form-control" id="country" name="country" value="{{ condominium.country|default('Portugal') }}">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="nif" class="form-label">NIF</label>
                            <input type="text" class="form-control" id="nif" name="nif" value="{{ condominium.nif }}" placeholder="123456789">
                        </div>

                        <div class="mb-3">
                            <label for="iban" class="form-label">IBAN</label>
                            <input type="text" class="form-control" id="iban" name="iban" value="{{ condominium.iban }}" placeholder="PT50 0000 0000 0000 0000 0000 0">
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefone</label>
                            <input type="tel" class="form-control" id="phone" name="phone" value="{{ condominium.phone }}" placeholder="+351 XXX XXX XXX">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{ condominium.email }}">
                        </div>

                        <div class="mb-3">
                            <label for="type" class="form-label">Tipo</label>
                            <select class="form-select" id="type" name="type">
                                <option value="habitacional" {% if condominium.type == 'habitacional' %}selected{% endif %}>Habitacional</option>
                                <option value="comercial" {% if condominium.type == 'comercial' %}selected{% endif %}>Comercial</option>
                                <option value="misto" {% if condominium.type == 'misto' %}selected{% endif %}>Misto</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="total_fractions" class="form-label">Número Total de Frações</label>
                            <input type="number" class="form-control" id="total_fractions" name="total_fractions" value="{{ condominium.total_fractions|default(0) }}" min="0">
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="is_active" name="is_active" value="1" {% if condominium.is_active %}checked{% endif %}>
                                <label class="form-check-label" for="is_active">
                                    Condomínio Ativo
                                </label>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h5 class="mb-3">Personalização</h5>

                        <div class="mb-3">
                            <label for="document_template" class="form-label">Template de Documentos e Interface</label>
                            {% if preview_template is defined and preview_template is not same as(false) %}
                            <div class="alert alert-info alert-dismissible fade show mb-2" role="alert">
                                <i class="bi bi-eye"></i> <strong>Preview ativo:</strong> Está a visualizar {% if preview_template is null %}o Template Padrão{% else %}o Template {{ preview_template }}{% endif %}. Clique em "Guardar Alterações" para aplicar permanentemente.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                            {% endif %}
                            <select class="form-select" id="document_template" name="document_template">
                                {% for templateId, templateInfo in template_options %}
                                {% set isSelected = false %}
                                {% if preview_template is defined and preview_template is not same as(false) %}
                                    {% if preview_template is null and templateId is null %}
                                        {% set isSelected = true %}
                                    {% elseif preview_template is not null and templateId is not null and preview_template == templateId %}
                                        {% set isSelected = true %}
                                    {% endif %}
                                {% else %}
                                    {% if current_template is null and templateId is null %}
                                        {% set isSelected = true %}
                                    {% elseif current_template is not null and templateId is not null and current_template == templateId %}
                                        {% set isSelected = true %}
                                    {% endif %}
                                {% endif %}
                                <option value="{{ templateId is null ? '' : templateId }}" {% if isSelected %}selected{% endif %}>
                                    {% if templateId is null %}
                                        {{ templateInfo.name }}: {{ templateInfo.description }}
                                    {% else %}
                                        Template {{ templateId }} - {{ templateInfo.name }}: {{ templateInfo.description }}
                                    {% endif %}
                                </option>
                                {% endfor %}
                            </select>
                            <small class="form-text text-muted">O template selecionado será aplicado aos documentos gerados (recibos, atas, convocatórias) e à interface da plataforma. <strong>Altere o template acima para ver um preview antes de guardar.</strong></small>
                        </div>

                        <div class="mb-3">
                            <label for="logo" class="form-label">Logotipo do Condomínio</label>
                            {% if logo_url %}
                            <div class="mb-2">
                                <p class="text-muted mb-2">Logotipo atual:</p>
                                <img src="{{ logo_url }}" alt="Logotipo" class="img-thumbnail" style="max-width: 200px; max-height: 100px; object-fit: contain;">
                            </div>
                            <button type="button" class="btn btn-sm btn-danger mb-2" onclick="removeLogo({{ condominium.id }});">
                                <i class="bi bi-trash"></i> Remover Logotipo
                            </button>
                            <p class="text-muted mb-2">ou</p>
                            {% endif %}
                            <input type="file" class="form-control" id="logo" name="logo" accept="image/jpeg,image/png,image/gif,image/webp">
                            <small class="form-text text-muted">Formatos aceites: JPEG, PNG, GIF, WebP. Tamanho máximo: 2MB. O logotipo será exibido no cabeçalho dos documentos e na interface da plataforma.</small>
                        </div>

                        <hr class="my-4">

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notas</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3">{{ condominium.notes }}</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar Alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function removeLogo(condominiumId) {
    if (!confirm('Tem certeza que deseja remover o logotipo?')) {
        return;
    }
    
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '{{ BASE_URL }}condominiums/' + condominiumId + '/logo';
    
    const csrfInput = document.createElement('input');
    csrfInput.type = 'hidden';
    csrfInput.name = 'csrf_token';
    csrfInput.value = '{{ csrf_token }}';
    form.appendChild(csrfInput);
    
    document.body.appendChild(form);
    form.submit();
}

// Preview de template ao alterar o dropdown
document.addEventListener('DOMContentLoaded', function() {
    const templateSelect = document.getElementById('document_template');
    if (templateSelect) {
        templateSelect.addEventListener('change', function() {
            const selectedValue = this.value;
            const currentUrl = new URL(window.location.href);
            
            // Remove o parâmetro preview_template se existir
            currentUrl.searchParams.delete('preview_template');
            
            // Adiciona o novo parâmetro preview_template (mesmo se vazio para "Padrão")
            // Se vazio, passa como string vazia para indicar template padrão
            currentUrl.searchParams.set('preview_template', selectedValue === '' ? '' : selectedValue);
            
            // Recarrega a página com o novo template de preview
            window.location.href = currentUrl.toString();
        });
    }
});
</script>





