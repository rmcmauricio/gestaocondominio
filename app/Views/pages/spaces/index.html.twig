<div class="container py-4">
    {% set page_actions %}
        {% if is_admin %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/spaces/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Novo Espaço
            </a>
        </div>
        {% endif %}
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Espaços Comuns',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if spaces %}
    <div class="row g-4">
        {% for space in spaces %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm {% if not space.is_active %}border-secondary opacity-75{% endif %} {% if space.is_active %}space-card-clickable{% endif %}" {% if space.is_active %}data-space-id="{{ space.id }}" data-fraction-id="{{ user_first_fraction_id }}"{% endif %} style="{% if space.is_active %}cursor: pointer; transition: transform 0.2s, box-shadow 0.2s;{% endif %}">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ space.name }}</h5>
                        {% if not space.is_active %}
                        <span class="badge bg-secondary">Inativo</span>
                        {% endif %}
                    </div>
                    <p class="card-text text-muted">{{ space.description|default('Sem descrição') }}</p>
                    <div class="mb-2">
                        <small class="text-muted">
                            <i class="bi bi-tag"></i> {{ space.type|default('N/A') }}
                            {% if space.capacity %}
                            <br><i class="bi bi-people"></i> Capacidade: {{ space.capacity }} pessoas
                            {% endif %}
                        </small>
                    </div>
                    {% if space.price_per_hour > 0 or space.price_per_day > 0 %}
                    <div class="mb-2">
                        <small>
                            {% if space.price_per_hour > 0 %}
                                <strong>€{{ space.price_per_hour|number_format(2, ',', '.') }}/hora</strong>
                            {% endif %}
                            {% if space.price_per_day > 0 %}
                                <strong>€{{ space.price_per_day|number_format(2, ',', '.') }}/dia</strong>
                            {% endif %}
                        </small>
                    </div>
                    {% endif %}
                    {% if space.deposit_required > 0 %}
                    <div class="mb-2">
                        <small class="text-warning">
                            <i class="bi bi-shield-check"></i> Caução: €{{ space.deposit_required|number_format(2, ',', '.') }}
                        </small>
                    </div>
                    {% endif %}
                    <div class="mt-3">
                        <span class="badge {% if space.requires_approval %}bg-warning{% else %}bg-success{% endif %}">
                            {% if space.requires_approval %}Requer Aprovação{% else %}Aprovação Automática{% endif %}
                        </span>
                    </div>
                </div>
                {% if is_admin %}
                <div class="card-footer bg-white" onclick="event.stopPropagation();">
                    <div class="btn-group w-100">
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/spaces/{{ space.id }}/edit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/spaces/{{ space.id }}/delete" class="d-inline" onsubmit="return confirm('Tem certeza que deseja eliminar este espaço?');">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>
                    </div>
                </div>
                {% else %}
                {% if space.is_active %}
                <div class="card-footer bg-light text-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Clique no card para reservar este espaço
                    </small>
                </div>
                {% endif %}
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-building display-1 text-muted"></i>
            <h4 class="mt-3">Nenhum espaço cadastrado</h4>
            <p class="text-muted">Comece criando o primeiro espaço comum</p>
            {% if is_admin %}
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/spaces/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Espaço
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Make space cards clickable (only active spaces)
    const spaceCards = document.querySelectorAll('.space-card-clickable');
    
    spaceCards.forEach(function(card) {
        card.addEventListener('click', function(e) {
            // Don't trigger if clicking on buttons or links
            if (e.target.closest('a, button, form')) {
                return;
            }
            
            const spaceId = this.getAttribute('data-space-id');
            const fractionId = this.getAttribute('data-fraction-id');
            
            if (spaceId) {
                let url = '{{ BASE_URL }}condominiums/{{ condominium.id }}/reservations/create?space_id=' + spaceId;
                if (fractionId) {
                    url += '&fraction_id=' + fractionId;
                }
                window.location.href = url;
            }
        });
        
        // Add hover effect
        card.addEventListener('mouseenter', function() {
            if (this.getAttribute('data-space-id')) {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 4px 8px rgba(0,0,0,0.15)';
            }
        });
        
        card.addEventListener('mouseleave', function() {
            if (this.getAttribute('data-space-id')) {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = '';
            }
        });
    });
});
</script>


