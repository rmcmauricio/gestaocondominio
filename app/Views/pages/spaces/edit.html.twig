<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Espaço Comum</h4>
                    <small>{{ condominium.name }}</small>
                </div>
                <div class="card-body p-4">
                    {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endif %}

                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ condominium.id }}/spaces/{{ space.id }}">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                        <div class="mb-3">
                            <label for="name" class="form-label">Nome do Espaço <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" required autofocus value="{{ space.name }}" placeholder="Ex: Piscina, Salão de Festas, Ginásio">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descrição</label>
                            <textarea class="form-control" id="description" name="description" rows="3">{{ space.description }}</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="type" class="form-label">Tipo</label>
                                <select class="form-select" id="type" name="type">
                                    <option value="">Selecione...</option>
                                    <option value="Piscina" {% if space.type == 'Piscina' %}selected{% endif %}>Piscina</option>
                                    <option value="Salão de Festas" {% if space.type == 'Salão de Festas' %}selected{% endif %}>Salão de Festas</option>
                                    <option value="Ginásio" {% if space.type == 'Ginásio' %}selected{% endif %}>Ginásio</option>
                                    <option value="Jardim" {% if space.type == 'Jardim' %}selected{% endif %}>Jardim</option>
                                    <option value="Garagem" {% if space.type == 'Garagem' %}selected{% endif %}>Garagem</option>
                                    <option value="Outro" {% if space.type == 'Outro' %}selected{% endif %}>Outro</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="capacity" class="form-label">Capacidade (pessoas)</label>
                                <input type="number" class="form-control" id="capacity" name="capacity" min="1" value="{{ space.capacity }}">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="price_per_hour" class="form-label">Preço por Hora (€)</label>
                                <input type="number" class="form-control" id="price_per_hour" name="price_per_hour" step="0.01" min="0" value="{{ space.price_per_hour }}">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="price_per_day" class="form-label">Preço por Dia (€)</label>
                                <input type="number" class="form-control" id="price_per_day" name="price_per_day" step="0.01" min="0" value="{{ space.price_per_day }}">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="deposit_required" class="form-label">Caução (€)</label>
                                <input type="number" class="form-control" id="deposit_required" name="deposit_required" step="0.01" min="0" value="{{ space.deposit_required }}">
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="requires_approval" name="requires_approval" {% if space.requires_approval %}checked{% endif %}>
                                <label class="form-check-label" for="requires_approval">
                                    Requer aprovação manual
                                </label>
                            </div>
                            <div class="form-text">Se desmarcado, as reservas serão aprovadas automaticamente</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="is_active" name="is_active" {% if space.is_active %}checked{% endif %}>
                                <label class="form-check-label" for="is_active">
                                    Espaço ativo
                                </label>
                            </div>
                            <div class="form-text">Espaços inativos não aparecem para reservas</div>
                        </div>

                        <div class="mb-3">
                            <label for="rules" class="form-label">Regras de Utilização</label>
                            <textarea class="form-control" id="rules" name="rules" rows="4" placeholder="Ex: Proibido fumar, Horário máximo até 23h, etc.">{{ space.rules }}</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/spaces" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Atualizar Espaço</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
