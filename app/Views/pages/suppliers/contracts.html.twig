<div class="container py-4">
    {% set page_actions %}
        {% if is_admin %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/suppliers/contracts/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Novo Contrato
            </a>
        </div>
        {% endif %}
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Contratos',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if expiring_soon %}
    <div class="alert alert-warning mb-4">
        <h6><i class="bi bi-exclamation-triangle"></i> Contratos a Expirar em Breve</h6>
        <ul class="mb-0">
            {% for contract in expiring_soon %}
            <li>
                <strong>{{ contract.supplier_name }}</strong> - 
                {{ contract.description }} - 
                Expira em {{ contract.days_until_expiry }} dias ({{ contract.end_date|date('d/m/Y') }})
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if contracts %}
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Fornecedor</th>
                            <th>Descrição</th>
                            <th>Valor</th>
                            <th>Início</th>
                            <th>Fim</th>
                            <th>Documento</th>
                            <th>Status</th>
                            {% if is_admin %}
                            <th>Ações</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for contract in contracts %}
                        <tr>
                            <td><strong>{{ contract.supplier_name }}</strong></td>
                            <td>{{ contract.description }}</td>
                            <td>
                                {% if contract.amount %}
                                    €{{ contract.amount|number_format(2, ',', '.') }}
                                    {% if contract.amount_type %}
                                        <br><small class="text-muted">
                                            {% if contract.amount_type == 'annual' %}Anual{% else %}Mensal{% endif %}
                                        </small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">Não especificado</span>
                                {% endif %}
                            </td>
                            <td>{{ contract.start_date|date('d/m/Y') }}</td>
                            <td>
                                {% if contract.end_date %}
                                    {{ contract.end_date|date('d/m/Y') }}
                                    {% if contract.end_date < "now"|date("Y-m-d") %}
                                        <span class="badge bg-danger">Expirado</span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">Sem fim</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if contract.document_id %}
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/documents/{{ contract.document_id }}/download" 
                                       target="_blank" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="{{ contract.document_title }}">
                                        <i class="bi bi-file-earmark"></i> Ver Documento
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge {% if contract.is_active %}bg-success{% else %}bg-secondary{% endif %}">
                                    {% if contract.is_active %}Ativo{% else %}Inativo{% endif %}
                                </span>
                            </td>
                            {% if is_admin %}
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/suppliers/contracts/{{ contract.id }}/edit" 
                                       class="btn btn-outline-primary" 
                                       title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="POST" 
                                          action="{{ BASE_URL }}condominiums/{{ condominium.id }}/suppliers/contracts/{{ contract.id }}/delete" 
                                          class="d-inline"
                                          onsubmit="return confirm('Tem certeza que deseja remover este contrato? Esta ação não pode ser desfeita.');">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Remover">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                            {% endif %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-file-text display-1 text-muted"></i>
            <h4 class="mt-3">Nenhum contrato cadastrado</h4>
            <p class="text-muted">{% if is_admin %}Comece criando o primeiro contrato{% else %}Ainda não há contratos cadastrados{% endif %}</p>
            {% if is_admin %}
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/suppliers/contracts/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Contrato
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/suppliers" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left"></i> Voltar aos Fornecedores
        </a>
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>





