<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">{{ assembly.title }}</h2>
            <p class="text-muted mb-0">
                <i class="bi bi-calendar"></i> {{ assembly.scheduled_date|date('d/m/Y H:i') }}
                {% if assembly.location %}
                | <i class="bi bi-geo-alt"></i> {{ assembly.location }}
                {% endif %}
            </p>
        </div>
        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if info %}
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        {{ info }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {# Card Unificado: Ações e Informações #}
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0 d-inline-flex align-items-center gap-2">
                Informações
                <span class="badge bg-light text-dark">
                    {% if assembly.status == 'scheduled' %}Agendada
                    {% elseif assembly.status == 'in_progress' %}Em Andamento
                    {% elseif assembly.status == 'closed' %}Encerrada
                    {% elseif assembly.status == 'completed' %}Concluída
                    {% else %}Cancelada{% endif %}
                </span>
            </h5>
        </div>
        <div class="card-body">
            {# Ações Rápidas - Apenas para Admin #}
            {% if is_admin %}
            <div class="mb-4 pb-4 border-bottom">
                <h6 class="mb-3">
                    <i class="bi bi-lightning-charge-fill"></i> Ações Rápidas
                </h6>
                {% if assembly.status == 'scheduled' %}
                <div class="row g-3">
                    <div class="col-md-6 col-lg-3">
                        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/edit" class="btn btn-outline-primary w-100">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/send-convocation" class="d-inline w-100">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-envelope"></i> Enviar Convocatórias
                            </button>
                        </form>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/start" class="d-inline w-100">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Tem certeza que deseja iniciar esta assembleia?');">
                                <i class="bi bi-play-circle"></i> Iniciar
                            </button>
                        </form>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/cancel" class="d-inline w-100">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Tem certeza que deseja cancelar esta assembleia?');">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </button>
                        </form>
                    </div>
                </div>
                {% elseif assembly.status == 'in_progress' %}
                <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/close">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label for="minutes" class="form-label">Resumo/Atas</label>
                            <textarea class="form-control" id="minutes" name="minutes" rows="3" placeholder="Resumo da assembleia..."></textarea>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-warning w-100" onclick="return confirm('Tem certeza que deseja encerrar esta assembleia?');">
                                <i class="bi bi-stop-circle"></i> Encerrar Assembleia
                            </button>
                        </div>
                    </div>
                </form>
                {% elseif assembly.status == 'closed' or assembly.status == 'completed' %}
                <div class="row g-2">
                    {% if minutes_template %}
                    <div class="col-md-6 col-lg-3">
                        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/edit" class="btn btn-outline-primary w-100">
                            <i class="bi bi-pencil-square"></i> Ver/Editar ata
                        </a>
                    </div>
                    {% else %}
                    <div class="col-md-6 col-lg-3">
                        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/generate" class="btn btn-outline-primary w-100" onclick="return confirm('Deseja gerar a acta para esta assembleia?');">
                            <i class="bi bi-file-earmark-plus"></i> Gerar Acta
                        </a>
                    </div>
                    {% endif %}
                    {% if approved_minutes %}
                    <div class="col-md-6 col-lg-3">
                        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/documents/{{ approved_minutes.id }}/download" class="btn btn-outline-success w-100" target="_blank">
                            <i class="bi bi-download"></i> Descarregar PDF
                        </a>
                    </div>
                    {% endif %}
                </div>
                {% if minutes_template and is_admin %}
                <div class="row g-2 mt-2">
                    {% if minutes_template.status == 'draft' %}
                    <div class="col-md-6 col-lg-3">
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/approve" class="d-inline">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Tem certeza que deseja aprovar estas atas? O PDF será gerado e ficará disponível para todos os condóminos.');">
                                <i class="bi bi-check-circle"></i> Aprovar e Gerar PDF
                            </button>
                        </form>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="collapse" data-bs-target="#sendReviewForm" aria-expanded="false">
                            <i class="bi bi-send"></i> Enviar para Revisão
                        </button>
                        <div class="collapse mt-2" id="sendReviewForm">
                            <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/send-for-review" class="card card-body">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <label for="review_deadline" class="form-label">Prazo para revisão</label>
                                <input type="date" id="review_deadline" name="review_deadline" class="form-control form-control-sm" min="{{ today_ymd }}" required>
                                <button type="submit" class="btn btn-sm btn-primary mt-2">Enviar</button>
                            </form>
                        </div>
                    </div>
                    {% elseif minutes_template.status == 'in_review' %}
                    <div class="col-md-6 col-lg-3">
                        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/revisions" class="btn btn-outline-primary w-100">
                            <i class="bi bi-list-ul"></i> Ver revisões
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/cancel-review" class="d-inline w-100">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-outline-secondary w-100" onclick="return confirm('Cancelar a revisão? A ata voltará a rascunho.');">
                                <i class="bi bi-x-circle"></i> Cancelar revisão
                            </button>
                        </form>
                    </div>
                    {% if review_deadline and "now"|date("Y-m-d") > review_deadline %}
                    <div class="col-md-6 col-lg-3">
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/approve" class="d-inline">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Tem certeza que deseja aprovar estas atas?');">
                                <i class="bi bi-check-circle"></i> Aprovar e Gerar PDF
                            </button>
                        </form>
                    </div>
                    {% endif %}
                    {% endif %}
                </div>
                {% endif %}
                {% if minutes_template %}
                <div class="mt-3 pt-3 border-top">
                    <div class="row g-2 align-items-center">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <span class="badge {% if minutes_template.status == 'approved' %}bg-success{% elseif minutes_template.status == 'in_review' %}bg-info{% else %}bg-warning text-dark{% endif %}">
                                    {% if minutes_template.status == 'approved' %}Aprovado{% elseif minutes_template.status == 'in_review' %}Em revisão{% else %}Rascunho{% endif %}
                                </span>
                                {% if minutes_template.status == 'in_review' and review_deadline %}
                                <span class="text-muted">Prazo: {{ review_deadline|date('d/m/Y') }}</span>
                                {% endif %}
                            </div>
                        </div>
                        {% if minutes_template.status != 'in_review' %}
                        <div class="col-md-6">
                            <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/change-status" class="d-inline w-100">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <input type="hidden" name="status" value="in_progress">
                                <button type="submit" class="btn btn-outline-secondary w-100" onclick="return confirm('Tem certeza que deseja reabrir esta assembleia para edição?');">
                                    <i class="bi bi-arrow-counterclockwise"></i> Reabrir para Edição
                                </button>
                            </form>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endif %}
            </div>
            {% endif %}

            {# Revisão da Ata (opcional) — condóminos com frações presentes #}
            {% if not is_admin and review_deadline and my_fractions_for_revision|length > 0 %}
            <div class="card mb-4 border-info">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-chat-square-text"></i> Revisão da Ata (opcional)</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Pode enviar comentários ou marcar como revisão aceite; não é obrigatório. Objetivo: reduzir adendas.</p>
                    <p><strong>Prazo:</strong> {{ review_deadline|date('d/m/Y') }}</p>
                    <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes/view" class="btn btn-sm btn-outline-primary mb-3" target="_blank"><i class="bi bi-file-text"></i> Ver ata</a>
                    {% for frac in my_fractions_for_revision %}
                    {% set rev = my_revision[frac.id] ?? null %}
                    <div class="border rounded p-2 mb-2">
                        <strong>Fração {{ frac.identifier }}</strong>
                        {% if rev %}
                        <div class="mt-1">
                            {% if rev.accepted %}<span class="badge bg-success">Aceite</span>{% endif %}
                            {% if rev.comment %}<p class="mb-1 small">{{ rev.comment }}</p>{% endif %}
                            <small class="text-muted">Atualizado em {{ rev.updated_at|date('d/m/Y H:i') }}</small>
                        </div>
                        {% endif %}
                        <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/submit-revision" class="mt-2">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <input type="hidden" name="document_id" value="{{ minutes_template.id }}">
                            <input type="hidden" name="fraction_id" value="{{ frac.id }}">
                            <textarea name="comment" class="form-control form-control-sm mb-1" rows="2" placeholder="Comentário (opcional)">{{ rev and rev.comment ? rev.comment : '' }}</textarea>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="accepted" id="acc_{{ frac.id }}" value="1" {% if rev and rev.accepted %}checked{% endif %}>
                                <label class="form-check-label" for="acc_{{ frac.id }}">Marcar como revisão aceite</label>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary d-block mt-2">Guardar</button>
                        </form>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            {# Informações da Assembleia #}
            {% if assembly.description or assembly.agenda %}
            <div class="mb-3">
                <h6>Descrição</h6>
                <p class="text-muted">{{ assembly.description ?? assembly.agenda }}</p>
            </div>
            {% endif %}

            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>Tipo:</strong> {{ assembly.type|title }}<br>
                    <strong>Data:</strong> {{ assembly.scheduled_date|date('d/m/Y') }}<br>
                    <strong>Hora:</strong> {{ assembly.scheduled_date|date('H:i') }}
                </div>
                <div class="col-md-6 mb-3">
                    {% if assembly.location %}
                    <strong>Local:</strong> {{ assembly.location }}<br>
                    {% endif %}
                    <strong>Quórum:</strong> {{ assembly.quorum_percentage }}%
                </div>
            </div>

            {% if quorum %}
            <div class="alert alert-info mb-0">
                <strong>Quórum Atual:</strong> {{ quorum.percentage }}% 
                ({{ quorum.attended_millage }}‰ de {{ quorum.total_millage }}‰)
            </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-12">

            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Registo de Presenças</h5>
                </div>
                <div class="card-body">
                    {% if assembly.status != 'closed' and assembly.status != 'completed' %}
                    <form id="attendance-form" method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/attendance">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;">Presente</th>
                                        <th>Fração</th>
                                        <th>Permilagem</th>
                                        <th>Tipo</th>
                                        <th>Condómino</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for fraction in fractions %}
                                    {% set status = attendance_status[fraction.id] ?? null %}
                                    {% set isPresent = status and (status.type == 'present' or status.type == 'proxy') %}
                                    {% set currentType = status ? status.type : 'absent' %}
                                    <tr class="{% if isPresent %}table-success{% endif %}">
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input attendance-checkbox" 
                                                       type="checkbox" 
                                                       id="attendance_{{ fraction.id }}"
                                                       {% if isPresent %}checked{% endif %}
                                                       onchange="toggleAttendanceType({{ fraction.id }})">
                                            </div>
                                        </td>
                                        <td>
                                            <label for="attendance_{{ fraction.id }}" class="form-label mb-0 cursor-pointer">
                                                <strong>{{ fraction.identifier }}</strong>
                                            </label>
                                        </td>
                                        <td>{{ fraction.permillage }}‰</td>
                                        <td>
                                            {# Hidden input to ensure value is always sent, even when select is disabled #}
                                            <input type="hidden" 
                                                   name="bulk_attendances[{{ fraction.id }}][type]" 
                                                   id="hidden_type_{{ fraction.id }}"
                                                   value="{{ currentType }}">
                                            <select class="form-select form-select-sm attendance-type" 
                                                    id="type_{{ fraction.id }}"
                                                    {% if not isPresent %}disabled{% endif %}
                                                    required>
                                                <option value="absent" {% if currentType == 'absent' %}selected{% endif %}>Ausente</option>
                                                <option value="present" {% if currentType == 'present' %}selected{% endif %}>Presente</option>
                                                <option value="proxy" {% if currentType == 'proxy' %}selected{% endif %}>Por Procuração</option>
                                            </select>
                                        </td>
                                        <td>
                                            {% if status %}
                                                <small class="text-muted">{{ status.user_name }}</small>
                                            {% else %}
                                                <small class="text-muted">-</small>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> 
                                Marque as frações que estiveram presentes. Apenas frações presentes podem votar.
                            </small>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Presenças
                            </button>
                        </div>
                    </form>
                    {% else %}
                        {# Show read-only list when assembly is closed #}
                        {% if attendees %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Fração</th>
                                        <th>Condómino</th>
                                        <th>Tipo</th>
                                        <th>Permilagem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for attendee in attendees %}
                                    <tr>
                                        <td>{{ attendee.fraction_identifier }}</td>
                                        <td>{{ attendee.user_name }}</td>
                                        <td>
                                            <span class="badge {% if attendee.attendance_type == 'proxy' %}bg-warning{% else %}bg-success{% endif %}">
                                                {% if attendee.attendance_type == 'proxy' %}Procuração{% else %}Presente{% endif %}
                                            </span>
                                        </td>
                                        <td>{{ attendee.fraction_millage }}‰</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <p class="text-muted">Nenhuma presença registada.</p>
                        {% endif %}
                    {% endif %}
                </div>
            </div>

            {# Vote Topics Section #}
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tópicos de Votação</h5>
                    {% if assembly.status != 'closed' and assembly.status != 'completed' and is_admin %}
                    <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/votes/create-topic" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle"></i> Novo Tópico
                    </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    {% if topics %}
                        {% for item in topics %}
                        {% set topic = item.topic %}
                        {% set results = item.results %}
                        {% set votes = item.votes %}
                        {% set votedFractions = item.voted_fractions %}
                        {% set availableFractions = item.available_fractions %}
                        
                        <div class="card mb-3 {% if not topic.is_active %}bg-light{% endif %}">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">{{ topic.title }}</h6>
                                        {% if topic.description %}
                                        <small class="text-muted">{{ topic.description }}</small>
                                        {% endif %}
                                    </div>
                                    <div class="text-end">
                                        {% if topic.voting_started_at %}
                                            {% if topic.voting_ended_at %}
                                                <span class="badge bg-secondary">Encerrada</span>
                                            {% else %}
                                                <span class="badge bg-success">Em Votação</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="badge bg-warning">Aguardando</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {% if topic.voting_started_at and not topic.voting_ended_at %}
                                    {# Bulk Voting Form #}
                                    {% if item.present_fractions|length > 0 %}
                                    <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/votes/{{ topic.id }}/bulk" class="mb-3" id="vote-form-{{ topic.id }}">
                                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                        <div class="table-responsive">
                                            <table class="table table-sm table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Fração</th>
                                                        <th>Permilagem</th>
                                                        <th>Voto</th>
                                                        <th>Observações</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for fraction in item.present_fractions %}
                                                    {% set existingVote = item.fraction_votes[fraction.id] ?? null %}
                                                    {% set currentVote = existingVote ? existingVote.vote_option : '' %}
                                                    <tr class="{% if existingVote %}table-info{% endif %}">
                                                        <td>
                                                            <strong>{{ fraction.identifier }}</strong>
                                                            {% if existingVote %}
                                                            <br><small class="text-muted">
                                                                <i class="bi bi-check-circle"></i> Voto registado
                                                            </small>
                                                            {% endif %}
                                                        </td>
                                                        <td>{{ fraction.permillage }}‰</td>
                                                        <td>
                                                            <select class="form-select form-select-sm vote-select" 
                                                                    name="bulk_votes[{{ fraction.id }}][vote_option]" 
                                                                    id="vote_{{ topic.id }}_{{ fraction.id }}">
                                                                <option value="">-- Selecionar --</option>
                                                                {% for option in topic.options %}
                                                                <option value="{{ option }}" {% if currentVote == option %}selected{% endif %}>{{ option }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <textarea class="form-control form-control-sm" 
                                                                      name="bulk_votes[{{ fraction.id }}][notes]" 
                                                                      rows="1" 
                                                                      placeholder="Opcional">{{ existingVote ? existingVote.notes : '' }}</textarea>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-save"></i> Guardar Votos
                                            </button>
                                            <small class="text-muted ms-3">
                                                <i class="bi bi-info-circle"></i> 
                                                Pode alterar os votos a qualquer momento antes do encerramento da votação.
                                            </small>
                                        </div>
                                    </form>
                                    {% else %}
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i> 
                                        Nenhuma fração presente disponível para votar. Apenas frações que estiveram presentes podem votar.
                                    </div>
                                    {% endif %}
                                {% endif %}

                                {# Results #}
                                {% if results.total_votes > 0 %}
                                <div class="mt-3">
                                    <h6>Resultados:</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
