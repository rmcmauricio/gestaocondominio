// Toggle attendance type select when checkbox changes
function toggleAttendanceType(fractionId, preserveValue = false) {
    const checkbox = document.getElementById('attendance_' + fractionId);
    const select = document.getElementById('type_' + fractionId);
    const hiddenInput = document.getElementById('hidden_type_' + fractionId);
    
    if (checkbox && select && hiddenInput) {
        if (checkbox.checked) {
            select.disabled = false;
            if (preserveValue) {
                // On initialization: preserve the existing values from server
                // Hidden input has the correct value, sync select to match
                if (hiddenInput.value && hiddenInput.value !== 'absent') {
                    select.value = hiddenInput.value;
                } else if (select.value === 'absent' || !select.value) {
                    // Only change to 'present' if both are empty/absent
                    select.value = 'present';
                    hiddenInput.value = 'present';
                } else {
                    // Preserve the current select value
                    hiddenInput.value = select.value;
                }
            } else {
                // On user interaction: only change to 'present' if select is 'absent'
                if (select.value === 'absent' || !select.value) {
                    select.value = 'present';
                }
                // Always sync hidden input with select
                hiddenInput.value = select.value;
            }
            checkbox.closest('tr').classList.add('table-success');
        } else {
            select.disabled = true;
            if (!preserveValue) {
                // Only change to 'absent' if user is unchecking
                select.value = 'absent';
                hiddenInput.value = 'absent';
            }
            checkbox.closest('tr').classList.remove('table-success');
        }
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    // Initialize checkboxes and sync hidden inputs
    document.querySelectorAll('.attendance-checkbox').forEach(function(checkbox) {
        const fractionId = checkbox.id.replace('attendance_', '');
        const select = document.getElementById('type_' + fractionId);
        const hiddenInput = document.getElementById('hidden_type_' + fractionId);
        
        // Sync hidden input with select value on page load (preserve existing values)
        if (select && hiddenInput) {
            // Don't overwrite if hidden input already has a value from server
            if (!hiddenInput.value || hiddenInput.value === '') {
                hiddenInput.value = select.value;
            } else {
                // If hidden input has a value, sync select to match
                select.value = hiddenInput.value;
            }
        }
        
        // Initialize with preserveValue=true to keep existing values
        toggleAttendanceType(fractionId, true);
        
        // Add change listener
        checkbox.addEventListener('change', function() {
            toggleAttendanceType(fractionId, false);
        });
    });
    
    // Update checkbox and hidden input when select changes
    document.querySelectorAll('.attendance-type').forEach(function(select) {
        const fractionId = select.id.replace('type_', '');
        const checkbox = document.getElementById('attendance_' + fractionId);
        const hiddenInput = document.getElementById('hidden_type_' + fractionId);
        
        // On page load: sync select with hidden input (which has the server value)
        if (hiddenInput && select) {
            // Hidden input has the correct value from server, sync select to match
            if (hiddenInput.value && hiddenInput.value !== '') {
                select.value = hiddenInput.value;
            } else {
                // If hidden input is empty, sync it with select
                hiddenInput.value = select.value;
            }
        }
        
        select.addEventListener('change', function() {
            // Always update hidden input to match select value
            if (hiddenInput) {
                hiddenInput.value = this.value;
            }
            
            if (this.value === 'absent') {
                checkbox.checked = false;
                this.disabled = true;
                checkbox.closest('tr').classList.remove('table-success');
            } else {
                checkbox.checked = true;
                this.disabled = false;
                checkbox.closest('tr').classList.add('table-success');
            }
        });
    });
    
    // Ensure all selects are submitted even if disabled
    const attendanceForm = document.getElementById('attendance-form');
    if (attendanceForm) {
        attendanceForm.addEventListener('submit', function(e) {
            // Enable all disabled selects before submit to ensure values are sent
            document.querySelectorAll('.attendance-type').forEach(function(select) {
                if (select.disabled) {
                    select.disabled = false;
                    // Ensure value is set to 'absent' if it was disabled
                    if (select.value === '' || select.value === null) {
                        select.value = 'absent';
                    }
                }
            });
        });
    }
});
</script>

