<div class="container py-4">
    {% set page_actions %}
        {% if is_admin %}
        <div class="page-header-actions">
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies/create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nova Assembleia
            </a>
        </div>
        {% endif %}
    {% endset %}
    {% include 'blocks/page-header.html.twig' with {
        'title': 'Assembleias',
        'actions': page_actions
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="mb-3">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="assemblyStatusFilter" data-bs-toggle="dropdown" aria-expanded="false">
                {% if not current_status %}
                    Todas
                {% elseif current_status == 'scheduled' %}
                    Agendadas
                {% elseif current_status == 'in_progress' %}
                    Em Curso
                {% elseif current_status == 'closed' %}
                    Encerradas
                {% else %}
                    Todas
                {% endif %}
            </button>
            <ul class="dropdown-menu" aria-labelledby="assemblyStatusFilter">
                <li>
                    <a class="dropdown-item {% if not current_status %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies">
                        Todas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'scheduled' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies?status=scheduled">
                        Agendadas
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'in_progress' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies?status=in_progress">
                        Em Curso
                    </a>
                </li>
                <li>
                    <a class="dropdown-item {% if current_status == 'closed' %}active{% endif %}" href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies?status=closed">
                        Encerradas
                    </a>
                </li>
            </ul>
        </div>
    </div>

    {% if assemblies %}
    <div class="row g-4">
        {% for assembly in assemblies %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ assembly.title }}</h5>
                        <span class="badge 
                            {% if assembly.status == 'scheduled' %}bg-primary
                            {% elseif assembly.status == 'in_progress' %}bg-info
                            {% elseif assembly.status == 'closed' %}bg-success
                            {% else %}bg-secondary{% endif %}">
                            {{ assembly.status|replace({'_': ' '})|title }}
                        </span>
                    </div>
                    <p class="card-text text-muted small mb-2">
                        <i class="bi bi-calendar"></i> {{ assembly.scheduled_date|date('d/m/Y H:i') }}
                    </p>
                    {% if assembly.location %}
                    <p class="card-text text-muted small mb-2">
                        <i class="bi bi-geo-alt"></i> {{ assembly.location }}
                    </p>
                    {% endif %}
                    <p class="card-text">{{ (assembly.description ?? assembly.agenda ?? '')|slice(0, 100) }}{% if (assembly.description ?? assembly.agenda ?? '')|length > 100 %}...{% endif %}</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <small class="text-muted">
                            <i class="bi bi-people"></i> {{ assembly.attendees_count|default(0) }} presentes
                        </small>
                        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies/{{ assembly.id }}" class="btn btn-sm btn-outline-primary">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h4 class="mt-3">Nenhuma assembleia encontrada</h4>
            <p class="text-muted">{% if is_admin %}Comece criando a primeira assembleia{% else %}Ainda não há assembleias agendadas{% endif %}</p>
            {% if is_admin %}
            <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}/assemblies/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Assembleia
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ BASE_URL }}condominiums/{{ condominium.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Condomínio
        </a>
    </div>
</div>





