<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Editar Template de Atas</h2>
        <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-file-text"></i> Template de Atas: {{ assembly.title }}
            </h5>
            <small class="text-muted">
                Status: 
                <span class="badge {% if template.status == 'approved' %}bg-success{% else %}bg-warning{% endif %}">
                    {% if template.status == 'approved' %}Aprovado{% else %}Rascunho{% endif %}
                </span>
            </small>
        </div>
        <div class="card-body">
            {% if template.status == 'approved' %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 
                Este template já foi aprovado. Não é possível editá-lo. 
                {% if approved_minutes %}
                <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/documents/{{ approved_minutes.id }}/download" class="alert-link" target="_blank">Ver atas aprovadas</a>
                {% endif %}
            </div>
            {% else %}
            <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/update" id="template-form">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                
                <div class="mb-3">
                    <label for="template_content" class="form-label">
                        <strong>Conteúdo do Template</strong>
                    </label>
                    <textarea id="template_content" name="template_content" class="form-control" rows="20">
{{ template_content|raw }}
                    </textarea>
                    <small class="form-text text-muted">
                        <i class="bi bi-info-circle"></i> 
                        Use o editor abaixo para formatar o conteúdo. Pode editar HTML diretamente se necessário.
                    </small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Alterações
                    </button>
                    <a href="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>

            <hr class="my-4">

            <form method="POST" action="{{ BASE_URL }}condominiums/{{ assembly.condominium_id }}/assemblies/{{ assembly.id }}/minutes-template/approve" id="approve-form">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Atenção:</strong> Ao aprovar, será gerado o PDF final e ficará disponível para todos os condôminos. 
                    Certifique-se de que o conteúdo está correto antes de aprovar.
                </div>
                <button type="submit" class="btn btn-success" onclick="return confirm('Tem certeza que deseja aprovar estas atas? O PDF será gerado e ficará disponível para todos os condôminos.');">
                    <i class="bi bi-check-circle"></i> Aprovar e Gerar PDF
                </button>
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-info-circle"></i> 
                    Nota: Todas as frações presentes devem ter assinado antes de aprovar.
                </small>
            </form>
            {% endif %}
        </div>
    </div>
</div>

<!-- TinyMCE WYSIWYG Editor - Using self-hosted version to avoid API key requirement -->
<script src="https://cdn.jsdelivr.net/npm/tinymce@6/tinymce.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    tinymce.init({
        selector: '#template_content',
        height: 600,
        menubar: true,
        plugins: [
            'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
            'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
            'insertdatetime', 'media', 'table', 'code', 'help', 'wordcount'
        ],
        toolbar: 'undo redo | blocks | ' +
            'bold italic forecolor | alignleft aligncenter ' +
            'alignright alignjustify | bullist numlist outdent indent | ' +
            'removeformat | code | fullscreen',
        content_style: 'body { font-family: Times New Roman, serif; font-size: 12pt; }',
        language: 'pt_PT',
        branding: false,
        promotion: false,
        setup: function(editor) {
            editor.on('change', function() {
                editor.save();
            });
        }
    });
});
</script>
