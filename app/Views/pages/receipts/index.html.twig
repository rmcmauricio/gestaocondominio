<div class="container py-4">
    {% include 'blocks/page-header.html.twig' with {
        'title': is_admin ? 'Recibos' : 'Meus Recibos'
    } %}

    {% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    {% if success %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="GET" action="{{ BASE_URL }}{% if is_admin %}condominiums/{{ condominium.id }}/receipts{% else %}receipts{% endif %}" class="row g-3">
                {% if not is_admin %}
                <div class="col-12 col-sm-6 col-md-3">
                    <label for="condominium_id" class="form-label">Condomínio</label>
                    <select class="form-select form-select-sm" id="condominium_id" name="condominium_id">
                        <option value="">Todos</option>
                        {% for condo in condominiums %}
                        <option value="{{ condo.id }}" {% if selected_condominium_id == condo.id %}selected{% endif %}>{{ condo.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                {% if is_admin %}
                <div class="col-12 col-sm-6 col-md-3">
                    <label for="fraction_id" class="form-label">Fração</label>
                    <select class="form-select form-select-sm" id="fraction_id" name="fraction_id">
                        <option value="">Todas</option>
                        {% for fraction in fractions %}
                        <option value="{{ fraction.id }}" {% if selected_fraction_id == fraction.id %}selected{% endif %}>{{ fraction.identifier }}</option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                <div class="col-12 col-sm-6 col-md-3">
                    <label for="year" class="form-label">Ano</label>
                    <select class="form-select form-select-sm" id="year" name="year">
                        <option value="">Todos</option>
                        {% if available_years is not empty %}
                        {% for y in available_years %}
                        <option value="{{ y }}" {% if selected_year == y %}selected{% endif %}>{{ y }}</option>
                        {% endfor %}
                        {% else %}
                        <option value="{{ 'now'|date('Y') }}" {% if selected_year == 'now'|date('Y') %}selected{% endif %}>{{ 'now'|date('Y') }}</option>
                        {% endif %}
                    </select>
                </div>


                <div class="col-12 col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-funnel"></i> Filtrar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Receipts List -->
    {% if receipts %}
    {# Desktop: Tabela #}
    <div class="card shadow-sm d-none d-md-block">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nº Recibo</th>
                            <th>Fração</th>
                            {% if not is_admin %}
                            <th>Condomínio</th>
                            {% endif %}
                            <th>Período</th>
                            <th>Valor</th>
                            <th>Data de Geração</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for receipt in receipts %}
                        <tr>
                            <td>
                                <code class="small">{{ receipt.receipt_number }}</code>
                            </td>
                            <td>
                                <span class="badge bg-secondary">{{ receipt.fraction_identifier }}</span>
                            </td>
                            {% if not is_admin %}
                            <td>{{ receipt.condominium_name }}</td>
                            {% endif %}
                            <td>
                                {% if receipt.period_month %}
                                    {{ receipt.period_month }}/{{ receipt.period_year }}
                                {% else %}
                                    {{ receipt.period_year }}
                                {% endif %}
                            </td>
                            <td>
                                <strong>€{{ receipt.amount|number_format(2, ',', '.') }}</strong>
                            </td>
                            <td>
                                {{ receipt.generated_at|date('d/m/Y H:i') }}
                            </td>
                            <td class="text-center">
                                <div class="d-flex gap-1 justify-content-center">
                                    <a href="{{ BASE_URL }}condominiums/{{ receipt.condominium_id }}/receipts/{{ receipt.id }}"
                                       class="btn btn-outline-info btn-sm"
                                       title="Visualizar">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ BASE_URL }}condominiums/{{ receipt.condominium_id }}/receipts/{{ receipt.id }}/download"
                                       class="btn btn-outline-primary btn-sm"
                                       title="Descarregar PDF">
                                        <i class="bi bi-download"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Mobile: Cards #}
    <div class="d-md-none">
        {% for receipt in receipts %}
        <div class="card shadow-sm mb-2">
            <div class="card-body p-3">
                {# Header: Número do recibo, fração, período e valor inline #}
                <div class="d-flex align-items-center mb-2" style="flex-wrap: nowrap; gap: 0.5rem;">
                    <code class="small mb-0">{{ receipt.receipt_number }}</code>
                    <span class="badge bg-secondary">{{ receipt.fraction_identifier }}</span>
                    <span class="small text-muted">
                        {% if receipt.period_month %}
                            {{ receipt.period_month }}/{{ receipt.period_year }}
                        {% else %}
                            {{ receipt.period_year }}
                        {% endif %}
                    </span>
                    <div style="flex: 1;"></div>
                    <strong class="text-primary fs-6">€{{ receipt.amount|number_format(2, ',', '.') }}</strong>
                </div>

                {# Informações: Condomínio e Data #}
                <div class="row g-2 mb-2">
                    {% if not is_admin %}
                    <div class="col-12">
                        <div class="d-flex align-items-center gap-2">
                            <small class="text-muted" style="min-width: 80px;">Condomínio:</small>
                            <span class="small">{{ receipt.condominium_name }}</span>
                        </div>
                    </div>
                    {% endif %}
                    <div class="col-12">
                        <div class="d-flex align-items-center gap-2">
                            <small class="text-muted">Emitido a:</small>
                            <span class="small">{{ receipt.generated_at|date('d/m/Y H:i') }}</span>
                        </div>
                    </div>
                </div>

                {# Botões lado a lado #}
                <div class="d-flex gap-2">
                    <a href="{{ BASE_URL }}condominiums/{{ receipt.condominium_id }}/receipts/{{ receipt.id }}"
                       class="btn btn-outline-info btn-sm flex-fill">
                        <i class="bi bi-eye"></i> Ver
                    </a>
                    <a href="{{ BASE_URL }}condominiums/{{ receipt.condominium_id }}/receipts/{{ receipt.id }}/download"
                       class="btn btn-primary btn-sm flex-fill">
                        <i class="bi bi-download"></i> PDF
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="card shadow">
        <div class="card-body text-center py-5">
            <i class="bi bi-receipt display-1 text-muted"></i>
            <h5 class="mt-3">Nenhum recibo encontrado</h5>
            <p class="text-muted">Não foram encontrados recibos com os filtros selecionados.</p>
        </div>
    </div>
    {% endif %}
</div>
