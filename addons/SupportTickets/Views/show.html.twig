<div class="container py-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ BASE_URL }}admin/tickets">Tickets</a></li>
            <li class="breadcrumb-item active">#{{ ticket.id }}</li>
        </ol>
    </nav>

    {% if session.success is defined and session.success %}
    <div class="alert alert-success">{{ session.success }}</div>
    {% endif %}
    {% if session.error is defined and session.error %}
    <div class="alert alert-danger">{{ session.error }}</div>
    {% endif %}

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">#{{ ticket.id }} – {{ ticket.subject }}</h5>
            <span class="badge {% if ticket.status == 'open' %}bg-warning{% elseif ticket.status == 'in_progress' %}bg-info{% elseif ticket.status == 'resolved' %}bg-success{% else %}bg-secondary{% endif %}">
                {% if ticket.status == 'open' %}Aberto{% elseif ticket.status == 'in_progress' %}Em progresso{% elseif ticket.status == 'resolved' %}Resolvido{% else %}Fechado{% endif %}
            </span>
        </div>
        <div class="card-body">
            <p class="text-muted small mb-0">
                Tipo: {% if ticket.type == 'problem' %}Problema{% elseif ticket.type == 'error' %}Erro{% else %}Sugestão{% endif %}
                · Criado em {{ ticket.created_at }}
            </p>
        </div>
    </div>

    <div class="mb-4">
        <h6 class="mb-3">Mensagens</h6>
        {% for msg in messages %}
        <div class="card mb-2">
            <div class="card-body py-2">
                <p class="small text-muted mb-1">{{ msg.user_name|default('Utilizador') }} · {{ msg.created_at }}</p>
                <div class="ticket-message-body">{{ msg.body_html|raw }}</div>
            </div>
        </div>
        {% endfor %}
    </div>

    {% if user.role == 'super_admin' %}
    <div class="card mb-4">
        <div class="card-header">Alterar estado</div>
        <div class="card-body">
            <form method="post" action="{{ BASE_URL }}admin/tickets/{{ ticket.id }}/status" class="d-inline">
                <select name="status" class="form-select form-select-sm d-inline-block w-auto">
                    <option value="open" {% if ticket.status == 'open' %}selected{% endif %}>Aberto</option>
                    <option value="in_progress" {% if ticket.status == 'in_progress' %}selected{% endif %}>Em progresso</option>
                    <option value="resolved" {% if ticket.status == 'resolved' %}selected{% endif %}>Resolvido</option>
                    <option value="closed" {% if ticket.status == 'closed' %}selected{% endif %}>Fechado</option>
                </select>
                <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
            </form>
        </div>
    </div>
    {% endif %}

    <div class="card">
        <div class="card-header">Responder</div>
        <div class="card-body">
            <form method="post" action="{{ BASE_URL }}admin/tickets/{{ ticket.id }}/reply">
                <textarea id="reply_body" name="body_html" class="form-control" rows="6" placeholder="Escreva a sua resposta..."></textarea>
                <button type="submit" class="btn btn-primary mt-2">Enviar resposta</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ BASE_URL }}admin/tickets" class="btn btn-outline-secondary">Voltar à lista</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/tinymce@6/tinymce.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var uploadUrl = '{{ BASE_URL }}admin/tickets/upload-image';
    tinymce.init({
        selector: '#reply_body',
        height: 200,
        menubar: false,
        plugins: 'lists link image code',
        toolbar: 'undo redo | bold italic | bullist numlist | link image | code',
        content_style: 'body { font-family: Arial, sans-serif; font-size: 14px; }',
        language: 'pt_PT',
        branding: false,
        promotion: false,
        images_upload_url: uploadUrl,
        images_upload_handler: function (blobInfo, progress) {
            return new Promise(function (resolve, reject) {
                var xhr = new XMLHttpRequest();
                xhr.open('POST', uploadUrl);
                xhr.upload.onprogress = function (e) { progress(e.loaded / e.total * 100); };
                xhr.onload = function () {
                    if (xhr.status === 403) { reject({ message: 'HTTP Error: ' + xhr.status, remove: true }); return; }
                    if (xhr.status < 200 || xhr.status >= 300) { reject('HTTP Error: ' + xhr.status); return; }
                    try {
                        var json = JSON.parse(xhr.responseText);
                        if (json && json.success && json.data && typeof json.data.location === 'string') { resolve(json.data.location); return; }
                        if (json && typeof json.location === 'string') { resolve(json.location); return; }
                        reject('Invalid JSON response');
                    } catch (e) { reject('Failed to parse JSON'); }
                };
                xhr.onerror = function () { reject('Upload failed'); };
                var formData = new FormData();
                formData.append('file', blobInfo.blob(), blobInfo.filename());
                xhr.send(formData);
            });
        }
    });
});
</script>
