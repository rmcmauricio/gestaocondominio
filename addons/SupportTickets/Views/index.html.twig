<div class="container py-3">
    <h2 class="mb-4"><i class="bi bi-ticket-perforated"></i> Tickets</h2>
    <p class="text-muted">Reporte problemas, erros ou sugestões. Os seus tickets aparecem abaixo.</p>

    <a href="{{ BASE_URL }}admin/tickets/create" class="btn btn-primary mb-4">
        <i class="bi bi-plus-circle"></i> Novo ticket
    </a>

    {% if tickets is defined and tickets|length > 0 %}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Assunto</th>
                    <th>Tipo</th>
                    <th>Estado</th>
                    {% if show_user_column is defined and show_user_column %}
                    <th>Utilizador</th>
                    {% endif %}
                    <th>Data</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for t in tickets %}
                <tr>
                    <td>{{ t.id }}</td>
                    <td>{{ t.subject }}</td>
                    <td>
                        {% if t.type == 'problem' %}Problema
                        {% elseif t.type == 'error' %}Erro
                        {% elseif t.type == 'suggestion' %}Sugestão
                        {% else %}{{ t.type }}{% endif %}
                    </td>
                    <td>
                        <span class="badge {% if t.status == 'open' %}bg-warning{% elseif t.status == 'in_progress' %}bg-info{% elseif t.status == 'resolved' %}bg-success{% else %}bg-secondary{% endif %}">
                            {% if t.status == 'open' %}Aberto
                            {% elseif t.status == 'in_progress' %}Em progresso
                            {% elseif t.status == 'resolved' %}Resolvido
                            {% elseif t.status == 'closed' %}Fechado
                            {% else %}{{ t.status }}{% endif %}
                        </span>
                    </td>
                    {% if show_user_column is defined and show_user_column %}
                    <td>{{ t.user_name|default('-') }} ({{ t.user_email|default('-') }})</td>
                    {% endif %}
                    <td>{{ t.updated_at|default(t.created_at)|slice(0, 16) }}</td>
                    <td>
                        <a href="{{ BASE_URL }}admin/tickets/{{ t.id }}" class="btn btn-sm btn-outline-primary">Ver</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="alert alert-info">Ainda não tem tickets. <a href="{{ BASE_URL }}admin/tickets/create">Criar o primeiro</a>.</div>
    {% endif %}
</div>
